--- 
import Layout from '../../layouts/Layout.astro';
import Footer from '../../components/Footer.astro';
import { publications } from '../../data/publications.js';
import { metrics } from '../../data/metrics.ts';
import { translations } from '../../data/i18n.ts';

const t = translations.es;
---

<Layout
  title="Ramon Roca Pinilla - Ingeniero Biomédico"
  description="Ingeniero biomédico especializado en proteínas antimicrobianas, vectores AAV y cuerpos de inclusión funcionales."
  lang="es"
>
  <!-- Simple Navigation -->
  <nav class="fixed top-0 left-0 right-0 z-50 bg-black/80 backdrop-blur-sm border-b border-white/10">
    <div class="max-w-6xl mx-auto px-6 py-4 flex justify-between items-center">
      <a href="/Portfolio/es/" class="text-xl font-bold text-white">RRP</a>
      <div class="flex gap-8">
        <a href="#about" class="text-gray-300 hover:text-white transition">{t.nav.about}</a>
        <a href="#research" class="text-gray-300 hover:text-white transition">{t.nav.research}</a>
        <a href="#publications" class="text-gray-300 hover:text-white transition">{t.nav.publications}</a>
        <a href="#contact" class="text-gray-300 hover:text-white transition">{t.nav.contact}</a>
      </div>
    </div>
  </nav>

  <main>
    <!-- Clean Hero -->
    <section class="min-h-screen flex items-center justify-center bg-gradient-to-b from-gray-900 to-black">
      <div class="text-center px-6">
        <h1 class="text-5xl md:text-7xl font-light text-white mb-4">
          {t.hero.title}
        </h1>
        <p class="text-xl md:text-2xl text-gray-300 mb-2">
          {t.hero.subtitle}
        </p>
        <p class="text-lg text-gray-400 max-w-2xl mx-auto mt-6">
          {t.hero.tagline}
        </p>
        <div class="mt-12 flex justify-center gap-4">
          <a href="#publications" class="px-8 py-3 bg-red-600 text-white rounded hover:bg-red-700 transition">
            Ver Publicaciones
          </a>
          <a href="#contact" class="px-8 py-3 border border-white/20 text-white rounded hover:bg-white/10 transition">
            {t.nav.contact}
          </a>
        </div>
      </div>
    </section>

    <!-- About -->
    <section id="about" class="py-24 bg-black">
      <div class="max-w-4xl mx-auto px-6">
        <h2 class="text-3xl font-bold text-white mb-8">{t.sections.aboutMe}</h2>
        <div class="space-y-4 text-gray-300">
          <p>
            I'm a biomedical engineer at the Children's Medical Research Institute in Sydney, 
            specializing in the development of next-generation therapeutics through protein engineering.
          </p>
          <p>
            My research focuses on three main areas:
          </p>
          <ul class="list-disc list-inside space-y-2 ml-4">
            <li><strong>Antimicrobial Proteins:</strong> Designing recombinant host defense peptides to combat drug-resistant bacteria</li>
            <li><strong>AAV Vectors:</strong> Developing improved viral vectors for gene therapy and CAR-T cell generation</li>
            <li><strong>Functional Inclusion Bodies:</strong> Engineering protein aggregates as smart biomaterials for biotechnology</li>
          </ul>
          <p class="mt-6">
            With {metrics.publications} peer-reviewed publications and {metrics.citations}+ citations, 
            my work bridges computational design and experimental validation to create practical therapeutic solutions.
          </p>
        </div>
      </div>
    </section>

    <!-- Research Areas -->
    <section id="research" class="py-24 bg-gray-900">
      <div class="max-w-6xl mx-auto px-6">
        <h2 class="text-3xl font-bold text-white mb-12 text-center">Research Areas</h2>
        <div class="grid md:grid-cols-3 gap-8">
          <div class="bg-black/50 p-8 rounded-lg">
            <h3 class="text-xl font-bold text-white mb-4">Antimicrobial Proteins</h3>
            <p class="text-gray-400">
              Engineering recombinant multidomain proteins and host defense peptides with enhanced antimicrobial 
              activity against drug-resistant pathogens. Focus on protein nanoclusters and surface immobilization 
              for antibiofilm applications.
            </p>
          </div>
          <div class="bg-black/50 p-8 rounded-lg">
            <h3 class="text-xl font-bold text-white mb-4">AAV Vector Development</h3>
            <p class="text-gray-400">
              Tailoring capsid-directed evolution technology for improved AAV vectors. Applications in CAR-T cell 
              generation and liver-targeted gene therapy using ex situ perfusion models for preclinical evaluation.
            </p>
          </div>
          <div class="bg-black/50 p-8 rounded-lg">
            <h3 class="text-xl font-bold text-white mb-4">Functional Inclusion Bodies</h3>
            <p class="text-gray-400">
              Developing inclusion bodies as functional biomaterials. Engineering leucine zipper-based aggregation 
              systems and exploring therapeutic applications of protein aggregates in biotechnology.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Key Metrics -->
    <section class="py-16 bg-black">
      <div class="max-w-4xl mx-auto px-6">
        <div class="grid grid-cols-3 gap-8 text-center">
          <div>
            <div class="text-4xl font-bold text-white">{metrics.publications}</div>
            <div class="text-gray-400 mt-2">Publications</div>
          </div>
          <div>
            <div class="text-4xl font-bold text-white">{metrics.citations}+</div>
            <div class="text-gray-400 mt-2">Citations</div>
          </div>
          <div>
            <div class="text-4xl font-bold text-white">2017-2024</div>
            <div class="text-gray-400 mt-2">Research Years</div>
          </div>
        </div>
      </div>
    </section>

    <!-- Publications -->
    <section id="publications" class="py-24 bg-gray-900">
      <div class="max-w-6xl mx-auto px-6">
        <h2 class="text-3xl font-bold text-white mb-12 text-center">{t.sections.selectedPublications}</h2>
        
        <!-- Featured Papers -->
        <div class="mb-12">
          <h3 class="text-xl font-semibold text-red-400 mb-6">Featured Work</h3>
          <div class="space-y-4">
            {publications.filter(p => p.featured).map(pub => (
              <div class="bg-black/50 p-6 rounded-lg border-l-4 border-red-600">
                <div class="flex justify-between items-start mb-2">
                  <h4 class="text-lg font-semibold text-white flex-1 mr-4">{pub.title}</h4>
                  <span class="text-sm text-gray-400 flex-shrink-0">{pub.year}</span>
                </div>
                <p class="text-gray-400">{pub.journal}</p>
                {pub.url && (
                  <a href={pub.url} target="_blank" rel="noopener" class="text-red-400 hover:text-red-300 text-sm mt-2 inline-block">
                    View Paper →
                  </a>
                )}
              </div>
            ))}
          </div>
        </div>

        <!-- All Publications -->
        <div>
          <h3 class="text-xl font-semibold text-gray-400 mb-6">All Publications</h3>
          <div class="grid md:grid-cols-2 gap-4">
            {publications.filter(p => !p.featured).map(pub => (
              <div class="bg-black/30 p-4 rounded-lg">
                <div class="flex justify-between items-start mb-1">
                  <h4 class="text-sm font-medium text-white flex-1 mr-4">{pub.title}</h4>
                  <span class="text-xs text-gray-500 flex-shrink-0">{pub.year}</span>
                </div>
                <p class="text-xs text-gray-500">{pub.journal}</p>
              </div>
            ))}
          </div>
        </div>

        <!-- Links -->
        <div class="mt-12 flex justify-center gap-6">
          <a href="https://scholar.google.com/citations?user=jYIZGT0AAAAJ" target="_blank" rel="noopener" 
             class="text-gray-400 hover:text-white transition">
            Google Scholar
          </a>
          <a href="https://orcid.org/0000-0002-7393-6200" target="_blank" rel="noopener" 
             class="text-gray-400 hover:text-white transition">
            ORCID
          </a>
          <a href="https://www.linkedin.com/in/ramonrocapinilla/" target="_blank" rel="noopener" 
             class="text-gray-400 hover:text-white transition">
            LinkedIn
          </a>
          <a href="https://github.com/RRocaP" target="_blank" rel="noopener" 
             class="text-gray-400 hover:text-white transition">
            GitHub
          </a>
        </div>
      </div>
    </section>

    <!-- Contact -->
    <section id="contact" class="py-24 bg-black">
      <div class="max-w-4xl mx-auto px-6 text-center">
        <h2 class="text-3xl font-bold text-white mb-8">Contact</h2>
        <p class="text-gray-300 mb-8">
          I welcome collaborations on antimicrobial protein design, viral vector development, 
          and computational approaches to therapeutic engineering.
        </p>
        <div class="space-y-4">
          <p class="text-gray-400">
            <strong class="text-white">Email:</strong> ramon.rocap@gmail.com
          </p>
          <p class="text-gray-400">
            <strong class="text-white">Location:</strong> Children's Medical Research Institute, Sydney, Australia
          </p>
        </div>
        <div class="mt-8">
          <a href="mailto:ramon.rocap@gmail.com" 
             class="inline-block px-8 py-3 bg-red-600 text-white rounded hover:bg-red-700 transition">
            Get in Touch
          </a>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>

<style>
  html {
    scroll-behavior: smooth;
  }
  
  @media (prefers-reduced-motion: reduce) {
    html {
      scroll-behavior: auto;
    }
  }
</style>