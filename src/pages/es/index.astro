            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <Footer />
</Layout>

<style>
  /* General Animations */
  .animate-fade-in-up {
    animation: fade-in-up 0.8s cubic-bezier(0.2, 0.8, 0.2, 1) forwards;
    opacity: 0;
  }

  @keyframes fade-in-up {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  /* About Text Styling */
  .about-text-container {
    margin-top: 3rem;
  }
  
  .about-text-split {
    display: grid;
    grid-template-columns: 1fr 1.2fr;
    gap: 4rem;
    align-items: start;
  }
  
  .about-left {
    position: sticky;
    top: 100px;
  }
  
  .about-left .lead {
    font-size: 1.4rem;
    line-height: 1.6;
    font-weight: 300;
    color: var(--primary);
    letter-spacing: -0.01em;
  }
  
  .typewriter {
    position: relative;
    display: inline-block;
  }
  
  .typewriter::after {
    content: '|';
    position: absolute;
    right: -2px;
    color: var(--accent-red);
    animation: blink 1s infinite;
  }
  
  @keyframes blink {
    0%, 50% { opacity: 1; }
    51%, 100% { opacity: 0; }
  }
  
  .about-right {
    padding-top: 0.5rem;
  }
  
  .about-detail {
    font-size: 1.05rem;
    line-height: 1.8;
    color: var(--secondary);
    margin-bottom: 1.5rem;
    opacity: 0.85;
  }
  
  .about-detail .highlight {
    color: var(--primary);
    font-weight: 500;
    position: relative;
    padding: 0 2px;
  }
  
  .about-meta {
    font-size: 0.9rem;
    color: var(--tertiary);
    opacity: 0.6;
    margin-top: 2rem;
    padding-top: 1rem;
    border-top: 1px solid rgba(255, 255, 255, 0.05);
  }
  
  @keyframes fade-in-left {
    from {
      opacity: 0;
      transform: translateX(-20px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }
  
  @keyframes fade-in-right {
    from {
      opacity: 0;
      transform: translateX(20px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }
  
  .animate-fade-in-left {
    animation: fade-in-left 0.8s ease-out forwards;
    opacity: 0;
  }
  
  .animate-fade-in-right {
    animation: fade-in-right 0.8s ease-out 0.2s forwards;
    opacity: 0;
  }
  
  @media (max-width: 768px) {
    .about-text-split {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
    
    .about-left {
      position: static;
    }
    
    .about-left .lead {
      font-size: 1.2rem;
    }
  }

  /* Animation Delays */
  .animate-delay-1 { animation-delay: 0.1s; }
  .animate-delay-2 { animation-delay: 0.2s; }
  .animate-delay-3 { animation-delay: 0.3s; }
  .animate-delay-4 { animation-delay: 0.4s; }

  /* Hero Section */
  .hero {
    min-height: 100vh;
    display: flex;
    align-items: center;
    position: relative;
    overflow: hidden;
    padding-top: 80px;
  }

  .hero {
    /* Remove background to show geometric design */
    background: transparent;
    /* Darker Claude-style red only for this page's hero */
    --accent-red: #D72638;
    --accent-red-rgb: 215, 38, 56;
  }

  .hero-content {
    text-align: left;
    max-width: 900px;
    margin: 0;
    margin-left: 8vw;
    position: relative;
    z-index: 10;
  }
  
  .hero .container {
    position: relative;
    z-index: 10;
  }

  .hero-title {
    font-family: var(--font-display);
    font-size: clamp(2.5rem, 7vw, 4.5rem);
    color: var(--primary);
    margin-bottom: 1rem;
    position: relative;
    line-height: 1.1;
  }
  
  .hero-name-first {
    font-weight: 300;
    display: block;
    margin-bottom: -0.1em;
    letter-spacing: -0.01em;
  }
  
  .hero-name-last {
    font-weight: 700;
    display: block;
    letter-spacing: -0.02em;
    background: linear-gradient(135deg, var(--primary) 0%, var(--accent-red) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
  
  .hero-title::after {
    content: '';
    display: block;
    width: 60px;
    height: 2px;
    margin: 20px 0;
    background: linear-gradient(90deg, var(--accent-red), transparent);
    opacity: 0.6;
    border-radius: 1px;
  }

  .hero-subtitle { 
    font-size: 0.95rem; 
    color: var(--secondary); 
    margin-bottom: 1.5rem; 
    font-weight: 500;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    display: flex;
    align-items: center;
    gap: 1rem;
    opacity: 0.9;
  }
  
  .subtitle-divider {
    width: 4px;
    height: 4px;
    background: var(--accent-red);
    border-radius: 50%;
    opacity: 0.5;
  }

  /* Mobile tweaks */
  @media (max-width: 480px) {
    .hero-content {
      text-align: center;
      margin: 0 auto;
      padding: 0 1.5rem;
    }
    .hero-name-first, .hero-name-last { display: inline; }
    .hero-title { font-size: clamp(2rem, 8vw, 2.75rem); }
    .hero-title::after { margin: 14px auto 0; }
    .hero-subtitle { font-size: 0.85rem; justify-content: center; }
    .hero-tagline { margin: 0 auto 2rem; }
    .hero-cta { 
      flex-direction: column;
      align-items: center;
      justify-content: center;
    }
    .btn { width: 100%; max-width: 280px; }
  }

  .hero-tagline { 
    font-size: 1.2rem; 
    color: var(--tertiary); 
    margin-bottom: 3rem;
    line-height: 1.7;
    max-width: 580px;
    font-weight: 300;
    letter-spacing: -0.01em;
    opacity: 0.85;
  }

  .hero-cta {
    display: flex;
    gap: 1.2rem;
    justify-content: flex-start;
    flex-wrap: wrap;
  }
  .metrics {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
    gap: 1rem;
    margin-top: 2rem;
  }
  .metric {
    background: var(--background-card);
    border: 1px solid var(--border);
    border-radius: 12px;
    padding: 1rem 1.25rem;
    text-align: center;
  }
  .metric-value {
    display: block;
    font-family: var(--font-display);
    font-weight: 800;
    font-size: 1.75rem;
    letter-spacing: -0.02em;
    background: var(--gradient-catalan);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
  .metric-label {
    display: block;
    color: var(--tertiary);
    font-size: 0.9rem;
    margin-top: 0.25rem;
  }

  .btn {
    padding: 0.75rem 2rem;
    border-radius: 50px;
    font-weight: 500;
    transition: all 0.3s ease;
    display: inline-block;
  }

  .btn-primary {
    background: var(--gradient-catalan);
    color: white;
    box-shadow: 0 4px 15px rgba(218, 41, 28, 0.3);
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(218, 41, 28, 0.4);
  }

  .btn-outline {
    border: 2px solid var(--primary);
    color: var(--primary);
  }

  .btn-outline:hover {
    background: var(--primary);
    color: white;
  }

  /* Sections */
  .section {
    padding: calc(var(--space-xl) * 1.5) 0;
  }

  /* About Section - Timeline Roadmap */
  .about-section {
    background: var(--background);
    position: relative;
    overflow: hidden;
  }
  
  .timeline-roadmap {
    position: relative;
    margin: var(--space-lg) 0;
    min-height: 600px;
  }
  
  .timeline-path {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
  }
  
  .timeline-content {
    position: relative;
    display: grid;
    grid-template-columns: repeat(5, 1fr);
    gap: var(--space-md);
    padding: var(--space-lg) 0;
  }
  
  .timeline-item {
    position: relative;
    animation-delay: calc(var(--index) * 0.1s);
  }
  
  .timeline-dot {
    width: 16px;
    height: 16px;
    background: var(--accent-red);
    border: 3px solid var(--background);
    border-radius: 50%;
    position: absolute;
    top: -8px;
    left: 50%;
    transform: translateX(-50%);
    z-index: 2;
    box-shadow: 0 0 0 8px rgba(218, 41, 28, 0.1);
  }
  
  .timeline-card {
    background: var(--background);
    border: 1px solid var(--border);
    border-radius: 8px;
    padding: var(--space-sm) var(--space-md);
    margin-top: var(--space-md);
    transition: all 0.3s ease;
    position: relative;
  }
  
  .timeline-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.08);
    border-color: var(--accent-red);
  }
  
  .timeline-card.highlight {
    background: linear-gradient(135deg, rgba(218, 41, 28, 0.05) 0%, rgba(255, 217, 61, 0.05) 100%);
    border-color: var(--accent-red);
  }
  
  .timeline-year {
    display: inline-block;
    font-size: 0.85rem;
    font-weight: var(--font-weight-medium);
    color: var(--accent-red);
    margin-bottom: var(--space-xs);
  }
  
  .timeline-card h3 {
    font-size: 1.1rem;
    margin-bottom: 0.25rem;
    font-weight: var(--font-weight-medium);
  }
  
  .timeline-card p {
    font-size: 0.95rem;
    color: var(--secondary);
    margin-bottom: 0.25rem;
  }
  
  .timeline-card small {
    font-size: 0.85rem;
    color: var(--tertiary);
    line-height: 1.4;
  }
  
  .profile-end {
    grid-column: 5;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: var(--space-lg);
  }
  
  .profile-end img {
    width: 120px;
    height: 120px;
    border-radius: 50%;
    object-fit: cover;
    border: 4px solid var(--background);
    box-shadow: 0 0 0 1px var(--border), 0 8px 24px rgba(0, 0, 0, 0.1);
    margin-bottom: var(--space-sm);
  }
  
  .profile-info {
    text-align: center;
  }
  
  .profile-info h3 {
    font-size: 1.2rem;
    margin-bottom: 0.25rem;
  }
  
  .profile-info p {
    font-size: 0.9rem;
    color: var(--secondary);
  }
  
  .about-text {
    max-width: 800px;
    margin: var(--space-xl) auto 0;
    text-align: center;
  }
  
  .about-text p {
    text-align: justify;
    margin-bottom: var(--space-md);
  }
  
  .accent-bar {
    display: none;
  }

  .lead {
    font-size: 1.1rem;
    color: var(--secondary);
