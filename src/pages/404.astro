---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Page Not Found - Ramon Roca Pinilla">
  <Navigation />
  
  <main class="error-page">
    <div class="container">
      <div class="error-content">
        <h1 class="error-code">404</h1>
        <h2 class="error-title">Page Not Found</h2>
        <p class="error-message">
          The page you're looking for doesn't exist or has been moved.
        </p>
        <div class="error-actions">
          <a href={import.meta.env.BASE_URL} class="btn btn-primary">Return Home</a>
          <a href={`${import.meta.env.BASE_URL}en/#research`} class="btn btn-outline">View Research</a>
        </div>
      </div>
    </div>
  </main>
  
  <Footer />
</Layout>

<style>
  .error-page {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem 0;
    background: var(--background);
  }
  
  .error-content {
    text-align: center;
    max-width: 600px;
    margin: 0 auto;
    padding: 3rem 1rem;
  }
  
  .error-code {
    font-size: clamp(5rem, 15vw, 8rem);
    font-weight: 800;
    font-family: var(--font-display);
    background: linear-gradient(135deg, var(--accent-red) 0%, var(--accent-yellow) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    margin: 0 0 1rem;
    line-height: 1;
    letter-spacing: -0.05em;
  }
  
  .error-title {
    font-size: 2rem;
    font-weight: 700;
    color: var(--primary);
    margin-bottom: 1rem;
  }
  
  .error-message {
    font-size: 1.1rem;
    color: var(--secondary);
    margin-bottom: 2.5rem;
    line-height: 1.6;
  }
  
  .error-actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }
  
  .btn {
    padding: 0.75rem 1.5rem;
    border-radius: 8px;
    font-weight: 500;
    text-decoration: none;
    display: inline-block;
    transition: all 0.3s ease;
  }
  
  .btn-primary {
    background: var(--accent-red);
    color: white;
    border: 2px solid var(--accent-red);
  }
  
  .btn-primary:hover {
    background: transparent;
    color: var(--accent-red);
    transform: translateY(-2px);
  }
  
  .btn-outline {
    background: transparent;
    color: var(--primary);
    border: 2px solid var(--border);
  }
  
  .btn-outline:hover {
    border-color: var(--accent-yellow);
    color: var(--accent-yellow);
    transform: translateY(-2px);
  }
  
  @media (max-width: 640px) {
    .error-actions {
      flex-direction: column;
    }
    
    .btn {
      width: 100%;
      text-align: center;
    }
  }
</style>
