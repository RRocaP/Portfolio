---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import ProteinStructure from '../components/ProteinStructure.astro';
import AntimicrobialResistanceTimeline from '../components/AntimicrobialResistanceTimeline';
import Timeline from '../components/Timeline.astro';
import Footer from '../components/Footer.astro';

// Import i18n strings - for now defaulting to English
import enStrings from '../i18n/en.json';

const currentLang = 'en';
const strings = enStrings;
---

<Layout
  title="Ramon Roca Pinilla - Biomedical Engineer & Molecular Biologist"
  description="Teaching computers to design proteins that kill superbugs and deliver gene therapies where they're needed most"
  lang="en"
  canonicalUrl="https://rrocap.github.io/Portfolio/"
>
  <Navigation id="navigation" />

  <!-- Hero Section with Modern Glass Morphism -->
  <main id="main-content">
  <section id="home" class="hero">
    <div class="hero-background">
      <div class="gradient-orb orb-1"></div>
      <div class="gradient-orb orb-2"></div>
      <div class="gradient-orb orb-3"></div>
    </div>
    <div class="hero-content container">
      <h1 class="hero-title" data-split-text>Ramon Roca Pinilla</h1>
      <p class="hero-subtitle">Biomedical Engineer & Molecular Biologist</p>
      <p class="hero-tagline">
        Teaching computers to design proteins that kill superbugs and deliver
        gene therapies where they're needed most
      </p>
      <div class="hero-cta">
        <a href="#about" class="btn btn-primary">
          <span>Learn More</span>
          <svg
            class="btn-icon"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            aria-hidden="true"
          >
            <path d="M19 12H5M12 19l7-7-7-7"></path>
          </svg>
        </a>
        <a href="#contact" class="btn btn-outline">
          <span>Get in Touch</span>
        </a>
      </div>
      <div class="hero-scroll-indicator">
        <div class="mouse">
          <div class="wheel"></div>
        </div>
      </div>
    </div>
  </section>

  <!-- Quote Section with Parallax -->
  <section class="quote-section" data-parallax>
    <div class="container">
      <blockquote class="quote-card">
        <p class="quote-text">"The power of imagination makes us infinite."</p>
        <cite class="quote-author">— John Muir</cite>
      </blockquote>
    </div>
  </section>

  <!-- About Section with Timeline -->
  <section id="about" class="section about-section">
    <div class="container">
      <div class="section-header">
        <h2 class="section-title" data-animate="fade-up">About Me</h2>
        <div class="section-divider"></div>
      </div>

      <div class="about-grid">
        <div class="about-content" data-animate="fade-right">
          <p class="lead-text">
            I'm a researcher at the intersection of <span class="text-accent"
              >biology and technology</span
            >, working to solve healthcare's most pressing challenges through
            innovative protein design and gene therapy.
          </p>
          <p>
            Currently at the <strong
              >Children's Medical Research Institute</strong
            > in Sydney, I focus on developing next-generation antimicrobial peptides
            and optimizing gene delivery systems using machine learning and molecular
            biology.
          </p>
          <div class="about-stats">
            <div class="stat-card">
              <span class="stat-number" data-count="16">0</span>
              <span class="stat-label">Publications</span>
            </div>
            <div class="stat-card">
              <span class="stat-number" data-count="3">0</span>
              <span class="stat-label">Patents</span>
            </div>
            <div class="stat-card">
              <span class="stat-number" data-count="10">0</span>
              <span class="stat-label">Years Research</span>
            </div>
          </div>
        </div>

        <div class="about-visual" data-animate="fade-left">
          <div class="skill-cloud">
            <span class="skill-tag" data-level="expert">Machine Learning</span>
            <span class="skill-tag" data-level="expert">Protein Design</span>
            <span class="skill-tag" data-level="advanced">Gene Therapy</span>
            <span class="skill-tag" data-level="expert">Python</span>
            <span class="skill-tag" data-level="advanced"
              >Molecular Biology</span
            >
            <span class="skill-tag" data-level="intermediate">Data Science</span
            >
            <span class="skill-tag" data-level="advanced">AAV Engineering</span>
            <span class="skill-tag" data-level="expert">Peptide Synthesis</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Journey Timeline with Dashed Path -->
  <section id="journey" class="section journey-section">
    <div class="container">
      <div class="section-header">
        <h2 class="section-title" data-animate="fade-up">My Journey</h2>
        <div class="section-divider"></div>
      </div>

      <div class="timeline-roadmap">
        <svg
          class="timeline-path"
          viewBox="0 0 1200 600"
          preserveAspectRatio="none"
        >
          <path
            d="M 100,500 Q 300,400 400,300 T 600,200 Q 800,150 1000,100"
            stroke="url(#gradient-path)"
            stroke-width="3"
            fill="none"
            stroke-dasharray="8,4"
            opacity="0.3"></path>
          <defs>
            <linearGradient
              id="gradient-path"
              x1="0%"
              y1="0%"
              x2="100%"
              y2="0%"
            >
              <stop offset="0%" style="stop-color:#DA291C;stop-opacity:1"
              ></stop>
              <stop offset="100%" style="stop-color:#FFD93D;stop-opacity:1"
              ></stop>
            </linearGradient>
          </defs>
        </svg>

        <div class="timeline-content">
          <div class="timeline-item" style="--index: 1">
            <div class="timeline-dot"></div>
            <div class="timeline-card">
              <span class="timeline-year">2013</span>
              <h3>B.S. Biotechnology</h3>
              <p>Universitat Autònoma de Barcelona</p>
              <small>Foundation in molecular biology</small>
            </div>
          </div>

          <div class="timeline-item" style="--index: 2">
            <div class="timeline-dot"></div>
            <div class="timeline-card">
              <span class="timeline-year">2015</span>
              <h3>M.S. Biomedical Engineering</h3>
              <p>UC Irvine</p>
              <small>Engineering approaches to biological problems</small>
            </div>
          </div>

          <div class="timeline-item" style="--index: 3">
            <div class="timeline-dot"></div>
            <div class="timeline-card">
              <span class="timeline-year">2020</span>
              <h3>Ph.D. in Biomedicine</h3>
              <p>Autonomous University of Barcelona</p>
              <small>Molecular Biology & Biochemistry</small>
            </div>
          </div>

          <div class="timeline-item" style="--index: 4">
            <div class="timeline-dot"></div>
            <div class="timeline-card">
              <span class="timeline-year">2021</span>
              <h3>Postdoctoral Researcher</h3>
              <p>Children's Medical Research Institute</p>
              <small>Translational Vectorology Unit • Sydney</small>
            </div>
          </div>

          <div class="timeline-item" style="--index: 5">
            <div class="timeline-dot"></div>
            <div class="timeline-card highlight">
              <span class="timeline-year">Now</span>
              <h3>Fighting Drug Resistance</h3>
              <p>Next-Gen Antimicrobials</p>
              <small>AI meets wet-lab validation</small>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Academic Timeline Section -->
  <Timeline lang={currentLang} strings={strings} />

  <!-- Research Section with Interactive Elements -->
  <section id="research" class="section research-section">
    <div class="container">
      <div class="section-header">
        <h2 class="section-title" data-animate="fade-up">Research Focus</h2>
        <div class="section-divider"></div>
        <p class="section-description">
          Bridging computational biology and experimental validation to create
          transformative medical solutions
        </p>
      </div>

      <div class="research-showcase">
        <ProteinStructure />
      </div>

      <div class="research-grid">
        <article class="research-card" data-animate="scale-up">
          <div class="card-header">
            <div class="card-icon-wrapper">
              <svg
                class="card-icon"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
              >
                <path
                  d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"
                ></path>
              </svg>
            </div>
            <h3 class="card-title">AI-Designed Antimicrobials</h3>
          </div>
          <p class="card-description">
            Engineering next-generation peptides to combat antibiotic-resistant
            superbugs using deep learning and molecular dynamics simulations.
          </p>
          <div class="card-tags">
            <span class="tag">Deep Learning</span>
            <span class="tag">Peptide Design</span>
            <span class="tag">MD Simulations</span>
          </div>
        </article>

        <article class="research-card" data-animate="scale-up" data-delay="100">
          <div class="card-header">
            <div class="card-icon-wrapper">
              <svg
                class="card-icon"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
              >
                <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                <polyline points="9 22 9 12 15 12 15 22"></polyline>
              </svg>
            </div>
            <h3 class="card-title">Gene Therapy Optimization</h3>
          </div>
          <p class="card-description">
            Developing tissue-specific AAV vectors for targeted gene delivery,
            with focus on treating Friedreich's ataxia and other genetic
            disorders.
          </p>
          <div class="card-tags">
            <span class="tag">AAV Engineering</span>
            <span class="tag">Gene Delivery</span>
            <span class="tag">Tissue Targeting</span>
          </div>
        </article>

        <article class="research-card" data-animate="scale-up" data-delay="200">
          <div class="card-header">
            <div class="card-icon-wrapper">
              <svg
                class="card-icon"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
              >
                <path d="M13 2L3 14h9l-1 8 10-12h-9l1-8z"></path>
              </svg>
            </div>
            <h3 class="card-title">High-Throughput Screening</h3>
          </div>
          <p class="card-description">
            Implementing automated discovery pipelines that accelerate the
            identification of therapeutic candidates from months to days.
          </p>
          <div class="card-tags">
            <span class="tag">Automation</span>
            <span class="tag">Drug Discovery</span>
            <span class="tag">AI Pipeline</span>
          </div>
        </article>
      </div>

      <!-- Interactive Timeline Component -->
      <div class="timeline-section">
        <h3 class="subsection-title">Antimicrobial Resistance Timeline</h3>
        <AntimicrobialResistanceTimeline client:visible />
      </div>
    </div>
  </section>

  <!-- Publications Section with Filter -->
  <section id="publications" class="section publications-section">
    <div class="container">
      <div class="section-header">
        <h2 class="section-title" data-animate="fade-up">
          Selected Publications
        </h2>
        <div class="section-divider"></div>
      </div>

      <div class="publications-filter" data-animate="fade-down">
        <button class="filter-btn active" data-filter="all">All</button>
        <button class="filter-btn" data-filter="peptides">Peptides</button>
        <button class="filter-btn" data-filter="gene-therapy"
          >Gene Therapy</button
        >
        <button class="filter-btn" data-filter="ai-ml">AI/ML</button>
      </div>

      <div class="publications-grid">
        <article
          class="publication-card"
          data-category="peptides ai-ml"
          data-animate="fade-up"
        >
          <div class="publication-content">
            <h3 class="publication-title">
              <a
                href="https://www.nature.com/articles/s41598-022-07325-x"
                target="_blank"
                rel="noopener"
              >
                Antimicrobial peptide design via machine learning
              </a>
            </h3>
            <div class="publication-meta">
              <span class="journal">Nature Scientific Reports</span>
              <span class="year">2022</span>
            </div>
            <p class="publication-abstract">
              Novel approach to designing antimicrobial peptides using deep
              learning models trained on structural and functional data.
            </p>
            <div class="publication-metrics">
              <span class="metric">
                <svg
                  viewBox="0 0 24 24"
                  width="16"
                  height="16"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                >
                  <path
                    d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2z"
                  ></path>
                  <path d="M8 12l2 2 4-4"></path>
                </svg>
                45 citations
              </span>
              <span class="metric">
                <svg
                  viewBox="0 0 24 24"
                  width="16"
                  height="16"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                >
                  <path
                    d="M15 7h3a5 5 0 0 1 5 5 5 5 0 0 1-5 5h-3m-6 0H6a5 5 0 0 1-5-5 5 5 0 0 1 5-5h3"
                  ></path>
                  <line x1="8" y1="12" x2="16" y2="12"></line>
                </svg>
                Open Access
              </span>
            </div>
          </div>
        </article>

        <article
          class="publication-card"
          data-category="gene-therapy"
          data-animate="fade-up"
          data-delay="100"
        >
          <div class="publication-content">
            <h3 class="publication-title">
              <a href="#" target="_blank" rel="noopener">
                Tissue-specific AAV engineering for enhanced gene delivery
              </a>
            </h3>
            <div class="publication-meta">
              <span class="journal">Gene Therapy</span>
              <span class="year">2023</span>
            </div>
            <p class="publication-abstract">
              Development of engineered AAV vectors with enhanced specificity
              for cardiac and neuronal tissues through directed evolution.
            </p>
            <div class="publication-metrics">
              <span class="metric">
                <svg
                  viewBox="0 0 24 24"
                  width="16"
                  height="16"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                >
                  <path
                    d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2z"
                  ></path>
                  <path d="M8 12l2 2 4-4"></path>
                </svg>
                28 citations
              </span>
            </div>
          </div>
        </article>

        <article
          class="publication-card"
          data-category="ai-ml peptides"
          data-animate="fade-up"
          data-delay="200"
        >
          <div class="publication-content">
            <h3 class="publication-title">
              <a href="#" target="_blank" rel="noopener">
                High-throughput screening platform for peptide therapeutics
              </a>
            </h3>
            <div class="publication-meta">
              <span class="journal">J. Biomolecular Screening</span>
              <span class="year">2023</span>
            </div>
            <p class="publication-abstract">
              Automated platform combining robotics and AI for rapid therapeutic
              peptide discovery with 100x throughput improvement.
            </p>
            <div class="publication-metrics">
              <span class="metric">
                <svg
                  viewBox="0 0 24 24"
                  width="16"
                  height="16"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                >
                  <path
                    d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2z"
                  ></path>
                  <path d="M8 12l2 2 4-4"></path>
                </svg>
                15 citations
              </span>
              <span class="metric">
                <svg
                  viewBox="0 0 24 24"
                  width="16"
                  height="16"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                >
                  <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
                  <path d="M9 9h6v6H9z"></path>
                </svg>
                Featured Article
              </span>
            </div>
          </div>
        </article>
      </div>
    </div>
  </section>

  <!-- Contact Section with Modern Design -->
  <section id="contact" class="section contact-section">
    <div class="container">
      <div class="section-header">
        <h2 class="section-title" data-animate="fade-up">Get in Touch</h2>
        <div class="section-divider"></div>
        <p class="section-description">
          Let's collaborate on solving healthcare's biggest challenges
        </p>
      </div>

      <div class="contact-wrapper">
        <div class="contact-info" data-animate="fade-right">
          <div class="contact-card glass-card">
            <div class="contact-icon">
              <svg
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
              >
                <path
                  d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                ></path>
              </svg>
            </div>
            <h3>Email</h3>
            <a href="mailto:ramon.rocap@gmail.com" class="contact-link"
              >ramon.rocap@gmail.com</a
            >
          </div>

          <div class="contact-card glass-card">
            <div class="contact-icon">
              <svg
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
              >
                <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0118 0z"></path>
                <circle cx="12" cy="10" r="3"></circle>
              </svg>
            </div>
            <h3>Location</h3>
            <p>Children's Medical Research Institute<br />Sydney, Australia</p>
          </div>
        </div>

        <div class="social-connect" data-animate="fade-left">
          <h3 class="social-title">Connect with me</h3>
          <div class="social-grid">
            <a
              href="https://www.linkedin.com/in/ramonrocapinilla/"
              target="_blank"
              rel="noopener"
              class="social-card linkedin"
            >
              <svg viewBox="0 0 24 24" fill="currentColor">
                <path
                  d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
