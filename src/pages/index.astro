<style>
  /* John Muir Quote Section */
  .quote-section {
    padding: var(--space-xl) 0;
    background: linear-gradient(135deg, rgba(218, 41, 28, 0.02) 0%, rgba(255, 217, 61, 0.02) 100%);
    position: relative;
    overflow: hidden;
  }

  .quote-section::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 10%;
    width: 200px;
    height: 200px;
    background: radial-gradient(circle, var(--accent-yellow) 0%, transparent 70%);
    opacity: 0.03;
    transform: translate(-50%, -50%);
  }

  .muir-quote {
    max-width: 800px;
    margin: 0 auto;
    text-align: center;
    position: relative;
  }

  .muir-quote p {
    font-size: var(--font-size-3xl);
    font-weight: var(--font-weight-light);
    color: var(--color-text-primary);
    line-height: var(--leading-relaxed);
    letter-spacing: var(--tracking-tight);
    margin-bottom: var(--space-8);
    font-style: italic;
    position: relative;
    font-feature-settings: "kern" 1, "liga" 1, "calt" 1;
  }

  .muir-quote p::before {
    content: '"';
    position: absolute;
    top: -20px;
    left: -40px;
    font-size: 5rem;
    color: var(--accent-red);
    opacity: 0.1;
    font-family: Georgia, serif;
  }

  .muir-quote cite {
    display: block;
    font-size: 1rem;
    color: var(--secondary);
    font-weight: var(--font-weight-medium);
    letter-spacing: 0.05em;
    text-transform: uppercase;
    font-style: normal;
    position: relative;
  }

  .muir-quote cite::before {
    content: '';
    position: absolute;
    left: 50%;
    bottom: -10px;
    transform: translateX(-50%);
    width: 40px;
    height: 2px;
    background: var(--accent-red);
    opacity: 0.5;
  }

  /* Hero Section with Modern Design */
  .hero {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding-top: 80px;
    background: var(--color-bg-primary);
    position: relative;
    overflow: hidden;
    /* Performance optimization */
    contain: layout style paint;
  }
  
  /* Floating shapes in hero */
  .floating-shape {
    position: absolute;
    opacity: 0.05;
    pointer-events: none;
    z-index: 1;
  }
  
  .floating-shape.circle {
    border-radius: 50%;
  }
  
  .floating-shape.square {
    transform: rotate(45deg);
  }
  
  .hero::before {
    content: '';
    position: absolute;
    top: -50%;
    right: -10%;
    width: 70%;
    height: 150%;
    background: radial-gradient(ellipse at center, var(--color-catalan-yellow) 0%, transparent 70%);
    opacity: 0.03;
    transform: rotate(-15deg) translateZ(0);
    z-index: 0;
    will-change: transform;
    /* GPU acceleration */
    backface-visibility: hidden;
  }
  
  .hero::after {
    content: '';
    position: absolute;
    bottom: 10%;
    left: 5%;
    width: 100px;
    height: 100px;
    border: 2px solid var(--color-catalan-red);
    opacity: 0.08;
    transform: rotate(45deg) translateZ(0);
    z-index: 0;
    animation: float 6s ease-in-out infinite;
  }
  
  @keyframes float {
    0%, 100% { transform: rotate(45deg) translateY(0) translateZ(0); }
    50% { transform: rotate(45deg) translateY(-10px) translateZ(0); }
  }

  .hero-content {
    text-align: center;
    max-width: 800px;
    margin: 0 auto;
    padding: var(--space-md);
    position: relative;
    z-index: 1;
  }

  .hero-title {
    font-size: var(--font-size-5xl);
    margin-bottom: var(--space-4);
    color: var(--color-text-primary);
    font-weight: var(--font-weight-light);
    letter-spacing: var(--tracking-tighter);
    position: relative;
    animation: fadeInUp 0.8s ease-out;
  }
  
  .hero-title::after {
    content: '';
    position: absolute;
    bottom: -10px;
    left: 50%;
    transform: translateX(-50%);
    width: 60px;
    height: 3px;
    background: linear-gradient(90deg, var(--color-catalan-red) 0%, var(--color-catalan-yellow) 100%);
    border-radius: var(--radius-full);
    animation: expandWidth 1.2s ease-out 0.6s backwards;
  }
  
  @keyframes expandWidth {
    from { width: 0; }
    to { width: 60px; }
  }

  .hero-subtitle {
    font-size: var(--font-size-xl);
    color: var(--color-text-secondary);
    margin-bottom: var(--space-2);
    margin-top: var(--space-8);
    font-weight: var(--font-weight-light);
    animation: fadeInUp 0.8s ease-out 0.2s backwards;
  }

