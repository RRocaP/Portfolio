---
import BaseLayout from '../../components/BaseLayout.astro';
import Hero from '../../components/Hero.astro';
import Research from '../../components/Research.astro';
import Timeline from '../../components/Timeline.astro';
import Publications from '../../components/Publications.astro';
import Contact from '../../components/Contact.astro';
import Navigation from '../../components/Navigation.astro';
import Footer from '../../components/Footer.astro';
import strings from '../../i18n/en.json';

const lang = 'en';
---

<BaseLayout 
  title="Ramon Roca Pinilla - Biomedical Engineer & Molecular Biologist"
  description="Fighting antimicrobial resistance through rigorous science. PhD candidate at Autonomous University of Barcelona specializing in protein engineering and gene therapy."
  lang={lang}
>
  <Navigation slot="header" lang={lang} strings={strings} />
  
  <Hero lang={lang} strings={strings} />
  
  <Research lang={lang} strings={strings} />
  
  <Timeline lang={lang} strings={strings} />
  
  <Publications lang={lang} strings={strings} />
  
  <Contact lang={lang} strings={strings} />
  
  <Footer slot="footer" lang={lang} strings={strings} />
</BaseLayout>