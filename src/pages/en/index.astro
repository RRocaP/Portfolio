--- 
import Layout from '../../layouts/Layout.astro';
import NavigationPremium from '../../components/NavigationPremium.astro';
import AntimicrobialTimeline from '../../components/AntimicrobialTimeline.astro';
import AntimicrobialAnimation from '../../components/AntimicrobialAnimation.astro';
import Footer from '../../components/Footer.astro';
import { publications } from '../../data/publications.js';
import HeroFinal from '../../components/HeroFinal.astro';
import PerformanceMetrics from '../../components/PerformanceMetrics.astro';
import { metrics } from '../../data/metrics.ts';
import FeatureGrid from '../../components/FeatureGrid.astro';
import FAQAccordion from '../../components/FAQAccordion.astro';
import CallToAction from '../../components/CallToAction.astro';
import ProcessFlow from '../../components/ProcessFlow.astro';
import ValidationMetrics from '../../components/ValidationMetrics.astro';
import ProteinDesignShowcase from '../../components/ProteinDesignShowcase.astro';
import ProteinVideoShowcase from '../../components/ProteinVideoShowcase.astro';
---

<Layout
  title="Ramon Roca Pinilla - Biomedical Engineer & Molecular Biologist"
  description="Biomedical engineer & molecular biologist engineering antimicrobial proteins and viral vectors using computational design and experimental validation."
  lang="en"
>
  <NavigationPremium />
  
  <HeroFinal lang="en" />

  <!-- Interactive Protein Design Showcase -->
  <ProteinDesignShowcase lang="en" />

  <!-- About Section with Timeline Roadmap -->
  <section id="about" class="section about-section" role="region" aria-labelledby="about-heading">
    <div class="container">
      <h2 id="about-heading" class="section-title animate-fade-in-up">My Journey</h2>
      
      <div class="about-text-container">
        <div class="about-text-split">
          <div class="about-left animate-fade-in-left">
            <p class="lead typewriter" data-text="I'm a biotechnologist who believes proteins can solve our biggest medical challenges.">I'm a biotechnologist who believes proteins can solve our biggest medical challenges.</p>
          </div>
          <div class="about-right animate-fade-in-right">
            <p class="about-detail">My days are split between <span class="highlight">algorithms</span> and <span class="highlight">petri dishes</span>. I design antimicrobial proteins computationally, then validate them in the lab.</p>
            <p class="about-detail">Currently engineering: protein scaffolds that fight drug-resistant bacteria, inclusion bodies as smart biomaterials, and AAV vectors for gene delivery.</p>
            <p class="about-meta">ORCID: 0000‑0002‑7393‑6200 • {metrics.citations} citations</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Research Section -->
  <section id="research" class="section research-section" role="region" aria-labelledby="research-heading">
    <div class="container">
      <h2 id="research-heading" class="section-title animate-fade-in-up">Research</h2>
      <div class="accent-bar animate-fade-in-up"></div>
      
      <div class="research-intro animate-fade-in-up">
        <p class="lead">I design and test antimicrobial proteins and viral vectors using computation and experiment.</p>
      </div>
      
      <AntimicrobialAnimation />
      
      <PerformanceMetrics />
      
      <AntimicrobialTimeline />
      
      <ProteinVideoShowcase />
      
      <ValidationMetrics lang="en" />
      
        <div class="metrics animate-fade-in-up" role="group" aria-label="Key metrics">
          <div class="metric">
            <span class="metric-value">{metrics.publications}</span>
            <span class="metric-label">Peer‑reviewed papers</span>
          </div>
          <div class="metric">
            <span class="metric-value">{metrics.citations && metrics.citations > 0 ? metrics.citations : '—'}</span>
            <span class="metric-label">Citations (Scholar)</span>
          </div>
          <div class="metric">
            <span class="metric-value">10</span>
            <span class="metric-label">Journals & venues</span>
          </div>
        </div>
    </div>
  </section>

  <ProcessFlow lang="en" />

  <!-- Feature Grid Section -->
  <FeatureGrid lang="en" />

  <!-- FAQ Section -->
  <FAQAccordion lang="en" />

  <!-- Call to Action Section -->
  <CallToAction lang="en" />

  <!-- Publications Section -->
  <section id="publications" class="section publications-section" role="region" aria-labelledby="publications-heading">
    <div class="container">
      <h2 id="publications-heading" class="section-title animate-fade-in-up">Selected Publications</h2>
      <div class="accent-bar animate-fade-in-up"></div>
      
      <div class="publications-list">
        {publications.map(pub => (
          <a class={`publication-card ${pub.featured ? 'featured' : ''} animate-fade-in-up`} href={pub.url || '#'} target={pub.url ? '_blank' : undefined} rel={pub.url ? 'noopener' : undefined}>
            <span class="pub-year">{pub.year}</span>
            <h3>{pub.title}</h3>
            <p class="pub-journal">{pub.journal}</p>
          </a>
        ))}
      </div>
        
        <div class="pub-links animate-fade-in-up animate-delay-4">
          <a href="https://scholar.google.com/citations?hl=fr&user=jYIZGT0AAAAJ" target="_blank" rel="noopener" class="btn btn-outline">
            <svg viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 24a7 7 0 110-14 7 7 0 010 14zm0-24L0 9.5l4.838 3.94A8 8 0 0112 9a8 8 0 017.162 4.44L24 9.5z"/>
            </svg>
            Google Scholar
          </a>
          <a href="https://orcid.org/0000-0002-7393-6200" target="_blank" rel="noopener" class="btn btn-outline">
            <svg viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 0C5.372 0 0 5.372 0 12s5.372 12 12 12 12-5.372 12-12S18.628 0 12 0zM7.369 4.378c.525 0 .947.431.947.947s-.422.947-.947.947a.95.95 0 01-.947-.947c0-.525.422-.947.947-.947zm-.722 3.038h1.444v10.041H6.647V7.416zm3.562 0h3.9c3.712 0 5.344 2.653 5.344 5.025 0 2.578-2.016 5.025-5.325 5.025h-3.919V7.416zm1.444 1.303v7.444h2.297c3.272 0 4.022-2.484 4.022-3.722 0-2.016-1.284-3.722-4.097-3.722h-2.222z"/>
            </svg>
            ORCID
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <section id="contact" class="section contact-section" role="region" aria-labelledby="contact-heading">
    <div class="container">
      <h2 id="contact-heading" class="section-title animate-fade-in-up">Let's Connect</h2>
      <div class="accent-bar animate-fade-in-up"></div>
      
      <div class="contact-content animate-fade-in-up">
        <p class="lead">I welcome collaborations on antimicrobial protein design, viral vector systems, and computational approaches to therapeutic development.</p>
        
        <div class="contact-info">
          <div class="contact-card">
            <h3>Email</h3>
            <p><a href="mailto:ramon.rocap@gmail.com">ramon.rocap@gmail.com</a></p>
          </div>
          
          <div class="contact-card">
            <h3>Location</h3>
            <p>Children's Medical Research Institute<br>Sydney, Australia</p>
          </div>
          
          <div class="contact-card">
            <h3>Connect</h3>
            <div class="social-links">
              <a href="https://www.linkedin.com/in/ramonrocapinilla/" target="_blank" rel="noopener" aria-label="LinkedIn">
