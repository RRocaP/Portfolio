                </svg>
                <span>Music</span>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <Footer />
</Layout>

<style>
  /* General Animations */
  .animate-fade-in-up {
    animation: fade-in-up 0.8s cubic-bezier(0.2, 0.8, 0.2, 1) forwards;
    opacity: 0;
  }

  @keyframes fade-in-up {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Animation Delays */
  .animate-delay-1 { animation-delay: 0.1s; }
  .animate-delay-2 { animation-delay: 0.2s; }
  .animate-delay-3 { animation-delay: 0.3s; }
  .animate-delay-4 { animation-delay: 0.4s; }

  /* Hero Section */
  .hero {
    min-height: 100vh;
    display: flex;
    align-items: center;
    position: relative;
    overflow: hidden;
    padding-top: 80px;
  }

  .hero {
    background: var(--background);
    /* Use darker Claude-style red only for this page's hero */
    --accent-red: #D72638;
    --accent-red-rgb: 215, 38, 56;
  }

  .hero-content {
    text-align: center;
    max-width: 800px;
    margin: 0 auto;
    position: relative;
    z-index: 10;
  }
  
  .hero .container {
    position: relative;
    z-index: 10;
  }

  .hero-title {
    font-family: var(--font-display);
    font-size: clamp(3rem, 8vw, 5rem);
    font-weight: 800;
    letter-spacing: -0.015em;
    color: var(--primary);
    margin-bottom: 0.5rem;
    position: relative;
  }
  .hero-title::after {
    content: '';
    display: block;
    width: 80px;
    height: 3px;
    margin: 14px auto 0;
    background: var(--accent-red);
    opacity: 0.95;
    border-radius: 1.5px;
  }
  .hero-accent {
    position: absolute;
    inset: 0;
    z-index: -1;
    pointer-events: none;
  }
  .hero-accent::before {
    content: '';
    position: absolute;
    top: -20vh;
    right: -25vw;
    width: 70vw;
    height: 70vw;
    background: conic-gradient(from 210deg at 70% 30%, rgba(var(--accent-red-rgb), 0.22) 0deg, rgba(0,0,0,0) 60deg);
    filter: blur(80px);
    transform: rotate(-8deg);
  }
  .hero-accent::after {
    content: '';
    position: absolute;
    top: 12vh;
    left: -15vw;
    width: 40vw;
    height: 40vw;
    background: radial-gradient(40% 40% at 50% 50%, rgba(255,255,255,0.06), transparent 70%);
    filter: blur(40px);
  }

  .hero-subtitle { font-size: 1.15rem; color: var(--secondary); margin-bottom: 0.25rem; font-weight: 600; }

  .hero-tagline { font-size: 1rem; color: var(--tertiary); margin-bottom: 2rem; }

  .hero-cta {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }
  @media (prefers-reduced-motion: reduce) {
    .animate-fade-in-up { animation: none; opacity: 1; transform: none; }
  }

  .btn {
    padding: 0.75rem 2rem;
    border-radius: 50px;
    font-weight: 500;
    transition: all 0.3s ease;
    display: inline-block;
  }

  .btn-primary { background: var(--accent-red); color: var(--background); border: 1px solid var(--accent-red); box-shadow: 0 4px 15px rgba(218, 41, 28, 0.4); }

  .btn-primary:hover { background: var(--accent-red-hover); border-color: var(--accent-red-hover); color: var(--background); transform: translateY(-2px); box-shadow: 0 6px 18px rgba(218,41,28,0.5); }

  .btn-outline { border: 1.5px solid var(--border-light); color: var(--secondary); background: transparent; }

  .btn-outline:hover { background: var(--background-elevated); border-color: var(--accent-red); color: var(--accent-red); transform: translateY(-2px); box-shadow: 0 4px 12px rgba(255,255,255,0.08); }

  /* Sections */
  .section {
    padding: calc(var(--space-xl) * 1.5) 0;
  }

  /* Mobile tweaks */
  @media (max-width: 480px) {
    .hero-title { font-size: clamp(2.25rem, 9vw, 3rem); }
    .hero-subtitle { font-size: 1rem; }
    .hero-cta { flex-direction: column; }
    .btn { width: 100%; max-width: 280px; }
    .hero-accent::before { width: 80vw; height: 80vw; right: -30vw; top: -18vh; filter: blur(60px); }
  }

  /* About Section - Timeline Roadmap */
  .about-section {
    background: var(--background-alt);
    position: relative;
    overflow: hidden;
  }
  
  .about-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: -50%;
    width: 200%;
    height: 1px;
    background: linear-gradient(90deg, transparent, var(--accent-red), transparent);
    opacity: 0.3;
  }
  
  .timeline-roadmap {
    position: relative;
    margin: var(--space-lg) 0;
    min-height: 600px;
  }
  
  .timeline-path {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
  }
  
  .timeline-content {
    position: relative;
    display: grid;
    grid-template-columns: repeat(5, 1fr);
    gap: var(--space-md);
    padding: var(--space-lg) 0;
  }
  
  .timeline-item {
    position: relative;
    animation-delay: calc(var(--index) * 0.1s);
  }
  
  .timeline-dot {
    width: 16px;
    height: 16px;
    background: var(--accent-red);
    border: 3px solid var(--background);
    border-radius: 50%;
    position: absolute;
    top: -8px;
    left: 50%;
    transform: translateX(-50%);
    z-index: 2;
    box-shadow: 0 0 0 8px rgba(218, 41, 28, 0.1);
  }
  
  .timeline-card {
    background: var(--background-card);
    border: 1px solid var(--border);
    border-radius: 12px;
    padding: var(--space-md);
    margin-top: var(--space-md);
    transition: all 0.3s ease;
    position: relative;
    backdrop-filter: blur(10px);
  }
  
  .timeline-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 12px 40px rgba(218, 41, 28, 0.15);
    border-color: var(--accent-red);
    background: var(--background-elevated);
  }
  
  .timeline-card.highlight {
    background: linear-gradient(135deg, rgba(218, 41, 28, 0.05) 0%, rgba(255, 217, 61, 0.05) 100%);
    border-color: var(--accent-red);
  }
  
  .timeline-year {
    display: inline-block;
    font-size: 0.85rem;
    font-weight: var(--font-weight-medium);
    color: var(--accent-red);
    margin-bottom: var(--space-xs);
  }
  
  .timeline-card h3 {
    font-size: 1.1rem;
    margin-bottom: 0.25rem;
    font-weight: var(--font-weight-medium);
  }
  
  .timeline-card p {
    font-size: 0.95rem;
    color: var(--secondary);
    margin-bottom: 0.25rem;
  }
  
  .timeline-card small {
    font-size: 0.85rem;
    color: var(--tertiary);
    line-height: 1.4;
  }
  
  .profile-end {
    grid-column: 5;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: var(--space-lg);
  }
  
  .profile-end img {
    width: 120px;
    height: 120px;
    border-radius: 50%;
    object-fit: cover;
    border: 4px solid var(--background);
    box-shadow: 0 0 0 1px var(--border), 0 8px 24px rgba(0, 0, 0, 0.1);
    margin-bottom: var(--space-sm);
  }
  
  .profile-info {
    text-align: center;
  }
  
  .profile-info h3 {
    font-size: 1.2rem;
    margin-bottom: 0.25rem;
  }
  
  .profile-info p {
    font-size: 0.9rem;
    color: var(--secondary);
  }
  
  .about-text {
    max-width: 800px;
    margin: var(--space-xl) auto 0;
    text-align: center;
  }
  
  .about-text p {
    text-align: justify;
    margin-bottom: var(--space-md);
  }
  
  .accent-bar {
    display: none;
  }

  .lead {
    font-size: 1.1rem;
    color: var(--secondary);
    font-weight: var(--font-weight-light);
    margin-bottom: var(--space-lg);
    line-height: 1.8;
  }

  /* Research Section */
  .research-intro {
    text-align: center;
    max-width: 800px;
    margin: 0 auto 3rem;
  }

