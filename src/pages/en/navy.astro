--- 
import Layout from '../../layouts/Layout.astro';
import Navigation from '../../components/Navigation.astro';
import ScrollIndicator from '../../components/ScrollIndicator.astro';
import AntimicrobialTimeline from '../../components/AntimicrobialTimeline.astro';
import Footer from '../../components/Footer.astro';
import { publications } from '../../data/publications.js';
import GeometricBackground from '../../components/GeometricBackground.astro';
import { metrics } from '../../data/metrics.ts';
---

<Layout title="Ramon Roca Pinilla - Biomedical Engineer & Molecular Biologist" lang="en" theme="navy">
  <Navigation />
  <ScrollIndicator />
  
  <section id="home" class="hero relative isolate overflow-hidden pt-20 pb-24 sm:pb-28 lg:pt-24 lg:pb-32">
    <div class="hero-accent" aria-hidden="true"></div>
    <!-- Navy prototype background accents -->
    <GeometricBackground red="#1E40AF" accent="#2563EB" />
    <div class="container mx-auto px-6 lg:px-8">
      <div class="hero-content max-w-3xl">
        <h1 class="hero-title animate-fade-in-up tracking-tight">Ramon Roca Pinilla</h1>
        <p class="hero-subtitle animate-fade-in-up animate-delay-1 text-white/80">Biomedical Engineer • Molecular Biologist</p>
        <p class="hero-tagline animate-fade-in-up animate-delay-2 text-white/70">Protein engineering and antimicrobial research.</p>
        <div class="hero-cta animate-fade-in-up animate-delay-3 mt-6 flex items-center gap-x-6">
          <a href="#about" class="rounded-md bg-[var(--accent-red)] px-4 py-2 text-sm font-semibold text-white shadow-sm hover:bg-[var(--accent-red-hover)] focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-[var(--accent-red)]">Learn More</a>
          <a href="#contact" class="text-sm font-semibold leading-6 text-white/80 hover:text-white">Get in Touch <span aria-hidden="true">→</span></a>
        </div>

        <!-- Academic identities surfaced: Scholar + ORCID -->
        <div class="academic-strip animate-fade-in-up animate-delay-4 mt-4 flex items-center justify-center gap-3">
          <a href="https://scholar.google.com/citations?user=jYIZGT0AAAAJ" target="_blank" rel="noopener" class="pill" aria-label="Google Scholar">
            <svg width="14" height="14" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true"><path d="M12 24a7 7 0 110-14 7 7 0 010 14zm0-24L0 9.5l4.838 3.94A8 8 0 0112 9a8 8 0 017.162 4.44L24 9.5z"/></svg>
            <span>Scholar</span>
          </a>
          <a href="https://orcid.org/0000-0002-7393-6200" target="_blank" rel="noopener" class="pill" aria-label="ORCID">
            <svg width="14" height="14" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true"><path d="M12 0C5.372 0 0 5.372 0 12s5.372 12 12 12 12-5.372 12-12S18.628 0 12 0zM7.369 4.378c.525 0 .947.431.947.947s-.422.947-.947.947a.95.95 0 01-.947-.947c0-.525.422-.947.947-.947zm-.722 3.038h1.444v10.041H6.647V7.416zm3.562 0h3.9c3.712 0 5.344 2.653 5.344 5.025 0 2.578-2.016 5.025-5.325 5.025h-3.919V7.416zm1.444 1.303v7.444h2.297c3.272 0 4.022-2.484 4.022-3.722 0-2.016-1.284-3.722-4.097-3.722h-2.222z"/></svg>
            <span>ORCID</span>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- About Section with Timeline Roadmap -->
  <section id="about" class="section about-section">
    <div class="container">
      <h2 class="section-title animate-fade-in-up">My Journey</h2>
      
      <div class="timeline-roadmap">
        <svg class="timeline-path" viewBox="0 0 1200 600" preserveAspectRatio="none">
          <path d="M 100,500 Q 300,400 400,300 T 600,200 Q 800,150 1000,100" 
                stroke="url(#gradient-navy)" 
                stroke-width="3" 
                fill="none" 
                stroke-dasharray="8,4"
                opacity="0.3"/>
          <defs>
            <linearGradient id="gradient-navy" x1="0%" y1="0%" x2="100%" y2="0%">
              <stop offset="0%" style="stop-color:#1E40AF;stop-opacity:1" />
              <stop offset="100%" style="stop-color:#60A5FA;stop-opacity:1" />
            </linearGradient>
          </defs>
        </svg>
        
        <div class="timeline-content">
          <div class="timeline-item animate-fade-in-up" style="--index: 1">
            <div class="timeline-dot"></div>
            <div class="timeline-card">
              <span class="timeline-year">2013</span>
              <h3>B.S. Biotechnology</h3>
              <p>Universitat Autònoma de Barcelona</p>
              <small>Foundation in molecular biology and biotech applications</small>
            </div>
          </div>
          
          <div class="timeline-item animate-fade-in-up" style="--index: 2">
            <div class="timeline-dot"></div>
            <div class="timeline-card">
              <span class="timeline-year">2015</span>
              <h3>M.S. Biomedical Engineering</h3>
              <p>UC Irvine</p>
              <small>Engineering approaches to biological problems</small>
            </div>
          </div>
          
          <div class="timeline-item animate-fade-in-up" style="--index: 3">
            <div class="timeline-dot"></div>
            <div class="timeline-card">
              <span class="timeline-year">2020</span>
              <h3>Ph.D. in Biomedicine</h3>
              <p>Autonomous University of Barcelona</p>
              <small>Molecular Biology & Biochemistry • Protein engineering expertise</small>
            </div>
          </div>
          
          <div class="timeline-item animate-fade-in-up" style="--index: 4">
            <div class="timeline-dot"></div>
            <div class="timeline-card">
              <span class="timeline-year">2021</span>
              <h3>Postdoctoral Researcher</h3>
              <p>Children's Medical Research Institute</p>
              <small>Translational Vectorology Unit • Sydney, Australia</small>
            </div>
          </div>
          
          <div class="timeline-item animate-fade-in-up" style="--index: 5">
            <div class="timeline-dot"></div>
            <div class="timeline-card highlight">
              <span class="timeline-year">Now</span>
              <h3>Fighting Drug Resistance</h3>
              <p>Next-Gen Antimicrobials</p>
              <small>Computational discovery meets wet-lab validation</small>
            </div>
          </div>
          
          <div class="profile-end animate-fade-in-up animate-delay-4">
            <img src={`${import.meta.env.BASE_URL}profile.jpg`} alt="Ramon Roca Pinilla" loading="lazy" decoding="async" width="120" height="120" />
            <div class="profile-info">
              <h3>Ramon Roca Pinilla</h3>
              <p>Turning algorithms into therapies</p>
            </div>
          </div>
        </div>
      </div>
      
      <div class="about-text animate-fade-in-up">
        <p class="lead">Biotechnologist and biomedical engineer focused on protein and vector engineering for antimicrobial and translational applications.</p>

        <p>I develop and characterize recombinant proteins and viral vectors, combining computational design with wet‑lab validation. Current work spans antimicrobial protein scaffolds, inclusion bodies as functional biomaterials, and AAV vector development.</p>

        <p>Publications and affiliations shown here reflect my verified records on ORCID (0000‑0002‑7393‑6200) and Google Scholar.</p>
      </div>
    </div>
  </section>

  <!-- Research Section -->
  <section id="research" class="section research-section">
    <div class="container">
      <h2 class="section-title animate-fade-in-up">Research</h2>
      <div class="accent-bar animate-fade-in-up"></div>
      
      <div class="research-intro animate-fade-in-up">
        <p class="lead">I design, build, and test antimicrobial proteins and viral vectors, pairing computational design with careful, iterative bench work to understand what works and why.</p>
      </div>
      
      <AntimicrobialTimeline />
      
        <div class="metrics animate-fade-in-up" aria-label="Key metrics">
          <div class="metric">
          <span class="metric-value">{metrics.publications}</span>
          <span class="metric-label">Peer‑reviewed papers</span>
          </div>
          <div class="metric">
          <span class="metric-value">{metrics.citations && metrics.citations > 0 ? metrics.citations : '—'}</span>
          <span class="metric-label">Citations (Scholar)</span>
          </div>
          <div class="metric">
          <span class="metric-value">10</span>
          <span class="metric-label">Journals & venues</span>
          </div>
        </div>
    </div>
  </section>


  <!-- Publications Section -->
  <section id="publications" class="section publications-section">
    <div class="container">
      <h2 class="section-title animate-fade-in-up">Selected Publications</h2>
      <div class="accent-bar animate-fade-in-up"></div>
      
      <div class="publications-list">
        {publications.map(pub => (
          <a class={`publication-card ${pub.featured ? 'featured' : ''} animate-fade-in-up`} href={pub.url || '#'} target={pub.url ? '_blank' : undefined} rel={pub.url ? 'noopener' : undefined}>
            <span class="pub-year">{pub.year}</span>
            <h3>{pub.title}</h3>
            <p class="pub-journal">{pub.journal}</p>
          </a>
        ))}
      </div>
        
        <div class="pub-links animate-fade-in-up animate-delay-4">
          <a href="https://scholar.google.com/citations?hl=fr&user=jYIZGT0AAAAJ" target="_blank" rel="noopener" class="btn btn-outline">
            <svg viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 24a7 7 0 110-14 7 7 0 010 14zm0-24L0 9.5l4.838 3.94A8 8 0 0112 9a8 8 0 017.162 4.44L24 9.5z"/>
            </svg>
            Google Scholar
          </a>
          <a href="https://orcid.org/0000-0002-7393-6200" target="_blank" rel="noopener" class="btn btn-outline">
            <svg viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 0C5.372 0 0 5.372 0 12s5.372 12 12 12 12-5.372 12-12S18.628 0 12 0zM7.369 4.378c.525 0 .947.431.947.947s-.422.947-.947.947a.95.95 0 01-.947-.947c0-.525.422-.947.947-.947zm-.722 3.038h1.444v10.041H6.647V7.416zm3.562 0h3.9c3.712 0 5.344 2.653 5.344 5.025 0 2.578-2.016 5.025-5.325 5.025h-3.919V7.416zm1.444 1.303v7.444h2.297c3.272 0 4.022-2.484 4.022-3.722 0-2.016-1.284-3.722-4.097-3.722h-2.222z"/>
            </svg>
            ORCID
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <section id="contact" class="section contact-section">
    <div class="container">
      <h2 class="section-title animate-fade-in-up">Let's Connect</h2>
      <div class="accent-bar animate-fade-in-up"></div>
      
      <div class="contact-content animate-fade-in-up">
        <p class="lead">Open to collaborations in antimicrobial proteins, vector systems, and data-driven design.</p>
        
        <div class="contact-info">
          <div class="contact-card">
            <h3>Email</h3>
            <p><a href="mailto:ramon.rocap@gmail.com">ramon.rocap@gmail.com</a></p>
          </div>
          
          <div class="contact-card">
            <h3>Location</h3>
            <p>Children's Medical Research Institute<br>Sydney, Australia</p>
          </div>
          
          <div class="contact-card">
            <h3>Connect</h3>
            <div class="social-links">
              <a href="https://www.linkedin.com/in/ramonrocapinilla/" target="_blank" rel="noopener" aria-label="LinkedIn">
                <svg viewBox="0 0 24 24" fill="#0A66C2">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                </svg>
                <span>LinkedIn</span>
              </a>
              <a href="https://github.com/RRocaP" target="_blank" rel="noopener" aria-label="GitHub">
                <svg viewBox="0 0 24 24" fill="#181717">
                  <path d="M12 .297c-6.63 0-12 5.373-12 12 0 5.303 3.438 9.8 8.205 11.385.6.113.82-.258.82-.577 0-.285-.01-1.04-.015-2.04-3.338.724-4.042-1.61-4.042-1.61C4.422 18.07 3.633 17.7 3.633 17.7c-1.087-.744.084-.729.084-.729 1.205.084 1.838 1.236 1.838 1.236 1.07 1.835 2.809 1.305 3.495.998.108-.776.417-1.305.76-1.605-2.665-.3-5.466-1.332-5.466-5.93 0-1.31.465-2.38 1.235-3.22-.135-.303-.54-1.523.105-3.176 0 0 1.005-.322 3.3 1.23.96-.267 1.98-.399 3-.405 1.02.006 2.04.138 3 .405 2.28-1.552 3.285-1.23 3.285-1.23.645 1.653.24 2.873.12 3.176.765.84 1.23 1.91 1.23 3.22 0 4.61-2.805 5.625-5.475 5.92.42.36.81 1.096.81 2.22 0 1.606-.015 2.896-.015 3.286 0 .315.21.69.825.57C20.565 22.092 24 17.592 24 12.297c0-6.627-5.373-12-12-12"/>
                </svg>
                <span>GitHub</span>
              </a>
              <a href="https://music.apple.com/au/album/cartographers-daughter/1797174494?i=1797174496" target="_blank" rel="noopener" aria-label="Apple Music - AI Song">
                <svg viewBox="0 0 24 24" fill="#FA243C">
                  <path d="M23.994 6.124a9.23 9.23 0 00-.24-2.19c-.317-1.31-1.062-2.31-2.18-3.043a5.022 5.022 0 00-1.877-.726 10.496 10.496 0 00-1.564-.15c-.04-.003-.083-.01-.124-.013H5.986c-.152.01-.303.017-.455.026-.747.043-1.49.123-2.193.4-1.336.53-2.3 1.452-2.865 2.78-.192.448-.292.925-.363 1.408-.056.392-.088.785-.1 1.18 0 .032-.007 .062-.01.093v12.223c.01.14.017.283.027.424.05.815.154 1.624.497 2.373.65 1.42 1.738 2.353 3.234 2.801.42.127.856.187 1.293.228.555.053 1.11.06 1.667.06h11.03a12.5 12.5 0 001.57-.1c.822-.078 1.596-.298 2.3-.72a4.479 4.479 0 002.054-1.911c.36-.698.52-1.44.602-2.218.044-.435.065-.87.074-1.306 0-.027.007-.053.01-.08V6.124zm-2.96 10.686a5.66 5.66 0 01-.2 1.398 2.133 2.133 0 01-.975 1.313c-.385.236-.813.363-1.26 .437a8.748 8.748 0 01-1.042 .094l-.758 .013H7.182c-.285 0-.57-.004-.854-.015a8.31 8.31 0 01-1.332 -.14 2.223 2.223 0 01-1.258 -.635 2.105 2.105 0 01-.581 -1.237 6.531 6.531 0 01-.107 -1.156V7.088c.006 -.433 .03 -.865 .096 -1.293a2.133 2.133 0 01.698 -1.445 2.262 2.262 0 011.357 -.52c.495 -.059 .993 -.075 1.493 -.076l9.598 -.002c.525 .002 1.05 .02 1.572 .087.677 .088 1.298 .314 1.766 .826.374 .41 .568 .91 .65 1.46.07 .458 .092 .92 .09 1.383v9.302z"/>
                </svg>
                <span>Music</span>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <Footer />
</Layout>

<style>
  /* General Animations */
  .animate-fade-in-up { animation: fade-in-up 0.8s cubic-bezier(0.2, 0.8, 0.2, 1) forwards; opacity: 0; }
  @keyframes fade-in-up { from { opacity: 0; transform: translateY(20px); } to { opacity: 1; transform: translateY(0); } }
  .animate-delay-1 { animation-delay: 0.1s; }
  .animate-delay-2 { animation-delay: 0.2s; }
  .animate-delay-3 { animation-delay: 0.3s; }
  .animate-delay-4 { animation-delay: 0.4s; }

  /* Hero Section */
  .hero { min-height: 100vh; display: flex; align-items: center; position: relative; overflow: hidden; padding-top: 80px; }
  .hero { background: var(--background); }

  .hero-content { text-align: center; max-width: 800px; margin: 0 auto; }
  .hero-title { font-family: var(--font-display); font-size: clamp(3rem, 8vw, 5rem); font-weight: 800; letter-spacing: -0.015em; color: var(--primary); margin-bottom: 0.5rem; position: relative; }
  .hero-title::after { content: ''; display: block; width: 80px; height: 3px; margin: 14px auto 0; background: var(--accent-red); opacity: 0.95; border-radius: 1.5px; }

  .hero-accent { position: absolute; inset: 0; z-index: -1; pointer-events: none; }
  .hero-accent::before { content: ''; position: absolute; top: -20vh; right: -25vw; width: 70vw; height: 70vw; background: conic-gradient(from 210deg at 70% 30%, rgba(var(--accent-red-rgb), 0.22) 0deg, rgba(0,0,0,0) 60deg); filter: blur(80px); transform: rotate(-8deg); }
  .hero-accent::after { content: ''; position: absolute; top: 12vh; left: -15vw; width: 40vw; height: 40vw; background: radial-gradient(40% 40% at 50% 50%, rgba(255,255,255,0.06), transparent 70%); filter: blur(40px); }

  .hero-subtitle { font-size: 1.15rem; color: var(--secondary); margin-bottom: 0.25rem; font-weight: 600; }
  .hero-tagline { font-size: 1rem; color: var(--tertiary); margin-bottom: 2rem; }

  .hero-cta { display: flex; gap: 1rem; justify-content: center; flex-wrap: wrap; }
  .academic-strip { opacity: 0.9; }
  .pill { display: inline-flex; align-items: center; gap: 0.5rem; padding: 0.35rem 0.65rem; border-radius: 999px; font-size: 0.85rem; color: var(--text-secondary); background: var(--background-elevated); border: 1px solid var(--border); transition: all 0.2s ease; }
  .pill:hover { color: var(--accent-red); border-color: var(--accent-red); background: var(--background-card); }
  @media (prefers-reduced-motion: reduce) { .animate-fade-in-up { animation: none; opacity: 1; transform: none; } }

  .btn { padding: 0.75rem 2rem; border-radius: 50px; font-weight: 500; transition: all 0.3s ease; display: inline-block; }
  .btn-primary { background: var(--accent-red); color: var(--background); border: 1px solid var(--accent-red); box-shadow: 0 4px 15px rgba(var(--accent-red-rgb), 0.4); }
  .btn-primary:hover { background: var(--accent-red-hover); border-color: var(--accent-red-hover); color: var(--background); transform: translateY(-2px); box-shadow: 0 6px 18px rgba(var(--accent-red-rgb),0.5); }
  .btn-outline { border: 1.5px solid var(--border-light); color: var(--secondary); background: transparent; }
  .btn-outline:hover { background: var(--background-elevated); border-color: var(--accent-red); color: var(--accent-red); transform: translateY(-2px); box-shadow: 0 4px 12px rgba(255,255,255,0.08); }

  /* Sections */
  .section { padding: calc(var(--space-xl) * 1.5) 0; }

  /* Mobile tweaks */
  @media (max-width: 480px) {
    .hero-title { font-size: clamp(2.25rem, 9vw, 3rem); }
    .hero-subtitle { font-size: 1rem; }
    .hero-cta { flex-direction: column; }
    .btn { width: 100%; max-width: 280px; }
    .hero-accent::before { width: 80vw; height: 80vw; right: -30vw; top: -18vh; filter: blur(60px); }
  }

  /* About Section - Timeline Roadmap */
  .about-section { background: var(--background-alt); position: relative; overflow: hidden; }
  .about-section::before { content: ''; position: absolute; top: 0; left: -50%; width: 200%; height: 1px; background: linear-gradient(90deg, transparent, var(--accent-red), transparent); opacity: 0.3; }

  .timeline-roadmap { position: relative; margin: var(--space-lg) 0; min-height: 600px; }
  .timeline-path { position: absolute; width: 100%; height: 100%; top: 0; left: 0; }
  .timeline-content { position: relative; display: grid; grid-template-columns: repeat(5, 1fr); gap: var(--space-md); padding: var(--space-lg) 0; }
  .timeline-item { position: relative; animation-delay: calc(var(--index) * 0.1s); }
  .timeline-dot { width: 16px; height: 16px; background: var(--accent-red); border: 3px solid var(--background); border-radius: 50%; position: absolute; top: -8px; left: 50%; transform: translateX(-50%); z-index: 2; box-shadow: 0 0 0 8px var(--accent-red-bg); }

  .timeline-card { background: var(--background-card); border: 1px solid var(--border); border-radius: 12px; padding: 1rem; box-shadow: 0 1px 6px rgba(0,0,0,0.25); transition: transform 300ms ease, box-shadow 300ms ease, border-color 300ms ease; }
  .timeline-card:hover { transform: translateY(-2px); border-color: var(--accent-red); box-shadow: 0 6px 18px rgba(0,0,0,0.35); }
  .timeline-card.highlight { border-color: var(--accent-red); box-shadow: 0 6px 18px rgba(0,0,0,0.35); }
  .timeline-year { display: inline-block; font-size: 0.875rem; color: var(--text-light); margin-bottom: 0.5rem; background: var(--background-elevated); border: 1px solid var(--border); padding: 2px 8px; border-radius: 999px; }

  .profile-end { display: flex; align-items: center; gap: 1rem; grid-column: span 5 / span 5; justify-content: center; margin-top: 1rem; }
  .profile-end img { border-radius: 999px; border: 2px solid var(--border-light); box-shadow: 0 4px 14px rgba(0,0,0,0.4); }
  .profile-info { text-align: left; }
  .profile-info h3 { margin: 0; font-size: 1.25rem; }
  .profile-info p { margin: 0; color: var(--tertiary); font-size: 0.95rem; }

  /* Publications */
  .publications-section { background: var(--background); }
  .publications-list { display: grid; grid-template-columns: 1fr; gap: 0.75rem; margin-top: var(--space-md); }
  @media (min-width: 768px) { .publications-list { grid-template-columns: 1fr 1fr; } }
  .publication-card { background: var(--background-card); border: 1px solid var(--border); border-radius: 12px; padding: 1rem; transition: transform 0.25s ease, box-shadow 0.25s ease, border-color 0.25s ease; }
  .publication-card:hover { transform: translateY(-2px); border-color: var(--accent-red); box-shadow: 0 6px 18px rgba(0,0,0,0.35); }
  .publication-card.featured { border-color: var(--accent-red); box-shadow: 0 6px 18px rgba(0,0,0,0.35); }
  .pub-year { display: inline-block; font-size: 0.875rem; color: var(--text-light); background: var(--background-elevated); border: 1px solid var(--border); padding: 2px 8px; border-radius: 999px; margin-bottom: 0.5rem; }
  .pub-journal { color: var(--tertiary); font-size: 0.95rem; }

  .pub-links { display: flex; gap: 0.75rem; flex-wrap: wrap; margin-top: 1rem; }

  /* Contact */
  .contact-section { background: var(--background-alt); }
  .contact-content { max-width: 900px; margin: 0 auto; }
