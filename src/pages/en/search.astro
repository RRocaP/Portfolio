---
import Layout from '../../layouts/Layout.astro';
import NavigationPremium from '../../components/NavigationPremium.astro';
import Search from '../../components/Search.tsx';
import Footer from '../../components/Footer.astro';
---

<Layout 
  title="Search - Ramon Roca Pinilla"
  description="Search through publications, research projects, and scientific work by Ramon Roca Pinilla."
  lang="en"
>
  <NavigationPremium />
  
  <main class="search-page">
    <!-- Search Hero Section -->
    <section class="search-hero">
      <div class="container">
        <div class="max-w-4xl mx-auto text-center">
          <h1 class="text-heading-xl mb-6">Search My Work</h1>
          <p class="text-body-lg text-gray-400 mb-8">
            Explore my publications, research projects, and scientific contributions
          </p>
          
          <!-- Main Search Interface -->
          <div class="search-main">
            <Search lang="en" className="search-full" maxResults={20} client:load />
          </div>
          
          <div class="search-suggestions mt-8">
            <h3 class="text-sm font-semibold text-gray-500 mb-4">Try searching for:</h3>
            <div class="flex flex-wrap gap-2 justify-center">
              <button class="search-suggestion" data-query="antimicrobial">Antimicrobial</button>
              <button class="search-suggestion" data-query="protein engineering">Protein Engineering</button>
              <button class="search-suggestion" data-query="AAV vectors">AAV Vectors</button>
              <button class="search-suggestion" data-query="inclusion bodies">Inclusion Bodies</button>
              <button class="search-suggestion" data-query="CAR-T">CAR-T</button>
              <button class="search-suggestion" data-query="molecular therapy">Molecular Therapy</button>
            </div>
          </div>
        </div>
      </div>
    </section>
    
    <!-- Search Statistics -->
    <section class="search-stats">
      <div class="container">
        <div class="grid md:grid-cols-3 gap-6 max-w-2xl mx-auto">
          <div class="stat-card">
            <div class="stat-number">15+</div>
            <div class="stat-label">Publications</div>
          </div>
          <div class="stat-card">
            <div class="stat-number">6</div>
            <div class="stat-label">Projects</div>
          </div>
          <div class="stat-card">
            <div class="stat-number">3</div>
            <div class="stat-label">Languages</div>
          </div>
        </div>
      </div>
    </section>
    
    <!-- Search Tips -->
    <section class="search-tips">
      <div class="container">
        <div class="max-w-3xl mx-auto">
          <h2 class="text-heading-lg text-center mb-8">Search Tips</h2>
          <div class="grid md:grid-cols-2 gap-6">
            <div class="tip-card">
              <h3 class="text-lg font-semibold mb-3">üîç Keywords</h3>
              <p class="text-gray-400">Search by research areas, technologies, or specific techniques you're interested in.</p>
            </div>
            <div class="tip-card">
              <h3 class="text-lg font-semibold mb-3">üìÖ Years</h3>
              <p class="text-gray-400">Include years (e.g., "2024") to find recent work or specific time periods.</p>
            </div>
            <div class="tip-card">
              <h3 class="text-lg font-semibold mb-3">üß™ Technologies</h3>
              <p class="text-gray-400">Search for specific tools like "D3.js", "React", or "Protein Engineering".</p>
            </div>
            <div class="tip-card">
              <h3 class="text-lg font-semibold mb-3">üìö Journals</h3>
              <p class="text-gray-400">Find publications from specific journals like "Nature" or "Molecular Therapy".</p>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</Layout>

<style>
  .search-page {
    padding-top: 120px;
    min-height: 100vh;
    background: var(--background);
  }
  
  .search-hero {
    padding: 4rem 0;
    background: linear-gradient(135deg, rgba(218, 41, 28, 0.05) 0%, rgba(218, 41, 28, 0.02) 100%);
  }
  
  .search-main {
    max-width: 600px;
    margin: 0 auto;
  }
  
  /* Enhanced search styles for full page */
  .search-main :global(.search-full) {
    max-width: 100%;
  }
  
  .search-main :global(.search-full input) {
    height: 3.5rem;
    font-size: 1.125rem;
    padding: 1rem 1rem 1rem 3rem;
    background: rgba(255, 255, 255, 0.08);
    border: 2px solid rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    transition: all 0.3s ease;
  }
  
  .search-main :global(.search-full input:focus) {
    background: rgba(255, 255, 255, 0.12);
    border-color: var(--accent-red);
    box-shadow: 0 0 0 4px rgba(220, 38, 38, 0.15);
  }
  
  .search-main :global(.search-full .absolute.inset-y-0.left-0) {
    padding-left: 1rem;
  }
  
  .search-main :global(.search-full .h-5.w-5) {
    height: 1.5rem;
    width: 1.5rem;
  }
  
  .search-suggestions {
    opacity: 0;
    animation: fadeInUp 0.8s ease 0.3s forwards;
  }
  
  .search-suggestion {
    padding: 0.5rem 1rem;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    color: var(--primary);
    border-radius: 6px;
    font-size: 0.875rem;
    transition: all 0.3s ease;
    cursor: pointer;
  }
  
  .search-suggestion:hover {
    background: rgba(220, 38, 38, 0.1);
    border-color: rgba(220, 38, 38, 0.3);
    color: var(--accent-red);
  }
  
  .search-stats {
    padding: 3rem 0;
    border-bottom: 1px solid var(--border);
  }
  
  .stat-card {
    text-align: center;
    padding: 2rem 1rem;
    background: rgba(255, 255, 255, 0.02);
    border: 1px solid rgba(255, 255, 255, 0.05);
    border-radius: 12px;
    transition: all 0.3s ease;
  }
  
  .stat-card:hover {
    background: rgba(255, 255, 255, 0.05);
    border-color: rgba(220, 38, 38, 0.2);
  }
  
  .stat-number {
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--accent-red);
    margin-bottom: 0.5rem;
  }
  
  .stat-label {
    font-size: 0.875rem;
    color: var(--secondary);
    font-weight: 500;
  }
  
  .search-tips {
    padding: 4rem 0;
  }
  
  .tip-card {
    padding: 2rem;
    background: rgba(255, 255, 255, 0.02);
    border: 1px solid rgba(255, 255, 255, 0.05);
    border-radius: 12px;
    transition: all 0.3s ease;
  }
  
  .tip-card:hover {
    background: rgba(255, 255, 255, 0.05);
    border-color: rgba(220, 38, 38, 0.2);
  }
  
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  @media (max-width: 768px) {
    .search-hero {
      padding: 2rem 0;
    }
    
    .search-main :global(.search-full input) {
      height: 3rem;
      font-size: 1rem;
      padding: 0.75rem 0.75rem 0.75rem 2.5rem;
    }
    
    .stat-number {
      font-size: 2rem;
    }
    
    .tip-card {
      padding: 1.5rem;
    }
  }
</style>

<script>
  // Handle search suggestions
  document.querySelectorAll('.search-suggestion').forEach(button => {
    button.addEventListener('click', (e) => {
      const query = e.target.getAttribute('data-query');
      const searchInput = document.querySelector('.search-full input') as HTMLInputElement;
      if (searchInput && query) {
        searchInput.value = query;
        searchInput.focus();
        // Trigger input event to activate search
        const event = new Event('input', { bubbles: true });
        searchInput.dispatchEvent(event);
      }
    });
  });
</script>