<style>
  /* General Animations */
  .animate-fade-in-up {
    animation: fade-in-up 0.8s cubic-bezier(0.2, 0.8, 0.2, 1) forwards;
    opacity: 0;
  }

  @keyframes fade-in-up {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Animation Delays */
  .animate-delay-1 { animation-delay: 0.1s; }
  .animate-delay-2 { animation-delay: 0.2s; }
  .animate-delay-3 { animation-delay: 0.3s; }
  .animate-delay-4 { animation-delay: 0.4s; }

  /* Hero Section */
  .hero {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding-top: 80px;
    background: var(--background);
    position: relative;
    overflow: hidden;
  }
  
  .hero::before {
    content: '';
    position: absolute;
    top: -50%;
    right: -10%;
    width: 70%;
    height: 150%;
    background: linear-gradient(45deg, var(--accent-yellow) 0%, transparent 70%);
    opacity: 0.05;
    transform: rotate(-15deg);
    z-index: 0;
  }
  
  .hero::after {
    content: '';
    position: absolute;
    bottom: 10%;
    left: 5%;
    width: 100px;
    height: 100px;
    border: 2px solid var(--accent-red);
    opacity: 0.1;
    transform: rotate(45deg);
    z-index: 0;
  }

  .hero-content {
    text-align: center;
    max-width: 800px;
    margin: 0 auto;
    padding: var(--space-md);
    position: relative;
    z-index: 1;
  }

  .hero-title {
    font-size: clamp(3rem, 8vw, 5rem);
    margin-bottom: var(--space-sm);
    color: var(--primary);
    font-weight: var(--font-weight-light);
    letter-spacing: -0.03em;
    position: relative;
  }
  
  .hero-title::after {
    content: '';
    position: absolute;
    bottom: -10px;
    left: 50%;
    transform: translateX(-50%);
    width: 80px;
    height: 4px;
    background: linear-gradient(90deg, var(--accent-red) 0%, var(--accent-yellow) 100%);
    border-radius: 2px;
    animation: pulse-glow 3s ease-in-out infinite;
  }

  @keyframes pulse-glow {
    0%, 100% {
      opacity: 0.8;
      transform: translateX(-50%) scaleX(1);
    }
    50% {
      opacity: 1;
      transform: translateX(-50%) scaleX(1.1);
      box-shadow: 0 0 20px rgba(218, 41, 28, 0.3);
    }
  }

  .hero-subtitle {
    font-size: 1.2rem;
    color: var(--secondary);
    margin-bottom: var(--space-xs);
    margin-top: var(--space-md);
    font-weight: var(--font-weight-light);
  }

  .hero-tagline {
    font-size: 1rem;
    color: var(--tertiary);
    margin-bottom: var(--space-lg);
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
    line-height: 1.8;
  }

  .hero-cta {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .btn {
    padding: 0.75rem 2rem;
    border-radius: 2px;
    font-weight: var(--font-weight-light);
    font-size: 0.9rem;
    transition: all 0.2s ease;
    display: inline-block;
    letter-spacing: 0.02em;
    text-transform: uppercase;
  }

  .btn-primary {
    background: var(--accent-red);
    color: var(--background);
    border: 1px solid var(--accent-red);
    position: relative;
    overflow: hidden;
    box-shadow: 0 4px 15px rgba(218, 41, 28, 0.2);
  }

  .btn-primary::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
    transition: left 0.6s ease;
  }

  .btn-primary:hover {
    background: var(--accent-red-hover);
    color: var(--background);
    box-shadow: 0 6px 20px rgba(218, 41, 28, 0.3);
    transform: translateY(-2px);
  }

  .btn-primary:hover::before {
    left: 100%;
  }

  .btn-outline {
    border: 1px solid var(--border);
    color: var(--primary);
    background: transparent;
  }

  .btn-outline:hover {
    border-color: var(--primary);
    background: var(--primary);
    color: var(--background);
  }

  /* Sections */
  .section {
    padding: calc(var(--space-xl) * 1.5) 0;
  }

  /* About Section - Timeline Roadmap */
  .about-section {
    background: var(--background);
    position: relative;
    overflow: hidden;
  }
  
  .timeline-roadmap {
    position: relative;
    margin: var(--space-lg) 0;
    min-height: 600px;
  }
  
  .timeline-path {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
  }
  
  .timeline-content {
    position: relative;
    display: grid;
    grid-template-columns: repeat(5, 1fr);
    gap: var(--space-md);
    padding: var(--space-lg) 0;
  }
  
  .timeline-item {
    position: relative;
    animation-delay: calc(var(--index) * 0.1s);
  }
  
  .timeline-dot {
    width: 16px;
    height: 16px;
