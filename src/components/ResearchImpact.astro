---
// Wrapper component for the Research Impact Dashboard
---

<div id="research-impact-container" class="visualization-wrapper">
  <div id="research-impact-root"></div>
</div>

<script>
  import ResearchImpactDashboard from './ResearchImpactDashboard.tsx';
  import React from 'react';
  import ReactDOM from 'react-dom/client';

  // Wait for DOM to be ready
  document.addEventListener('DOMContentLoaded', () => {
    const container = document.getElementById('research-impact-root');
    if (container) {
      const root = ReactDOM.createRoot(container);
      root.render(React.createElement(ResearchImpactDashboard));
    }
  });
</script>

<style>
  .visualization-wrapper {
    margin: 3rem 0;
    padding: 2rem;
    background: var(--color-bg-primary);
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-sm);
  }

  @media (max-width: 768px) {
    .visualization-wrapper {
      padding: 1rem;
      margin: 2rem 0;
    }
  }
</style>