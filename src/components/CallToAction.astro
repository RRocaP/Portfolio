---
const { lang = 'en' } = Astro.props as { lang?: string };
const copy = {
  en: { heading: 'Collaborate or Connect', text: 'Interested in joint protein engineering projects, vector optimization or translational antimicrobial research? I\'m open to collaboration and advisory conversations.', cta: 'Start a Conversation' },
  es: { heading: 'Colabora o Conecta', text: '¿Interesado en proyectos conjuntos de ingeniería de proteínas, optimización de vectores o investigación antimicrobiana traslacional? Abierto a colaboraciones y conversaciones.', cta: 'Iniciar conversación' },
  ca: { heading: 'Col·labora o Connecta', text: 'Interessat en projectes conjunts de disseny de proteïnes, optimització de vectors o recerca antimicrobiana translacional? Obert a col·laboracions i converses.', cta: 'Inicia una conversa' }
}[lang];
---
<section class="cta" aria-labelledby="cta-heading">
  <div class="container cta-inner">
    <div class="cta-text">
      <h2 id="cta-heading">{copy.heading}</h2>
      <p>{copy.text}</p>
    </div>
    <div class="cta-actions">
      <a href="mailto:ramon.rocap@gmail.com?subject=Collaboration%20Inquiry" class="cta-btn">{copy.cta}</a>
    </div>
  </div>
</section>

<style>
.cta { position: relative; padding: clamp(3rem,7vw,5rem) 0; }
.cta::before { content: ''; position: absolute; inset: 0; background: radial-gradient(circle at 70% 30%, rgba(218,41,28,0.15), transparent 70%); opacity: .6; pointer-events: none; }
.cta-inner { display: grid; grid-template-columns: 1.2fr 1fr; align-items: center; gap: clamp(2rem,5vw,4rem); background: linear-gradient(135deg, rgba(218,41,28,0.07), rgba(255,217,61,0.05)); border: 1px solid var(--border); border-radius: 24px; padding: clamp(2rem,4vw,3rem) clamp(2rem,4vw,3.5rem); position: relative; overflow: hidden; }
.cta-inner::after { content: ''; position: absolute; top: -40%; right: -20%; width: 60%; height: 180%; background: radial-gradient(circle at 30% 50%, rgba(255,255,255,0.07), transparent 70%); mix-blend-mode: overlay; pointer-events: none; }
.cta h2 { font-size: clamp(1.8rem,3.2vw,2.4rem); margin: 0 0 1rem; line-height: 1.1; letter-spacing: -.02em; }
.cta p { margin: 0; font-size: clamp(.95rem,1.1vw,1.05rem); line-height: 1.6; color: var(--secondary); max-width: 52ch; }
.cta-btn { display: inline-block; background: var(--accent-red); color: var(--background); padding: .95rem 1.75rem; border-radius: 14px; text-decoration: none; font-weight: 600; letter-spacing: .02em; border: 1px solid var(--accent-red); box-shadow: 0 6px 28px -6px rgba(218,41,28,.5); transition: transform .3s, box-shadow .3s, background .3s; }
.cta-btn:hover { transform: translateY(-4px); box-shadow: 0 14px 38px -10px rgba(218,41,28,.6); }
.cta-btn:active { transform: translateY(-1px); }
@media (max-width: 820px) { .cta-inner { grid-template-columns: 1fr; text-align: center; } .cta p { margin-left: auto; margin-right: auto; } .cta-actions { justify-self: center; } }
</style>
