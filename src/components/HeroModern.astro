---
interface Props {
  lang: 'en' | 'es' | 'ca';
}

const { lang } = Astro.props;

const dict = {
  en: {
    name: 'Ramon Roca Pinilla',
    title: 'Biomedical Engineer & Molecular Biologist',
    tagline: 'Engineering next-generation antimicrobial peptides through AI-driven design and experimental validation',
    ctaPrimary: 'Explore Research',
    ctaSecondary: 'View Publications',
    stats: {
      papers: '15+ Papers',
      citations: '250+ Citations',
      projects: '5 Active Projects'
    }
  },
  es: {
    name: 'Ramon Roca Pinilla',
    title: 'Ingeniero Biomédico y Biólogo Molecular',
    tagline: 'Desarrollando péptidos antimicrobianos de nueva generación mediante diseño impulsado por IA y validación experimental',
    ctaPrimary: 'Explorar Investigación',
    ctaSecondary: 'Ver Publicaciones',
    stats: {
      papers: '15+ Artículos',
      citations: '250+ Citas',
      projects: '5 Proyectos Activos'
    }
  },
  ca: {
    name: 'Ramon Roca Pinilla',
    title: 'Enginyer Biomèdic i Biòleg Molecular',
    tagline: 'Desenvolupant pèptids antimicrobians de nova generació mitjançant disseny impulsat per IA i validació experimental',
    ctaPrimary: 'Explorar Recerca',
    ctaSecondary: 'Veure Publicacions',
    stats: {
      papers: '15+ Articles',
      citations: '250+ Cites',
      projects: '5 Projectes Actius'
    }
  }
}[lang];
---

<section id="home" class="hero-modern">
  <div class="hero-container">
    <div class="hero-content">
      <h1 class="hero-name">
        <span class="name-line">{dict.name.split(' ')[0]}</span>
        <span class="name-line">{dict.name.split(' ').slice(1).join(' ')}</span>
      </h1>
      
      <p class="hero-title">{dict.title}</p>
      
      <p class="hero-tagline">{dict.tagline}</p>
      
      <div class="hero-actions">
        <a href="#research" class="btn-main">
          <span>{dict.ctaPrimary}</span>
          <svg class="btn-arrow" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M5 12h14m0 0l-7-7m7 7l-7 7"/>
          </svg>
        </a>
        <a href="#publications" class="btn-secondary">
          {dict.ctaSecondary}
        </a>
      </div>
      
      <div class="hero-stats">
        <div class="stat">
          <span class="stat-value">{dict.stats.papers}</span>
        </div>
        <div class="stat">
          <span class="stat-value">{dict.stats.citations}</span>
        </div>
        <div class="stat">
          <span class="stat-value">{dict.stats.projects}</span>
        </div>
      </div>
    </div>
    
    <div class="hero-visual">
      <div class="molecule-container">
        <div class="molecule-orbit orbit-1"></div>
        <div class="molecule-orbit orbit-2"></div>
        <div class="molecule-orbit orbit-3"></div>
        <div class="molecule-core"></div>
      </div>
    </div>
  </div>
  
  <div class="hero-gradient"></div>
</section>

<style>
  .hero-modern {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    background: #0a0a0a;
    overflow: hidden;
  }
  
  .hero-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 2rem;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
    position: relative;
    z-index: 2;
  }
  
  .hero-content {
    animation: slideInLeft 1s ease-out;
  }
  
  .hero-name {
    font-size: clamp(3rem, 8vw, 6rem);
    font-weight: 300;
    line-height: 0.9;
    margin: 0 0 2rem;
    letter-spacing: -0.03em;
  }
  
  .name-line {
    display: block;
    background: linear-gradient(135deg, #fff 0%, #888 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
  
  .name-line:last-child {
    font-weight: 600;
  }
  
  .hero-title {
    font-size: 1.25rem;
    color: #888;
    margin: 0 0 1.5rem;
    font-weight: 400;
    letter-spacing: 0.02em;
  }
  
  .hero-tagline {
    font-size: 1.1rem;
    color: #666;
    line-height: 1.6;
    margin: 0 0 2.5rem;
    max-width: 540px;
  }
  
  .hero-actions {
    display: flex;
    gap: 1rem;
    margin-bottom: 3rem;
    flex-wrap: wrap;
  }
  
  .btn-main {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1rem 2rem;
    background: #fff;
    color: #0a0a0a;
    text-decoration: none;
    font-weight: 500;
    border-radius: 2px;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }
  
  .btn-main:hover {
    transform: translateX(4px);
    box-shadow: 0 10px 30px rgba(255, 255, 255, 0.1);
  }
  
  .btn-arrow {
    width: 20px;
    height: 20px;
    transition: transform 0.3s ease;
  }
  
  .btn-main:hover .btn-arrow {
    transform: translateX(4px);
  }
  
  .btn-secondary {
    display: inline-flex;
    align-items: center;
    padding: 1rem 2rem;
    color: #fff;
    text-decoration: none;
    font-weight: 500;
    border: 1px solid #333;
    border-radius: 2px;
    transition: all 0.3s ease;
  }
  
  .btn-secondary:hover {
    background: rgba(255, 255, 255, 0.05);
    border-color: #666;
  }
  
  .hero-stats {
    display: flex;
    gap: 3rem;
  }
  
  .stat {
    position: relative;
  }
  
  .stat-value {
    font-size: 0.9rem;
    color: #666;
    font-weight: 500;
    letter-spacing: 0.02em;
  }
  
  /* Molecular visualization */
  .hero-visual {
    display: flex;
    align-items: center;
    justify-content: center;
    animation: slideInRight 1s ease-out;
  }
  
  .molecule-container {
    width: 400px;
    height: 400px;
    position: relative;
    animation: float 6s ease-in-out infinite;
  }
  
  .molecule-orbit {
    position: absolute;
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 50%;
    animation: rotate 20s linear infinite;
  }
  
  .orbit-1 {
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
  }
  
  .orbit-2 {
    width: 80%;
    height: 80%;
    top: 10%;
    left: 10%;
    animation-duration: 15s;
    animation-direction: reverse;
  }
  
  .orbit-3 {
    width: 60%;
    height: 60%;
    top: 20%;
    left: 20%;
    animation-duration: 10s;
  }
  
  .molecule-core {
    position: absolute;
    width: 60px;
    height: 60px;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    background: radial-gradient(circle, rgba(255,255,255,0.8) 0%, rgba(255,255,255,0) 70%);
    border-radius: 50%;
    box-shadow: 0 0 40px rgba(255,255,255,0.5);
  }
  
  .molecule-orbit::before {
    content: '';
    position: absolute;
    width: 8px;
    height: 8px;
    background: #fff;
    border-radius: 50%;
    top: -4px;
    left: 50%;
    transform: translateX(-50%);
    box-shadow: 0 0 10px rgba(255,255,255,0.8);
  }
  
  .hero-gradient {
    position: absolute;
    inset: 0;
    background: radial-gradient(circle at 20% 50%, rgba(220, 38, 38, 0.1) 0%, transparent 50%),
                radial-gradient(circle at 80% 50%, rgba(37, 99, 235, 0.05) 0%, transparent 50%);
    pointer-events: none;
  }
  
  @keyframes slideInLeft {
    from {
      opacity: 0;
      transform: translateX(-30px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }
  
  @keyframes slideInRight {
    from {
      opacity: 0;
      transform: translateX(30px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }
  
  @keyframes float {
    0%, 100% { transform: translateY(0) rotate(0deg); }
    50% { transform: translateY(-20px) rotate(3deg); }
  }
  
  @keyframes rotate {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }
  
  @media (max-width: 968px) {
    .hero-container {
      grid-template-columns: 1fr;
      text-align: center;
    }
    
    .hero-content {
      order: 2;
    }
    
    .hero-visual {
      order: 1;
      margin-bottom: 2rem;
    }
    
    .molecule-container {
      width: 300px;
      height: 300px;
    }
    
    .hero-actions {
      justify-content: center;
    }
    
    .hero-stats {
      justify-content: center;
    }
    
    .hero-tagline {
      margin-left: auto;
      margin-right: auto;
    }
  }
  
  @media (max-width: 640px) {
    .hero-actions {
      flex-direction: column;
    }
    
    .btn-main, .btn-secondary {
      width: 100%;
      justify-content: center;
    }
    
    .hero-stats {
      flex-direction: column;
      gap: 1rem;
      align-items: center;
    }
  }
</style>