    background-clip: text;
  }

  .dashboard-subtitle {
    color: rgba(148, 163, 184, 0.8);
    font-size: 1rem;
    line-height: 1.5;
  }

  /* Overall Impact Score */
  .overall-impact-score {
    text-align: center;
  }

  .impact-circle {
    margin-bottom: 1.5rem;
  }

  .impact-svg {
    width: 200px;
    height: 200px;
  }

  .impact-progress {
    transition: stroke-dashoffset 3s ease-out;
  }

  .impact-score-main {
    font-size: 2.5rem;
    font-weight: 700;
