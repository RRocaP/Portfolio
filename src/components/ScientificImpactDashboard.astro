          <!-- Data points -->
          {researchPortfolio.map((area, index) => {
            const x = 50 + (area.publications / 8) * 400;
            const y = 350 - (area.impact / 10) * 300;
            const size = 8 + area.publications * 2;
            
            return (
              <g class="portfolio-bubble" data-area={area.area}>
                <circle 
