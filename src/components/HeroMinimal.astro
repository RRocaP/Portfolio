---
interface Props {
  lang: 'en' | 'es' | 'ca';
}

const { lang } = Astro.props;

const dict = {
  en: {
    name: 'Ramon Roca Pinilla',
    title: 'Biomedical Engineer',
    subtitle: 'Molecular Biologist',
    description: 'Developing next-generation antimicrobial peptides through computational protein design and experimental validation.',
    ctaPrimary: 'View Research',
    ctaSecondary: 'Publications'
  },
  es: {
    name: 'Ramon Roca Pinilla',
    title: 'Ingeniero Biomédico',
    subtitle: 'Biólogo Molecular',
    description: 'Desarrollando péptidos antimicrobianos de nueva generación mediante diseño computacional de proteínas y validación experimental.',
    ctaPrimary: 'Ver Investigación',
    ctaSecondary: 'Publicaciones'
  },
  ca: {
    name: 'Ramon Roca Pinilla',
    title: 'Enginyer Biomèdic',
    subtitle: 'Biòleg Molecular',
    description: 'Desenvolupant pèptids antimicrobians de nova generació mitjançant disseny computacional de proteïnes i validació experimental.',
    ctaPrimary: 'Veure Recerca',
    ctaSecondary: 'Publicacions'
  }
}[lang];
---

<section id="home" class="hero-minimal">
  <div class="hero-split">
    <!-- Left side - Black -->
    <div class="hero-left">
      <div class="hero-content">
        <h1 class="hero-name">
          <span class="name-first">{dict.name.split(' ')[0]}</span>
          <span class="name-last">{dict.name.split(' ').slice(1).join(' ')}</span>
        </h1>
        
        <div class="hero-titles">
          <span>{dict.title}</span>
          <span class="separator">·</span>
          <span>{dict.subtitle}</span>
        </div>
      </div>
    </div>
    
    <!-- Right side - White -->
    <div class="hero-right">
      <div class="hero-content">
        <p class="hero-description">
          {dict.description}
        </p>
        
        <div class="hero-actions">
          <a href="#research" class="btn-black">{dict.ctaPrimary}</a>
          <a href="#publications" class="btn-outline">{dict.ctaSecondary}</a>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .hero-minimal {
    min-height: 100vh;
    position: relative;
    background: white;
  }
  
  .hero-split {
    min-height: 100vh;
    display: grid;
    grid-template-columns: 1fr 1fr;
  }
  
  .hero-left {
    background: #000;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 3rem;
    position: relative;
  }
  
  .hero-right {
    background: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 3rem;
  }
  
  .hero-content {
    max-width: 500px;
    width: 100%;
  }
  
  .hero-name {
    color: white;
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 300;
    line-height: 1.1;
    margin: 0 0 2rem;
    letter-spacing: -0.02em;
  }
  
  .name-first {
    display: block;
    font-weight: 200;
  }
  
  .name-last {
    display: block;
    font-weight: 500;
    margin-top: 0.25rem;
  }
  
  .hero-titles {
    display: flex;
    align-items: center;
    gap: 1rem;
    color: #999;
    font-size: 1.125rem;
    flex-wrap: wrap;
  }
  
  .separator {
    color: #666;
  }
  
  .hero-description {
    font-size: 1.125rem;
    line-height: 1.8;
    color: #333;
    margin: 0 0 3rem;
  }
  
  .hero-actions {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }
  
  .btn-black {
    padding: 0.875rem 2rem;
    background: #000;
    color: white;
    text-decoration: none;
    font-weight: 500;
    transition: all 0.2s ease;
    border: 2px solid #000;
  }
  
  .btn-black:hover {
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(0,0,0,0.2);
  }
  
  .btn-outline {
    padding: 0.875rem 2rem;
    background: transparent;
    color: #000;
    text-decoration: none;
    font-weight: 500;
    border: 2px solid #000;
    transition: all 0.2s ease;
  }
  
  .btn-outline:hover {
    background: #000;
    color: white;
  }
  
  /* Mobile responsive */
  @media (max-width: 768px) {
    .hero-split {
      grid-template-columns: 1fr;
      grid-template-rows: 1fr 1fr;
    }
    
    .hero-left, .hero-right {
      min-height: 50vh;
      padding: 2rem;
    }
    
    .hero-content {
      text-align: center;
    }
    
    .hero-titles {
      justify-content: center;
    }
    
    .hero-actions {
      justify-content: center;
    }
  }
  
  @media (max-width: 640px) {
    .separator {
      display: none;
    }
    
    .hero-actions {
      flex-direction: column;
      align-items: center;
    }
    
    .btn-black, .btn-outline {
      width: 100%;
      text-align: center;
    }
  }
</style>