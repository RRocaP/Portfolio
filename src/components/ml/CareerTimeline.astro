---
import type { Lang } from '../../data/i18n';
import { timelineData } from '../../data/i18n';

export interface Props {
  lang: Lang;
}

const { lang } = Astro.props;
const timeline = timelineData[lang] || timelineData.en;

const sectionHeading: Record<Lang, string> = {
  en: 'Career Journey',
  es: 'Trayectoria Profesional',
  ca: 'Trajectoria Professional',
};

const yearToFlag: Record<string, string> = {
  '2013': '\u{1F1EA}\u{1F1F8}',
  '2015': '\u{1F1FA}\u{1F1F8}',
  '2020': '\u{1F1EA}\u{1F1F8}',
  '2021': '\u{1F1E6}\u{1F1FA}',
  'Now': '\u{1F1E6}\u{1F1FA}',
  'Ahora': '\u{1F1E6}\u{1F1FA}',
  'Ara': '\u{1F1E6}\u{1F1FA}',
};

const dotColors = ['#DA291C', '#3B82F6', '#22C55E', '#D4A843', '#DA291C'];
---

<section id="career" class="ml-timeline section" aria-labelledby="career-heading">
  <div class="container">
    <h2 id="career-heading" class="ml-timeline__heading">{sectionHeading[lang]}</h2>

    <!-- Horizontal timeline â€” scrollable on overflow -->
    <div class="ml-timeline__scroll-wrapper">
      <div class="ml-timeline__track">
        <div class="ml-timeline__line" aria-hidden="true"></div>

        {timeline.map((item, i) => {
          const flag = yearToFlag[item.year] || '';
          const isAbove = i % 2 === 0;
          return (
            <div class:list={['ml-timeline__entry', isAbove ? 'ml-timeline__entry--above' : 'ml-timeline__entry--below']}>
              <div
                class="ml-timeline__dot"
                style={`background: ${dotColors[i % dotColors.length]};`}
                aria-hidden="true"
              ></div>
              <div class="ml-timeline__stem" aria-hidden="true"></div>
              <div class="ml-timeline__card">
                <div class="ml-timeline__card-header">
                  <span class="ml-timeline__year">{item.year}</span>
                  {flag && <span class="ml-timeline__flag" aria-hidden="true">{flag}</span>}
                </div>
                <h3 class="ml-timeline__title">{item.title}</h3>
                <p class="ml-timeline__line-text">{item.line}</p>
                <p class="ml-timeline__detail">{item.detail}</p>
              </div>
            </div>
          );
        })}
      </div>
    </div>
  </div>
</section>

<style>
  .ml-timeline {
    background: var(--bg-surface, #0E1219);
    padding: var(--section-padding, 6rem) 0;
    overflow: hidden;
  }

  .ml-timeline__heading {
    font-family: var(--font-display, 'Source Serif 4', serif);
    font-weight: 600;
    font-size: clamp(2rem, 4vw, 3rem);
    color: var(--text-primary, #EAEDF2);
    margin-bottom: 3rem;
    letter-spacing: -0.01em;
  }

  /* Horizontal scroll wrapper */
  .ml-timeline__scroll-wrapper {
    overflow-x: auto;
    overflow-y: visible;
    padding-bottom: 1rem;
    -webkit-overflow-scrolling: touch;
    scrollbar-width: thin;
    scrollbar-color: rgba(255,255,255,0.1) transparent;
  }

  .ml-timeline__scroll-wrapper::-webkit-scrollbar {
    height: 4px;
  }

  .ml-timeline__scroll-wrapper::-webkit-scrollbar-thumb {
    background: rgba(255,255,255,0.1);
    border-radius: 2px;
  }

  /* Horizontal track */
  .ml-timeline__track {
    position: relative;
    display: flex;
    align-items: center;
    min-width: max-content;
    padding: 180px 2rem;
    gap: 0;
  }

  .ml-timeline__line {
    position: absolute;
    left: 0;
    right: 0;
    top: 50%;
    height: 1px;
    background: rgba(255,255,255,0.10);
    transform: translateY(-50%);
  }

  .ml-timeline__entry {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    min-width: 220px;
    max-width: 260px;
    flex-shrink: 0;
  }

  /* Dot on the horizontal line */
  .ml-timeline__dot {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 10px;
    height: 10px;
    border-radius: 50%;
    transform: translate(-50%, -50%);
    z-index: 2;
    box-shadow: 0 0 0 3px var(--bg-surface, #0E1219);
    border: 2px solid rgba(255,255,255,0.12);
  }

  .ml-timeline__stem {
    position: absolute;
    left: 50%;
    width: 1px;
    background: rgba(255,255,255,0.08);
    transform: translateX(-50%);
  }

  /* Card above the line */
  .ml-timeline__entry--above .ml-timeline__stem {
    bottom: 50%;
    height: 60px;
  }

  .ml-timeline__entry--above .ml-timeline__card {
    position: absolute;
    bottom: calc(50% + 60px);
    left: 50%;
    transform: translateX(-50%);
    width: 200px;
  }

  /* Card below the line */
  .ml-timeline__entry--below .ml-timeline__stem {
    top: 50%;
    height: 60px;
  }

  .ml-timeline__entry--below .ml-timeline__card {
    position: absolute;
    top: calc(50% + 60px);
    left: 50%;
    transform: translateX(-50%);
    width: 200px;
  }

  .ml-timeline__card {
    background: var(--bg-elevated, #141A24);
    border: 1px solid rgba(255,255,255,0.06);
    border-radius: var(--card-radius, 8px);
    padding: 1.25rem;
    transition: border-color 0.2s ease, box-shadow 0.2s ease;
  }

  .ml-timeline__card:hover {
    border-color: rgba(255,255,255,0.12);
    box-shadow: 0 2px 12px rgba(0,0,0,0.3);
  }

  .ml-timeline__card-header {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 0.375rem;
  }

  .ml-timeline__year {
    font-family: var(--font-mono, monospace);
    font-size: 0.8125rem;
    font-weight: 700;
    color: var(--accent-warm, #C4956A);
  }

  .ml-timeline__flag {
    font-size: 0.875rem;
    line-height: 1;
  }

  .ml-timeline__title {
    font-family: var(--font-display, 'Source Serif 4', serif);
    font-weight: 600;
    font-size: 0.9375rem;
    color: var(--text-primary, #EAEDF2);
    margin-bottom: 0.25rem;
    line-height: 1.3;
  }

  .ml-timeline__line-text {
    font-family: var(--font-body, 'DM Sans', sans-serif);
    font-size: 0.8125rem;
    color: var(--text-secondary, #B8BFC9);
    margin-bottom: 0.25rem;
    font-weight: 500;
  }

  .ml-timeline__detail {
    font-family: var(--font-body, 'DM Sans', sans-serif);
    font-size: 0.75rem;
    color: var(--text-muted, #8B95A3);
    margin-bottom: 0;
    line-height: 1.5;
  }

  /* Mobile: vertical timeline */
  @media (max-width: 768px) {
    .ml-timeline {
      padding: 4rem 0;
    }

    .ml-timeline__scroll-wrapper {
      overflow-x: visible;
    }

    .ml-timeline__track {
      flex-direction: column;
      padding: 0 0 0 2rem;
      min-width: unset;
      align-items: flex-start;
      gap: 0;
    }

    .ml-timeline__line {
      top: 0;
      bottom: 0;
      left: 0.5rem;
      right: auto;
      width: 1px;
      height: 100%;
      transform: none;
    }

    .ml-timeline__entry {
      min-width: unset;
      max-width: 100%;
      width: 100%;
      align-items: flex-start;
      margin-bottom: 1.5rem;
    }

    .ml-timeline__dot {
      top: 1.25rem;
      left: -1.5rem;
      transform: translate(-50%, 0);
    }

    .ml-timeline__stem {
      display: none;
    }

    .ml-timeline__entry--above .ml-timeline__card,
    .ml-timeline__entry--below .ml-timeline__card {
      position: static;
      transform: none;
      width: 100%;
    }
  }
</style>
