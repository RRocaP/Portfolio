---
import type { Lang } from '../../data/i18n';

export interface Props {
  lang: Lang;
}

const { lang } = Astro.props;

const sectionHeading: Record<Lang, string> = {
  en: 'Research Impact',
  es: 'Impacto Investigador',
  ca: 'Impacte Investigador',
};

const metricLabels: Record<Lang, { citations: string; hIndex: string; publications: string; firstAuthor: string }> = {
  en: { citations: 'Total Citations', hIndex: 'h-index', publications: 'Publications', firstAuthor: 'First Author' },
  es: { citations: 'Citas Totales', hIndex: 'indice-h', publications: 'Publicaciones', firstAuthor: 'Primer Autor' },
  ca: { citations: 'Cites Totals', hIndex: 'index-h', publications: 'Publicacions', firstAuthor: 'Primer Autor' },
};

const labels = metricLabels[lang] || metricLabels.en;

const yearData = [
  { year: '2018', count: 1, height: 8 },
  { year: '2020', count: 5, height: 35 },
  { year: '2021', count: 2, height: 15 },
  { year: '2022', count: 3, height: 22 },
  { year: '2023', count: 3, height: 22 },
  { year: '2024', count: 2, height: 15 },
  { year: '2025', count: 1, height: 8 },
];
---

<section id="impact" class="ml-impact section" aria-labelledby="impact-heading">
  <div class="container">
    <h2 id="impact-heading" class="ml-impact__heading">{sectionHeading[lang]}</h2>

    <!-- Oversized metric numbers in a row -->
    <div class="ml-impact__metrics" role="list" aria-label="Key metrics">
      <div class="ml-impact__metric" role="listitem">
        <span class="ml-impact__metric-value" data-counter-impact="291">291</span>
        <span class="ml-impact__metric-label">{labels.citations}</span>
      </div>
      <div class="ml-impact__metric-divider" aria-hidden="true"></div>
      <div class="ml-impact__metric" role="listitem">
        <span class="ml-impact__metric-value" data-counter-impact="9">9</span>
        <span class="ml-impact__metric-label">{labels.hIndex}</span>
      </div>
      <div class="ml-impact__metric-divider" aria-hidden="true"></div>
      <div class="ml-impact__metric" role="listitem">
        <span class="ml-impact__metric-value" data-counter-impact="16">16</span>
        <span class="ml-impact__metric-label">{labels.publications}</span>
      </div>
      <div class="ml-impact__metric-divider" aria-hidden="true"></div>
      <div class="ml-impact__metric" role="listitem">
        <span class="ml-impact__metric-value" data-counter-impact="7">7</span>
        <span class="ml-impact__metric-label">{labels.firstAuthor}</span>
      </div>
    </div>

    <!-- SVG area chart -->
    <div class="ml-impact__chart" role="img" aria-label="Publications by year">
      <div class="ml-impact__chart-bars">
        {yearData.map((d) => (
          <div class="ml-impact__bar-group">
            <div class="ml-impact__bar-wrapper">
              <div
                class="ml-impact__bar"
                style={`height: ${d.height}%;`}
                title={`${d.year}: ${d.count} publications`}
              >
                <span class="ml-impact__bar-count">{d.count}</span>
              </div>
            </div>
            <span class="ml-impact__bar-label">{d.year}</span>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  .ml-impact {
    background: var(--bg-surface, #0E1219);
    padding: var(--section-padding, 6rem) 0;
  }

  .ml-impact__heading {
    font-family: var(--font-display, 'Source Serif 4', serif);
    font-weight: 600;
    font-size: clamp(2rem, 4vw, 3rem);
    color: var(--text-primary, #EAEDF2);
    margin-bottom: var(--heading-gap);
    letter-spacing: -0.01em;
  }

  /* Oversized metric numbers — no cards, just numbers with dividers */
  .ml-impact__metrics {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0;
    margin-bottom: 3.5rem;
    flex-wrap: wrap;
  }

  .ml-impact__metric {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 0 2.5rem;
  }

  .ml-impact__metric-divider {
    width: 1px;
    height: 64px;
    background: var(--border-muted);
    flex-shrink: 0;
  }

  .ml-impact__metric-value {
    font-family: var(--font-display, 'Source Serif 4', serif);
    font-weight: 700;
    font-size: clamp(3rem, 6vw, 5rem);
    color: var(--accent-warm, #C4956A);
    line-height: 1;
    letter-spacing: -0.02em;
  }

  .ml-impact__metric-label {
    font-family: var(--font-body, 'DM Sans', sans-serif);
    font-size: 0.8125rem; /* WCAG fix: was 0.75rem (12px), now 13px */
    color: var(--text-muted, #9BA5B3);
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    margin-top: 0.5rem;
  }

  /* Simple bar chart — warm accent */
  .ml-impact__chart {
    border-top: 1px solid var(--border-subtle);
    padding-top: 2rem;
    min-height: 240px;
  }

  .ml-impact__chart-bars {
    display: flex;
    align-items: flex-end;
    justify-content: space-between;
    gap: 0.75rem;
    height: 180px;
  }

  .ml-impact__bar-group {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
    height: 100%;
  }

  .ml-impact__bar-wrapper {
    flex: 1;
    width: 100%;
    display: flex;
    align-items: flex-end;
    justify-content: center;
  }

  .ml-impact__bar {
    width: 70%;
    max-width: 40px;
    background: rgba(var(--accent-warm-rgb, 212,168,75), 0.7); /* WCAG fix: alpha bg instead of opacity to preserve child text contrast */
    border-radius: 3px 3px 0 0;
    position: relative;
    min-height: 4px;
    transform-origin: bottom;
    transition: background var(--transition-moderate) var(--ease-default), transform var(--transition-moderate) var(--ease-out-expo);
  }

  .ml-impact__chart-bars:hover .ml-impact__bar {
    background: rgba(var(--accent-warm-rgb, 212,168,75), 0.25); /* WCAG fix: was opacity:0.3 which faded child text */
  }

  .ml-impact__chart-bars .ml-impact__bar:hover {
    background: rgba(var(--accent-warm-rgb, 212,168,75), 1);
    transform: scaleY(1.05);
  }

  .ml-impact__bar-count {
    font-family: var(--font-mono, monospace);
    font-size: 0.75rem; /* WCAG fix: was 0.6875rem (11px), now 12px */
    font-weight: 600;
    color: var(--text-secondary, #B8BFC9);
    position: absolute;
    top: -1.25rem;
    left: 50%;
    transform: translateX(-50%);
  }

  .ml-impact__bar-label {
    font-family: var(--font-mono, monospace);
    font-size: 0.75rem; /* WCAG fix: was 0.6875rem (11px), now 12px */
    color: var(--text-muted, #9BA5B3);
  }

  @media (max-width: 768px) {
    .ml-impact__metrics {
      gap: 1rem;
    }

    .ml-impact__metric {
      padding: 0 1.25rem;
    }

    .ml-impact__metric-divider {
      height: 40px;
    }

    .ml-impact__metric-value {
      font-size: clamp(2rem, 8vw, 3rem);
    }
  }

  @media (max-width: 480px) {
    .ml-impact__metrics {
      flex-direction: column;
      gap: 0;
    }

    .ml-impact__metric {
      padding: 1rem 0;
    }

    .ml-impact__metric-divider {
      width: 60px;
      height: 1px;
    }
  }
</style>

<script>
  function animateImpactCounters() {
    const counters = document.querySelectorAll('[data-counter-impact]');
    if (!counters.length) return;

    const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;

    const observer = new IntersectionObserver((entries) => {
      entries.forEach((entry) => {
        if (!entry.isIntersecting) return;
        const el = entry.target as HTMLElement;
        const target = parseInt(el.getAttribute('data-counter-impact') || '0', 10);

        if (prefersReducedMotion) {
          el.textContent = String(target);
          observer.unobserve(el);
          return;
        }

        const duration = 1200;
        let startTime: number | null = null;

        function step(timestamp: number) {
          if (!startTime) startTime = timestamp;
          const progress = Math.min((timestamp - startTime) / duration, 1);
          const eased = 1 - Math.pow(1 - progress, 3);
          el.textContent = String(Math.round(eased * target));
          if (progress < 1) requestAnimationFrame(step);
        }

        el.textContent = '0';
        requestAnimationFrame(step);
        observer.unobserve(el);
      });
    }, { threshold: 0.3 });

    counters.forEach((c) => observer.observe(c));
  }

  document.addEventListener('DOMContentLoaded', animateImpactCounters);
  document.addEventListener('astro:page-load', animateImpactCounters);
  if (document.readyState !== 'loading') animateImpactCounters();
</script>
