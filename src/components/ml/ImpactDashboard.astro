---
import type { Lang } from '../../data/i18n';

export interface Props {
  lang: Lang;
}

const { lang } = Astro.props;

const sectionHeading: Record<Lang, string> = {
  en: 'Research Impact',
  es: 'Impacto Investigador',
  ca: 'Impacte Investigador',
};

const metricLabels: Record<Lang, { citations: string; hIndex: string; publications: string; firstAuthor: string }> = {
  en: { citations: 'Total Citations', hIndex: 'h-index', publications: 'Publications', firstAuthor: 'First Author' },
  es: { citations: 'Citas Totales', hIndex: 'indice-h', publications: 'Publicaciones', firstAuthor: 'Primer Autor' },
  ca: { citations: 'Cites Totals', hIndex: 'index-h', publications: 'Publicacions', firstAuthor: 'Primer Autor' },
};

const labels = metricLabels[lang] || metricLabels.en;

// Citation data by year (approximate from publication record)
const yearData = [
  { year: '2018', count: 1, height: 8 },
  { year: '2020', count: 5, height: 35 },
  { year: '2021', count: 2, height: 15 },
  { year: '2022', count: 3, height: 22 },
  { year: '2023', count: 3, height: 22 },
  { year: '2024', count: 2, height: 15 },
  { year: '2025', count: 1, height: 8 },
];

const maxHeight = 100; // percent
---

<section id="impact" class="ml-impact section" aria-labelledby="impact-heading">
  <div class="container">
    <div data-animate="fade-up">
      <h2 id="impact-heading" class="ml-impact__heading">{sectionHeading[lang]}</h2>
      <div class="ml-impact__accent" aria-hidden="true"></div>
    </div>

    <!-- Metrics row (top) -->
    <div class="ml-impact__metrics" data-animate="fade-up" data-delay="100">
      <div class="ml-impact__metric-card">
        <span class="ml-impact__metric-value">291</span>
        <span class="ml-impact__metric-label">{labels.citations}</span>
      </div>
      <div class="ml-impact__metric-card">
        <span class="ml-impact__metric-value">9</span>
        <span class="ml-impact__metric-label">{labels.hIndex}</span>
      </div>
      <div class="ml-impact__metric-card">
        <span class="ml-impact__metric-value">16</span>
        <span class="ml-impact__metric-label">{labels.publications}</span>
      </div>
      <div class="ml-impact__metric-card">
        <span class="ml-impact__metric-value">7</span>
        <span class="ml-impact__metric-label">{labels.firstAuthor}</span>
      </div>
    </div>

    <!-- Full-width chart (below) -->
    <div class="ml-impact__chart" data-animate="fade-up" data-delay="200" role="img" aria-label="Publications by year bar chart">
      <div class="ml-impact__chart-bars">
        {yearData.map((d) => (
          <div class="ml-impact__bar-group">
            <div class="ml-impact__bar-wrapper">
              <div
                class="ml-impact__bar"
                style={`height: ${d.height}%;`}
                title={`${d.year}: ${d.count} publications`}
              >
                <span class="ml-impact__bar-count">{d.count}</span>
              </div>
            </div>
            <span class="ml-impact__bar-label">{d.year}</span>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  .ml-impact {
    background: var(--background-alt, #0f1729);
  }

  .ml-impact__heading {
    font-family: var(--font-display, 'Outfit', sans-serif);
    font-weight: 700;
    font-size: clamp(2rem, 4.5vw, 2.75rem);
    color: var(--text-primary, #F1F5F9);
    text-align: center;
    margin-bottom: 0.5rem;
  }

  .ml-impact__accent {
    width: 60px;
    height: 3px;
    background: linear-gradient(90deg, var(--accent-red, #DA291C) 0%, var(--accent-yellow, #FFD93D) 100%);
    margin: 0 auto 3rem;
    border-radius: 2px;
  }

  /* Metrics row â€” 4 columns on top */
  .ml-impact__metrics {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 1.5rem;
    margin-bottom: 2.5rem;
  }

  .ml-impact__metric-card {
    background: var(--surface-glass, rgba(15,23,42,0.6));
    backdrop-filter: blur(16px);
    -webkit-backdrop-filter: blur(16px);
    border: 1px solid var(--border-light, rgba(148,163,184,0.12));
    border-radius: var(--card-radius, 16px);
    padding: 1.75rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
    transition: border-color 0.2s ease, transform 0.3s ease;
  }

  .ml-impact__metric-card:hover {
    border-color: rgba(148,163,184,0.18);
    transform: translateY(-2px);
  }

  .ml-impact__metric-value {
    font-family: var(--font-mono, monospace);
    font-weight: 800;
    font-size: clamp(2.5rem, 5vw, 3.5rem);
    line-height: 1;
    background: linear-gradient(135deg, var(--text-primary, #F1F5F9) 0%, var(--accent-red-text, #EF4444) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .ml-impact__metric-label {
    font-family: var(--font-primary, sans-serif);
    font-size: 0.8125rem;
    color: var(--text-muted, #8494A7);
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.03em;
  }

  /* Full-width chart below */
  .ml-impact__chart {
    background: var(--surface-glass, rgba(15,23,42,0.6));
    backdrop-filter: blur(16px);
    -webkit-backdrop-filter: blur(16px);
    border: 1px solid var(--border-light, rgba(148,163,184,0.12));
    border-radius: var(--card-radius, 16px);
    padding: 2rem;
    min-height: 280px;
  }

  .ml-impact__chart-bars {
    display: flex;
    align-items: flex-end;
    justify-content: space-between;
    gap: 0.75rem;
    height: 200px;
  }

  .ml-impact__bar-group {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
    height: 100%;
  }

  .ml-impact__bar-wrapper {
    flex: 1;
    width: 100%;
    display: flex;
    align-items: flex-end;
    justify-content: center;
  }

  .ml-impact__bar {
    width: 80%;
    max-width: 48px;
    background: linear-gradient(180deg, var(--accent-red, #DA291C) 0%, rgba(218, 41, 28, 0.4) 100%);
    border-radius: 6px 6px 0 0;
    position: relative;
    min-height: 4px;
    transition: height 0.6s ease;
    display: flex;
    align-items: flex-start;
    justify-content: center;
  }

  .ml-impact__bar-count {
    font-family: var(--font-mono, monospace);
    font-size: 0.6875rem;
    font-weight: 700;
    color: var(--text-primary, #F1F5F9);
    position: absolute;
    top: -1.25rem;
  }

  .ml-impact__bar-label {
    font-family: var(--font-mono, monospace);
    font-size: 0.6875rem;
    color: var(--text-muted, #8494A7);
    letter-spacing: -0.02em;
  }

  @media (max-width: 768px) {
    .ml-impact__metrics {
      grid-template-columns: repeat(2, 1fr);
    }
  }
</style>
