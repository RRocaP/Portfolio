---
import type { Lang } from '../../data/i18n';
import { translations } from '../../data/i18n';

export interface Props {
  lang: Lang;
}

const { lang } = Astro.props;
const t = translations[lang] || translations.en;
const base = import.meta.env.BASE_URL.replace(/\/$/, '');

const langPaths: Record<Lang, string> = {
  en: `${base}/en/`,
  es: `${base}/es/`,
  ca: `${base}/ca/`,
};

const navLinks = [
  { href: '#about', label: t.nav.about },
  { href: '#research', label: t.nav.research },
  { href: '#publications', label: t.nav.publications },
  { href: '#career', label: t.sections.timeline },
  { href: '#contact', label: t.nav.contact },
];
---

<nav class="ml-nav" role="navigation" aria-label="Main navigation">
  <div class="ml-nav__inner">
    <a href={langPaths[lang]} class="ml-nav__logo" aria-label="Home">
      <span class="ml-nav__prompt">&gt;</span> RRP
    </a>
    <div class="ml-nav__links">
      {navLinks.map((link) => (
        <a href={link.href} class="ml-nav__link">{link.label}</a>
      ))}
      <div class="ml-nav__lang" role="group" aria-label="Language switcher">
        {(['en', 'es', 'ca'] as Lang[]).map((l) => (
          <a
            href={langPaths[l]}
            class:list={['ml-nav__lang-btn', { 'ml-nav__lang-btn--active': l === lang }]}
            aria-current={l === lang ? 'page' : undefined}
          >
            {l.toUpperCase()}
          </a>
        ))}
      </div>
    </div>
    <button class="ml-nav__mobile-toggle" aria-label="Toggle menu" aria-expanded="false">
      <span class="ml-nav__hamburger"></span>
    </button>
  </div>
</nav>

<style>
  .ml-nav {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 200;
    background: var(--bg-base, #080B11);
    border-bottom: 1px solid var(--border-subtle);
    transition: background var(--transition-moderate) var(--ease-default), border-color var(--transition-moderate) var(--ease-default), box-shadow var(--transition-moderate) var(--ease-default);
  }

  .ml-nav--scrolled {
    background: var(--bg-surface, #0E1219);
    border-bottom-color: var(--border-default);
    box-shadow: 0 4px 24px rgba(0,0,0,0.6);
  }

  .ml-nav__inner {
    max-width: 1280px;
    margin: 0 auto;
    padding: 0 1.5rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 3.5rem;
  }

  .ml-nav__logo {
    font-family: var(--font-mono, monospace);
    font-size: 1.125rem;
    font-weight: 700;
    color: var(--text-primary, #EAEDF2);
    text-decoration: none;
    border-bottom: none;
    letter-spacing: 0.02em;
    transition: color var(--transition-base) var(--ease-default);
  }

  .ml-nav__logo:hover {
    color: var(--accent-red-text, #EF4444);
    transform: none;
    border-bottom: none;
  }

  .ml-nav__prompt {
    color: var(--terminal-green, #4ADE80);
    margin-right: 0.25rem;
  }

  .ml-nav__links {
    display: flex;
    align-items: center;
    gap: 2rem;
  }

  .ml-nav__link {
    font-family: var(--font-body, 'DM Sans', sans-serif);
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--text-primary, #EAEDF2);
    text-decoration: none;
    border-bottom: none;
    transition: color var(--transition-base) var(--ease-default);
    position: relative;
  }

  .ml-nav__link::after {
    content: '';
    position: absolute;
    bottom: -4px;
    left: 0;
    right: 0;
    height: 1px;
    background: var(--accent-red, #DA291C);
    transform: scaleX(0);
    transform-origin: center;
    transition: transform var(--transition-moderate) var(--ease-out-expo);
  }

  .ml-nav__link--active {
    color: var(--text-primary, #EAEDF2);
  }

  .ml-nav__link--active::after {
    transform: scaleX(1);
  }

  .ml-nav__link:hover {
    color: #FFFFFF;
    transform: none;
    border-bottom: none;
  }

  .ml-nav__link:hover::after {
    transform: scaleX(1);
  }

  .ml-nav__link:focus-visible {
    outline: 2px solid var(--accent-red, #DA291C);
    outline-offset: 4px;
    border-radius: 2px;
  }

  .ml-nav .ml-nav__lang {
    display: flex;
    gap: 0.375rem;
    margin-left: 1rem;
    padding-left: 1rem;
    border-left: 1px solid var(--border-emphasis);
    align-items: center;
  }

  .ml-nav .ml-nav__lang-btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    font-family: var(--font-mono, 'JetBrains Mono', monospace);
    font-size: 0.8125rem;
    font-weight: 600;
    color: var(--text-primary);
    text-decoration: none;
    border: 1px solid var(--border-emphasis);
    border-bottom: 1px solid var(--border-emphasis);
    padding: 0.25rem 0.625rem;
    border-radius: 4px;
    transition: all var(--transition-base) var(--ease-default);
    min-height: auto;
    min-width: auto;
    letter-spacing: 0.04em;
    line-height: 1.2;
    transform: none;
  }

  .ml-nav .ml-nav__lang-btn:hover {
    color: #FFFFFF;
    background: var(--border-default);
    border-color: rgba(255, 255, 255, 0.25);
    transform: none;
    text-decoration: none;
  }

  .ml-nav .ml-nav__lang-btn--active {
    color: #FFFFFF;
    background: rgba(218, 41, 28, 0.20);
    border-color: rgba(218, 41, 28, 0.5);
  }

  .ml-nav .ml-nav__lang-btn--active:hover {
    background: rgba(218, 41, 28, 0.30);
    border-color: rgba(218, 41, 28, 0.6);
  }

  .ml-nav__lang-btn:focus-visible {
    outline: 2px solid var(--accent-red, #DA291C);
    outline-offset: 2px;
    border-radius: 4px;
  }

  .ml-nav__mobile-toggle {
    display: none;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0.5rem;
    min-width: 44px;
    min-height: 44px;
    align-items: center;
    justify-content: center;
  }

  .ml-nav__hamburger,
  .ml-nav__hamburger::before,
  .ml-nav__hamburger::after {
    display: block;
    width: 20px;
    height: 2px;
    background: var(--text-primary, #EAEDF2);
    border-radius: 1px;
    transition: all var(--transition-moderate) var(--ease-default);
  }

  .ml-nav__hamburger {
    position: relative;
  }

  .ml-nav__hamburger::before,
  .ml-nav__hamburger::after {
    content: '';
    position: absolute;
    left: 0;
  }

  .ml-nav__hamburger::before { top: -6px; }
  .ml-nav__hamburger::after { top: 6px; }

  @media (max-width: 768px) {
    .ml-nav__links {
      display: none;
      position: absolute;
      top: 3.5rem;
      left: 0;
      right: 0;
      background: var(--bg-surface, #0E1219);
      flex-direction: column;
      padding: 1.5rem;
      gap: 1rem;
      border-bottom: 1px solid var(--border-subtle);
    }

    .ml-nav__links.is-open {
      display: flex;
    }

    .ml-nav__link {
      font-size: 1rem;
      padding: 0.5rem 0;
    }

    .ml-nav__lang {
      margin-left: 0;
      padding-left: 0;
      border-left: none;
      padding-top: 0.75rem;
      border-top: 1px solid var(--border-default);
      justify-content: center;
    }

    .ml-nav .ml-nav__lang-btn {
      font-size: 0.875rem;
      padding: 0.5rem 1rem;
      min-height: auto;
      min-width: auto;
    }

    .ml-nav__mobile-toggle {
      display: flex;
    }
  }
</style>

<script>
  // Mobile toggle
  const toggle = document.querySelector('.ml-nav__mobile-toggle');
  const links = document.querySelector('.ml-nav__links');
  if (toggle && links) {
    toggle.addEventListener('click', () => {
      const isOpen = links.classList.toggle('is-open');
      toggle.setAttribute('aria-expanded', String(isOpen));
    });
  }

  // Scroll-triggered nav background
  const nav = document.querySelector('.ml-nav');
  if (nav) {
    const onScroll = () => {
      nav.classList.toggle('ml-nav--scrolled', window.scrollY > 40);
    };
    window.addEventListener('scroll', onScroll, { passive: true });
    onScroll();
  }

  // Scroll spy: highlight active nav link based on visible section
  const navLinks = document.querySelectorAll('.ml-nav__link[href^="#"]');
  const sections = document.querySelectorAll('section[id]');

  if (navLinks.length && sections.length) {
    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            const id = entry.target.getAttribute('id');
            navLinks.forEach((link) => {
              const href = link.getAttribute('href');
              link.classList.toggle('ml-nav__link--active', href === `#${id}`);
            });
          }
        });
      },
      { rootMargin: '-20% 0px -80% 0px', threshold: 0 }
    );

    sections.forEach((section) => observer.observe(section));
  }
</script>
