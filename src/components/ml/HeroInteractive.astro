---
import type { Lang } from '../../data/i18n';
import { translations } from '../../data/i18n';
import NavML from './NavML.astro';

export interface Props {
  lang: Lang;
}

const { lang } = Astro.props;
const t = translations[lang] || translations.en;

const commentLine: Record<Lang, string> = {
  en: '// biomedical engineer + ML enthusiast',
  es: '// ingeniero biomedico + entusiasta ML',
  ca: '// enginyer biomedic + entusiasta ML',
};

const statLabels: Record<Lang, { citations: string; hIndex: string; papers: string }> = {
  en: { citations: 'citations', hIndex: 'h-index', papers: 'papers' },
  es: { citations: 'citas', hIndex: 'indice-h', papers: 'articulos' },
  ca: { citations: 'cites', hIndex: 'index-h', papers: 'articles' },
};

const labels = statLabels[lang] || statLabels.en;
---

<NavML lang={lang} />

<section class="ml-hero" aria-label="Hero">
  <div class="ml-hero__container">
    <div class="ml-hero__left">
      <p class="ml-hero__comment">{commentLine[lang]}</p>
      <h1 class="ml-hero__name" data-gsap="hero-name">{t.hero.title}</h1>
      <p class="ml-hero__tagline" data-gsap="hero-tagline">{t.hero.tagline}</p>

      <div class="ml-hero__actions" data-gsap="hero-actions">
        <a href="#publications" class="ml-hero__btn ml-hero__btn--primary">
          {t.nav.publications}
        </a>
        <a href="#contact" class="ml-hero__btn ml-hero__btn--outline">
          {t.nav.contact}
        </a>
      </div>
    </div>

    <div class="ml-hero__right" data-gsap="hero-stats">
      <div class="ml-hero__stats" role="list" aria-label="Key metrics">
        <div class="ml-hero__stat" role="listitem">
          <span class="ml-hero__stat-number" data-counter="291">291</span>
          <span class="ml-hero__stat-label">{labels.citations}</span>
        </div>
        <div class="ml-hero__stat-rule" aria-hidden="true"></div>
        <div class="ml-hero__stat" role="listitem">
          <span class="ml-hero__stat-number" data-counter="9">h-9</span>
          <span class="ml-hero__stat-label">{labels.hIndex}</span>
        </div>
        <div class="ml-hero__stat-rule" aria-hidden="true"></div>
        <div class="ml-hero__stat" role="listitem">
          <span class="ml-hero__stat-number" data-counter="16">16</span>
          <span class="ml-hero__stat-label">{labels.papers}</span>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .ml-hero {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    background: var(--bg-base, #080B11);
    overflow: hidden;
    padding-top: 3.5rem;
  }

  .ml-hero__container {
    max-width: 1280px;
    margin: 0 auto;
    padding: 0 2rem;
    width: 100%;
    display: grid;
    grid-template-columns: 1.2fr 0.8fr;
    gap: 4rem;
    align-items: center;
    position: relative;
    z-index: 1;
  }

  .ml-hero__left {
    position: relative;
  }

  .ml-hero__comment {
    font-family: var(--font-mono, monospace);
    font-weight: 400;
    font-size: 0.875rem;
    color: var(--text-muted, #8B95A3);
    margin-bottom: 1rem;
    line-height: 1.4;
  }

  .ml-hero__name {
    font-family: var(--font-display, 'Source Serif 4', serif);
    font-weight: 400;
    font-size: clamp(3rem, 7vw, 5.5rem);
    color: var(--text-primary, #EAEDF2);
    line-height: 1.05;
    letter-spacing: -0.03em;
    margin-bottom: 1.25rem;
    -webkit-font-smoothing: antialiased;
  }

  .ml-hero__tagline {
    font-family: var(--font-body, 'DM Sans', sans-serif);
    font-size: clamp(1.125rem, 2vw, 1.375rem);
    color: var(--text-secondary, #B8BFC9);
    max-width: 540px;
    line-height: 1.7;
    margin-bottom: 2.5rem;
  }

  .ml-hero__actions {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .ml-hero__btn {
    display: inline-flex;
    align-items: center;
    padding: 0.875rem 2rem;
    font-family: var(--font-body, 'DM Sans', sans-serif);
    font-size: 0.9375rem;
    font-weight: 500;
    text-decoration: none;
    border-bottom: none;
    transition: all 0.25s cubic-bezier(0.25, 1, 0.5, 1);
    min-height: 44px;
  }

  .ml-hero__btn:hover {
    border-bottom: none;
  }

  .ml-hero__btn:focus-visible {
    outline: 2px solid var(--accent-red, #DA291C);
    outline-offset: 3px;
  }

  /* Ghost style buttons */
  .ml-hero__btn--primary {
    background: transparent;
    color: var(--text-primary, #EAEDF2);
    border: 1px solid var(--accent-red, #DA291C);
    transition: background 0.25s ease, color 0.25s ease;
  }

  .ml-hero__btn--primary:hover {
    background: var(--accent-red, #DA291C);
    color: #ffffff;
    transform: translate(-2px, -2px);
    box-shadow: 3px 3px 0 rgba(218, 41, 28, 0.3);
  }

  .ml-hero__btn--outline {
    background: transparent;
    color: var(--text-secondary, #B8BFC9);
    border: 1px solid rgba(255,255,255,0.10);
    transition: background 0.25s ease, border-color 0.25s ease;
  }

  .ml-hero__btn--outline:hover {
    border-color: rgba(255,255,255,0.20);
    background: rgba(255,255,255,0.03);
    color: var(--text-primary, #EAEDF2);
    transform: none;
  }

  /* Right column — stats as inline text with dividers */
  .ml-hero__right {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ml-hero__stats {
    display: flex;
    flex-direction: column;
    gap: 0;
    width: 100%;
    max-width: 280px;
  }

  .ml-hero__stat {
    display: flex;
    flex-direction: column;
    padding: 1.5rem 0;
  }

  .ml-hero__stat-rule {
    width: 100%;
    height: 1px;
    background: rgba(255,255,255,0.08);
  }

  .ml-hero__stat-number {
    font-family: var(--font-display, 'Source Serif 4', serif);
    font-weight: 700;
    font-size: clamp(2.5rem, 4vw, 3.5rem);
    color: var(--accent-warm, #C4956A);
    line-height: 1;
    letter-spacing: -0.02em;
  }

  .ml-hero__stat-label {
    font-family: var(--font-body, 'DM Sans', sans-serif);
    font-size: 0.8125rem;
    color: var(--text-muted, #8B95A3);
    text-transform: uppercase;
    letter-spacing: 0.08em;
    font-weight: 500;
    margin-top: 0.375rem;
  }

  /* Entrance animations — CSS-only with GSAP enhancement */
  .ml-hero__left > * {
    opacity: 0;
    transform: translateY(24px);
    animation: heroFadeIn 0.7s cubic-bezier(0.16, 1, 0.3, 1) forwards;
  }
  .ml-hero__left > *:nth-child(1) { animation-delay: 0.1s; }
  .ml-hero__left > *:nth-child(2) { animation-delay: 0.2s; }
  .ml-hero__left > *:nth-child(3) { animation-delay: 0.35s; }
  .ml-hero__left > *:nth-child(4) { animation-delay: 0.5s; }

  .ml-hero__right {
    opacity: 0;
    transform: translateX(24px);
    animation: heroSlideIn 0.8s cubic-bezier(0.16, 1, 0.3, 1) 0.3s forwards;
  }

  @keyframes heroFadeIn {
    to { opacity: 1; transform: translateY(0); }
  }

  @keyframes heroSlideIn {
    to { opacity: 1; transform: translateX(0); }
  }

  /* Mobile: stack vertically */
  @media (max-width: 768px) {
    .ml-hero__container {
      grid-template-columns: 1fr;
      gap: 2.5rem;
      padding: 0 1.25rem;
    }

    .ml-hero__stats {
      flex-direction: row;
      max-width: 100%;
      gap: 0;
    }

    .ml-hero__stat {
      flex: 1;
      align-items: center;
      text-align: center;
      padding: 1rem 0;
    }

    .ml-hero__stat-rule {
      width: 1px;
      height: 48px;
      align-self: center;
    }

    .ml-hero__stat-number {
      font-size: clamp(2rem, 6vw, 2.5rem);
    }

    .ml-hero__right {
      animation-name: heroFadeIn;
      transform: translateY(24px);
    }
  }

  @media (max-width: 480px) {
    .ml-hero__container {
      padding: 0 1rem;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .ml-hero__left > *,
    .ml-hero__right {
      animation: none;
      opacity: 1;
      transform: none;
    }
  }
</style>

<script>
  function animateCounters() {
    const counters = document.querySelectorAll('[data-counter]');
    if (!counters.length) return;

    const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;

    const observer = new IntersectionObserver((entries) => {
      entries.forEach((entry) => {
        if (!entry.isIntersecting) return;

        const el = entry.target as HTMLElement;
        const target = parseInt(el.getAttribute('data-counter') || '0', 10);
        const originalText = el.textContent || '';
        const hasHPrefix = originalText.includes('h-');

        if (prefersReducedMotion) {
          el.textContent = hasHPrefix ? `h-${target}` : `${target}`;
          observer.unobserve(el);
          return;
        }

        const duration = 1500;
        let startTime: number | null = null;

        function easeOutCubic(t: number): number {
          return 1 - Math.pow(1 - t, 3);
        }

        function step(timestamp: number) {
          if (!startTime) startTime = timestamp;
          const elapsed = timestamp - startTime;
          const progress = Math.min(elapsed / duration, 1);
          const current = Math.round(easeOutCubic(progress) * target);
          el.textContent = hasHPrefix ? `h-${current}` : `${current}`;
          if (progress < 1) requestAnimationFrame(step);
        }

        el.textContent = hasHPrefix ? 'h-0' : '0';
        requestAnimationFrame(step);
        observer.unobserve(el);
      });
    }, { threshold: 0.2 });

    counters.forEach((counter) => observer.observe(counter));
  }

  document.addEventListener('DOMContentLoaded', animateCounters);
  document.addEventListener('astro:page-load', animateCounters);
  if (document.readyState === 'complete' || document.readyState === 'interactive') {
    animateCounters();
  }
</script>
