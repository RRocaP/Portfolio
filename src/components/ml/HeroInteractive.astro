---
import type { Lang } from '../../data/i18n';
import { translations } from '../../data/i18n';
import NavML from './NavML.astro';

export interface Props {
  lang: Lang;
}

const { lang } = Astro.props;
const t = translations[lang] || translations.en;

const commentLine: Record<Lang, string> = {
  en: '// biomedical engineer + ML enthusiast',
  es: '// ingeniero biomedico + entusiasta ML',
  ca: '// enginyer biomedic + entusiasta ML',
};

const statLabels: Record<Lang, { citations: string; hIndex: string; papers: string }> = {
  en: { citations: 'citations', hIndex: 'h-index', papers: 'papers' },
  es: { citations: 'citas', hIndex: 'indice-h', papers: 'articulos' },
  ca: { citations: 'cites', hIndex: 'index-h', papers: 'articles' },
};

const labels = statLabels[lang] || statLabels.en;
---

<NavML lang={lang} />

<section class="ml-hero" aria-label="Hero">
  <div class="ml-hero__container">
    <div class="ml-hero__content">
      <h1 class="ml-hero__name">{t.hero.title}</h1>
      <p class="ml-hero__comment">{commentLine[lang]}</p>
      <p class="ml-hero__tagline">{t.hero.tagline}</p>

      <div class="ml-hero__stats" role="list" aria-label="Key metrics">
        <div class="ml-hero__stat" role="listitem">
          <span class="ml-hero__stat-number ml-hero__stat-number--glow" data-counter="291">291</span>
          <span class="ml-hero__stat-label">{labels.citations}</span>
        </div>
        <span class="ml-hero__stat-divider" aria-hidden="true">|</span>
        <div class="ml-hero__stat" role="listitem">
          <span class="ml-hero__stat-number" data-counter="9">h-9</span>
          <span class="ml-hero__stat-label">{labels.hIndex}</span>
        </div>
        <span class="ml-hero__stat-divider" aria-hidden="true">|</span>
        <div class="ml-hero__stat" role="listitem">
          <span class="ml-hero__stat-number" data-counter="16">16</span>
          <span class="ml-hero__stat-label">{labels.papers}</span>
        </div>
      </div>

      <div class="ml-hero__actions">
        <a href="#publications" class="ml-hero__btn ml-hero__btn--primary">
          {t.nav.publications}
        </a>
        <a href="#contact" class="ml-hero__btn ml-hero__btn--outline">
          {t.nav.contact}
        </a>
      </div>
    </div>

  </div>
</section>

<style>
  .ml-hero {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    background: var(--background, #070a12);
    overflow: hidden;
    padding-top: 3.5rem;
  }

  /* Animated gradient mesh background */
  .ml-hero::before {
    content: '';
    position: absolute;
    inset: 0;
    background:
      radial-gradient(ellipse 80% 60% at 20% 40%, rgba(218,41,28,0.12) 0%, transparent 70%),
      radial-gradient(ellipse 60% 80% at 80% 20%, rgba(59,130,246,0.08) 0%, transparent 70%),
      radial-gradient(ellipse 70% 50% at 50% 80%, rgba(255,217,61,0.06) 0%, transparent 70%);
    animation: meshFloat 20s ease-in-out infinite alternate;
    z-index: 0;
    pointer-events: none;
  }

  @keyframes meshFloat {
    0% { transform: scale(1) translate(0, 0); }
    50% { transform: scale(1.05) translate(-2%, 3%); }
    100% { transform: scale(1) translate(2%, -2%); }
  }

  /* Single-column centered layout */
  .ml-hero__container {
    max-width: 900px;
    margin: 0 auto;
    padding: 0 1.5rem;
    width: 100%;
    text-align: center;
    position: relative;
    z-index: 1;
  }

  .ml-hero__content {
    position: relative;
    z-index: 2;
  }

  /* Scaled up hero typography */
  .ml-hero__name {
    font-family: var(--font-display, 'Outfit', sans-serif);
    font-weight: 800;
    font-size: clamp(3rem, 7vw, 5.5rem);
    color: var(--text-primary, #F1F5F9);
    line-height: 1.05;
    letter-spacing: -0.03em;
    margin-bottom: 0.75rem;
  }

  .ml-hero__comment {
    font-family: var(--font-mono, monospace);
    font-weight: 400;
    font-size: clamp(0.875rem, 1.2vw, 1rem);
    color: var(--text-muted, #64748B);
    margin-bottom: 1.5rem;
    line-height: 1.4;
  }

  .ml-hero__tagline {
    font-family: var(--font-primary, sans-serif);
    font-size: clamp(1.125rem, 2vw, 1.375rem);
    color: var(--text-secondary, #CBD5E1);
    max-width: 600px;
    margin: 0 auto 2rem;
    line-height: 1.6;
  }

  /* Stat cards */
  .ml-hero__stats {
    display: flex;
    justify-content: center;
    gap: 2rem;
    margin: 2.5rem 0;
    flex-wrap: wrap;
  }

  .ml-hero__stat {
    background: var(--surface-glass, rgba(15,23,42,0.6));
    backdrop-filter: blur(16px);
    -webkit-backdrop-filter: blur(16px);
    border: 1px solid var(--border-light, rgba(148,163,184,0.12));
    border-radius: 12px;
    padding: 1.25rem 2rem;
    min-width: 120px;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.25rem;
  }

  .ml-hero__stat-number {
    font-family: var(--font-mono, monospace);
    font-weight: 700;
    font-size: 2rem;
    color: var(--text-primary, #F1F5F9);
    line-height: 1;
    display: block;
  }

  .ml-hero__stat-label {
    font-size: 0.8125rem;
    color: var(--text-muted, #64748B);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    font-weight: 500;
  }

  .ml-hero__stat-divider {
    display: none;
  }

  .ml-hero__actions {
    display: flex;
    justify-content: center;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .ml-hero__btn {
    display: inline-flex;
    align-items: center;
    padding: 0.75rem 1.75rem;
    font-size: 0.9375rem;
    font-weight: 600;
    border-radius: 8px;
    text-decoration: none;
    border-bottom: none;
    transition: all 0.2s ease;
    min-height: 44px;
  }

  .ml-hero__btn:hover {
    transform: translateY(-1px);
    border-bottom: none;
  }

  .ml-hero__btn:focus-visible {
    outline: 2px solid var(--accent-red, #DA291C);
    outline-offset: 3px;
    border-radius: 8px;
  }

  .ml-hero__btn--primary {
    background: var(--accent-red, #DA291C);
    color: #ffffff;
    border: 1px solid var(--accent-red, #DA291C);
    box-shadow: 0 4px 20px rgba(218, 41, 28, 0.25);
  }

  .ml-hero__btn--primary:hover {
    background: var(--accent-red-hover, #EF4444);
    box-shadow: 0 6px 28px rgba(218, 41, 28, 0.35);
    color: #ffffff;
  }

  .ml-hero__btn--outline {
    background: transparent;
    color: var(--text-primary, #F1F5F9);
    border: 1px solid var(--border-light, rgba(148,163,184,0.12));
  }

  .ml-hero__btn--outline:hover {
    border-color: rgba(148,163,184,0.2);
    background: rgba(255, 255, 255, 0.03);
    color: var(--text-primary, #F1F5F9);
  }

  /* Stronger entrance animations */
  .ml-hero__content > * {
    opacity: 0;
    transform: translateY(32px);
    animation: heroFadeUp 0.8s cubic-bezier(0.16, 1, 0.3, 1) forwards;
  }
  .ml-hero__content > *:nth-child(1) { animation-delay: 0.1s; }
  .ml-hero__content > *:nth-child(2) { animation-delay: 0.2s; }
  .ml-hero__content > *:nth-child(3) { animation-delay: 0.35s; }
  .ml-hero__content > *:nth-child(4) { animation-delay: 0.5s; }
  .ml-hero__content > *:nth-child(5) { animation-delay: 0.65s; }

  @keyframes heroFadeUp {
    to { opacity: 1; transform: translateY(0); }
  }

  /* Mobile responsive */
  @media (max-width: 768px) {
    .ml-hero__container {
      padding: 0 1rem;
    }

    .ml-hero__stats {
      gap: 1rem;
    }

    .ml-hero__stat {
      padding: 1rem 1.25rem;
      min-width: 90px;
    }

    .ml-hero__stat-number {
      font-size: 1.5rem;
    }
  }

  @media (max-width: 480px) {
    .ml-hero__container {
      padding: 0 0.75rem;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .ml-hero::before {
      animation: none;
    }

    .ml-hero__content > * {
      animation: none;
      opacity: 1;
      transform: none;
    }
  }
</style>

<script>
  // Animated counters for [data-counter] elements
  function animateCounters() {
    const counters = document.querySelectorAll('[data-counter]');
    if (!counters.length) return;

    // Respect reduced motion preference
    const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;

    const observer = new IntersectionObserver((entries) => {
      entries.forEach((entry) => {
        if (!entry.isIntersecting) return;

        const el = entry.target as HTMLElement;
        const target = parseInt(el.getAttribute('data-counter') || '0', 10);
        const originalText = el.textContent || '';
        const hasHPrefix = originalText.includes('h-');

        // If reduced motion, just set the final value immediately
        if (prefersReducedMotion) {
          el.textContent = hasHPrefix ? `h-${target}` : `${target}`;
          observer.unobserve(el);
          return;
        }

        const duration = 1500; // 1.5 seconds
        let startTime: number | null = null;

        function easeOutCubic(t: number): number {
          return 1 - Math.pow(1 - t, 3);
        }

        function step(timestamp: number) {
          if (!startTime) startTime = timestamp;
          const elapsed = timestamp - startTime;
          const progress = Math.min(elapsed / duration, 1);
          const easedProgress = easeOutCubic(progress);
          const current = Math.round(easedProgress * target);

          el.textContent = hasHPrefix ? `h-${current}` : `${current}`;

          if (progress < 1) {
            requestAnimationFrame(step);
          }
        }

        // Start from 0
        el.textContent = hasHPrefix ? 'h-0' : '0';
        requestAnimationFrame(step);

        observer.unobserve(el);
      });
    }, { threshold: 0.2 });

    counters.forEach((counter) => observer.observe(counter));
  }

  // Run on DOMContentLoaded and after Astro page transitions
  document.addEventListener('DOMContentLoaded', animateCounters);
  document.addEventListener('astro:page-load', animateCounters);

  // Also run immediately in case DOM is already loaded
  if (document.readyState === 'complete' || document.readyState === 'interactive') {
    animateCounters();
  }
</script>
