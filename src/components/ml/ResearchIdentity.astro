---
import type { Lang } from '../../data/i18n';
import { translations } from '../../data/i18n';

export interface Props {
  lang: Lang;
}

const { lang } = Astro.props;
const t = translations[lang] || translations.en;

const sectionHeading: Record<Lang, string> = {
  en: 'Where AI Meets Biology',
  es: 'Donde la IA Encuentra la Biología',
  ca: 'On la IA Troba la Biologia',
};

const researchAreas: Record<Lang, Array<{ title: string; description: string; color: string }>> = {
  en: [
    {
      title: 'Antimicrobial Proteins',
      description: 'Engineering recombinant multidomain proteins and host defense peptides to combat drug-resistant pathogens. Focus on protein nanoclusters and surface immobilization for antibiofilm applications.',
      color: '#DA291C',
    },
    {
      title: 'Gene Therapy Vectors',
      description: 'Tailoring capsid-directed evolution for improved AAV vectors. Applications in CAR-T cell generation and liver-targeted gene therapy using ex situ perfusion models.',
      color: '#C4956A',
    },
    {
      title: 'Computational Design',
      description: 'AI-assisted protein engineering combining structure-guided design with rapid wet-lab validation to compress design-test cycles and accelerate therapeutic development.',
      color: '#8B95A3',
    },
  ],
  es: [
    {
      title: 'Proteínas Antimicrobianas',
      description: 'Ingeniería de proteínas recombinantes multidominio y péptidos de defensa para combatir patógenos resistentes. Enfoque en nanoclusters proteicos y aplicaciones antibiofilm.',
      color: '#DA291C',
    },
    {
      title: 'Vectores de Terapia Génica',
      description: 'Evolución dirigida de cápsidas para vectores AAV mejorados. Aplicaciones en generación de CAR-T y terapia génica hepática con modelos de perfusión ex situ.',
      color: '#C4956A',
    },
    {
      title: 'Diseño Computacional',
      description: 'Ingeniería de proteínas asistida por IA combinando diseño guiado por estructura con validación experimental rápida para comprimir ciclos y acelerar el desarrollo terapéutico.',
      color: '#8B95A3',
    },
  ],
  ca: [
    {
      title: 'Proteïnes Antimicrobianes',
      description: 'Enginyeria de proteïnes recombinants multidomini i pèptids de defensa per combatre patògens resistents. Enfocament en nanoclusters proteics i aplicacions antibiofilm.',
      color: '#DA291C',
    },
    {
      title: 'Vectors de Teràpia Gènica',
      description: 'Evolució dirigida de càpsides per a vectors AAV millorats. Aplicacions en generació de CAR-T i teràpia gènica hepàtica amb models de perfusió ex situ.',
      color: '#C4956A',
    },
    {
      title: 'Disseny Computacional',
      description: 'Enginyeria de proteïnes assistida per IA combinant disseny guiat per estructura amb validació experimental ràpida per comprimir cicles i accelerar el desenvolupament terapèutic.',
      color: '#8B95A3',
    },
  ],
};

const keywords: Record<Lang, string[]> = {
  en: ['AI', 'AMR', 'Gene Therapy', 'Capsid Engineering', 'Protein Design', 'AAV'],
  es: ['IA', 'AMR', 'Terapia Génica', 'Ingeniería de Cápsidas', 'Diseño de Proteínas', 'AAV'],
  ca: ['IA', 'AMR', 'Teràpia Gènica', 'Enginyeria de Càpsides', 'Disseny de Proteïnes', 'AAV'],
};

const areas = researchAreas[lang] || researchAreas.en;
---

<section id="research" class="ml-research section" aria-labelledby="research-heading">
  <div class="container">
    <h2 id="research-heading" class="ml-research__heading">{sectionHeading[lang]}</h2>

    <div class="ml-research__strips">
      {areas.map((area) => (
        <article class="ml-research__row" style={`--area-color: ${area.color};`}>
          <div class="ml-research__row-inner">
            <h3 class="ml-research__row-title">{area.title}</h3>
            <p class="ml-research__row-desc">{area.description}</p>
          </div>
        </article>
      ))}
    </div>

    <div class="ml-research__keywords">
      {(keywords[lang] || keywords.en).map((kw) => (
        <span class="ml-research__pill">{kw}</span>
      ))}
    </div>
  </div>
</section>

<style>
  .ml-research {
    background: var(--bg-base, #080B11);
    padding: var(--section-padding, 6rem) 0;
  }

  .ml-research__heading {
    font-family: var(--font-display, 'Source Serif 4', serif);
    font-weight: 600;
    font-size: clamp(2rem, 4vw, 3rem);
    color: var(--text-primary, #EAEDF2);
    margin-bottom: var(--heading-gap);
    letter-spacing: -0.01em;
  }

  /* Full-width horizontal ruled strips — NO cards */
  .ml-research__strips {
    margin-bottom: 3rem;
  }

  .ml-research__row {
    border-top: 1px solid var(--border-subtle);
    transition: background var(--transition-base) var(--ease-default);
  }

  .ml-research__row:last-child {
    border-bottom: 1px solid var(--border-subtle);
  }

  .ml-research__row:hover {
    background: var(--bg-surface, #0E1219);
  }

  .ml-research__row-inner {
    display: grid;
    grid-template-columns: 280px 1fr;
    gap: 3rem;
    padding: 2rem 0;
    align-items: baseline;
  }

  .ml-research__row-title {
    font-family: var(--font-display, 'Source Serif 4', serif);
    font-weight: 600;
    font-size: 1.25rem;
    color: var(--text-primary, #EAEDF2);
    line-height: 1.3;
    margin-bottom: 0;
    position: relative;
    padding-left: 1rem;
  }

  .ml-research__row-title::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0.15em;
    width: 3px;
    height: 1em;
    background: var(--area-color, #DA291C);
    border-radius: 1px;
  }

  .ml-research__row-desc {
    font-family: var(--font-body, 'DM Sans', sans-serif);
    font-size: 1rem;
    color: var(--text-secondary, #B8BFC9);
    line-height: 1.65;
    margin-bottom: 0;
  }

  .ml-research__keywords {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
  }

  .ml-research__pill {
    font-family: var(--font-mono, monospace);
    font-size: 0.8125rem;
    font-weight: 500;
    color: var(--text-muted, #8B95A3);
    border: 1px solid var(--border-muted);
    border-radius: 20px;
    padding: 0.375rem 1rem;
    background: transparent;
    transition: border-color var(--transition-base) var(--ease-default), color var(--transition-base) var(--ease-default);
    user-select: none;
  }

  .ml-research__pill:hover {
    border-color: var(--accent-red, #DA291C);
    color: var(--text-primary, #EAEDF2);
  }

  @media (max-width: 768px) {
    .ml-research {
      padding: 4rem 0;
    }

    .ml-research__row-inner {
      grid-template-columns: 1fr;
      gap: 0.5rem;
      padding: 1.5rem 0;
    }
  }
</style>
