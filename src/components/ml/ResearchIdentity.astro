---
import type { Lang } from '../../data/i18n';
import { translations } from '../../data/i18n';

export interface Props {
  lang: Lang;
}

const { lang } = Astro.props;
const t = translations[lang] || translations.en;

const sectionHeading: Record<Lang, string> = {
  en: 'Where AI Meets Biology',
  es: 'Donde la IA Encuentra la Biologia',
  ca: 'On la IA Troba la Biologia',
};

const researchAreas: Record<Lang, Array<{ title: string; description: string; color: string }>> = {
  en: [
    {
      title: 'Antimicrobial Proteins',
      description: 'Engineering recombinant multidomain proteins and host defense peptides to combat drug-resistant pathogens. Focus on protein nanoclusters and surface immobilization for antibiofilm applications.',
      color: '#DA291C',
    },
    {
      title: 'Gene Therapy Vectors',
      description: 'Tailoring capsid-directed evolution for improved AAV vectors. Applications in CAR-T cell generation and liver-targeted gene therapy using ex situ perfusion models.',
      color: '#3B82F6',
    },
    {
      title: 'Computational Design',
      description: 'AI-assisted protein engineering combining structure-guided design with rapid wet-lab validation to compress design-test cycles and accelerate therapeutic development.',
      color: '#22C55E',
    },
  ],
  es: [
    {
      title: 'Proteinas Antimicrobianas',
      description: 'Ingenieria de proteinas recombinantes multidominio y peptidos de defensa para combatir patogenos resistentes. Enfoque en nanoclusters proteicos y aplicaciones antibiofilm.',
      color: '#DA291C',
    },
    {
      title: 'Vectores de Terapia Genica',
      description: 'Evolucion dirigida de capsidas para vectores AAV mejorados. Aplicaciones en generacion de CAR-T y terapia genica hepatica con modelos de perfusion ex situ.',
      color: '#3B82F6',
    },
    {
      title: 'Diseno Computacional',
      description: 'Ingenieria de proteinas asistida por IA combinando diseno guiado por estructura con validacion experimental rapida para comprimir ciclos y acelerar el desarrollo terapeutico.',
      color: '#22C55E',
    },
  ],
  ca: [
    {
      title: 'Proteines Antimicrobianes',
      description: 'Enginyeria de proteines recombinants multidomini i peptids de defensa per combatre patbgens resistents. Enfocament en nanoclusters proteics i aplicacions antibiofilm.',
      color: '#DA291C',
    },
    {
      title: 'Vectors de Teràpia Gènica',
      description: 'Evolucio dirigida de capsides per a vectors AAV millorats. Aplicacions en generacio de CAR-T i teràpia gènica hepàtica amb models de perfusio ex situ.',
      color: '#3B82F6',
    },
    {
      title: 'Disseny Computacional',
      description: 'Enginyeria de proteines assistida per IA combinant disseny guiat per estructura amb validacio experimental rapida per comprimir cicles i accelerar el desenvolupament terapèutic.',
      color: '#22C55E',
    },
  ],
};

const keywords = ['AI', 'AMR', 'Gene Therapy', 'Capsid Engineering', 'Protein Design', 'AAV'];

const areas = researchAreas[lang] || researchAreas.en;
---

<section id="research" class="ml-research section" aria-labelledby="research-heading">
  <div class="container">
    <div data-animate="fade-up">
      <h2 id="research-heading" class="ml-research__heading">{sectionHeading[lang]}</h2>
      <div class="ml-research__accent" aria-hidden="true"></div>
    </div>

    <div class="ml-research__grid">
      {areas.map((area, i) => (
        <article
          class="ml-research__card"
          style={`--area-color: ${area.color};`}
          data-animate="fade-up"
          data-delay={String(i * 100)}
        >
          <h3 class="ml-research__card-title">{area.title}</h3>
          <p class="ml-research__card-desc">{area.description}</p>
        </article>
      ))}
    </div>

    <div class="ml-research__keywords" data-animate="fade-up" data-delay="300">
      {keywords.map((kw) => (
        <span class="ml-research__pill">{kw}</span>
      ))}
    </div>
  </div>
</section>

<style>
  .ml-research {
    background: var(--background, #070a12);
    padding: 6rem 0;
  }

  .ml-research__heading {
    font-family: var(--font-display, 'Outfit', sans-serif);
    font-weight: 700;
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    color: var(--text-primary, #E5E7EB);
    text-align: center;
    margin-bottom: 0.5rem;
  }

  .ml-research__accent {
    width: 60px;
    height: 3px;
    background: linear-gradient(90deg, var(--accent-red, #DA291C) 0%, var(--accent-yellow, #FFD93D) 100%);
    margin: 0 auto 3rem;
    border-radius: 2px;
  }

  .ml-research__grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
    margin-bottom: 3rem;
  }

  .ml-research__card {
    background: var(--background-card, #11182a);
    border: 1px solid var(--border, #1f2a44);
    border-left: 3px solid var(--area-color, #DA291C);
    border-radius: 8px;
    padding: 1.75rem;
    transition: transform 0.2s ease, border-color 0.2s ease;
  }

  .ml-research__card:hover {
    transform: translateY(-2px);
    border-color: var(--border-light, #2a3a5f);
    border-left-color: var(--area-color, #DA291C);
  }

  .ml-research__card-title {
    font-family: var(--font-display, 'Outfit', sans-serif);
    font-weight: 600;
    font-size: 1.25rem;
    color: var(--text-primary, #E5E7EB);
    margin-bottom: 0.75rem;
    line-height: 1.3;
  }

  .ml-research__card-desc {
    font-family: var(--font-primary, sans-serif);
    font-size: 0.9375rem;
    color: var(--text-light, #9CA3AF);
    line-height: 1.65;
    margin-bottom: 0;
  }

  .ml-research__keywords {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 0.75rem;
  }

  .ml-research__pill {
    font-family: var(--font-mono, monospace);
    font-size: 0.8125rem;
    font-weight: 500;
    color: var(--text-light, #9CA3AF);
    border: 1px solid var(--border, #1f2a44);
    border-radius: 20px;
    padding: 0.375rem 1rem;
    background: transparent;
    transition: all 0.2s ease;
    user-select: none;
  }

  .ml-research__pill:hover {
    border-color: var(--accent-red, #DA291C);
    color: var(--text-primary, #E5E7EB);
  }

  @media (max-width: 768px) {
    .ml-research__grid {
      grid-template-columns: 1fr;
    }

    .ml-research {
      padding: 4rem 0;
    }
  }
</style>
