    careerProgression: 'Progressi贸 Professional',
    researchEvolution: 'Evoluci贸 de la Recerca',
    keyMilestones: 'Fites Clau',
    publications: 'Publicacions',
    positions: 'Posicions Professionals',
    awards: 'Premis i Reconeixement',
