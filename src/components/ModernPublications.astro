---
import { publications } from '../data/publications.js';

interface Props {
  lang?: 'en' | 'es' | 'ca';
}

const { lang = 'en' } = Astro.props;

// Group publications by year for better organization
const publicationsByYear = publications.reduce((acc, pub) => {
  const year = pub.year;
  if (!acc[year]) {
    acc[year] = [];
  }
  acc[year].push(pub);
  return acc;
}, {} as Record<string, typeof publications>);

const years = Object.keys(publicationsByYear).sort((a, b) => parseInt(b) - parseInt(a));
---

<section id="publications" class="modern-publications-section">
  <div class="container">
    <div class="section-header">
      <h2 class="section-title">Selected Publications</h2>
      <p class="section-subtitle">
        Research spanning protein engineering, antimicrobial development, and vector systems
      </p>
    </div>
    
    <div class="publications-timeline">
      {years.map(year => (
        <div class="year-group" data-year={year}>
          <div class="year-header">
            <span class="year-label">{year}</span>
            <div class="year-line"></div>
          </div>
          
          <div class="publications-grid">
            {publicationsByYear[year].map((pub, index) => (
              <article class={`publication-card ${pub.featured ? 'featured' : ''}`}>
                <div class="card-content">
                  <div class="publication-meta">
                    <span class="journal-badge">{pub.journal}</span>
                    {pub.featured && <span class="featured-badge">Featured</span>}
                  </div>
                  
                  <h3 class="publication-title">{pub.title}</h3>
                  
                  <div class="publication-actions">
                    {pub.url && (
                      <a href={pub.url} target="_blank" rel="noopener" class="read-paper-btn">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                          <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/>
                          <polyline points="15,3 21,3 21,9"/>
                          <line x1="10" y1="14" x2="21" y2="3"/>
                        </svg>
                        Read Paper
                      </a>
                    )}
                  </div>
                </div>
                
                <div class="card-glow"></div>
              </article>
            ))}
          </div>
        </div>
      ))}
    </div>
    
    <div class="external-links">
      <a href="https://scholar.google.com/citations?hl=fr&user=jYIZGT0AAAAJ" target="_blank" rel="noopener" class="external-link">
        <div class="link-icon">
          <svg viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 24a7 7 0 110-14 7 7 0 010 14zm0-24L0 9.5l4.838 3.94A8 8 0 0112 9a8 8 0 017.162 4.44L24 9.5z"/>
          </svg>
        </div>
        <div class="link-content">
          <span class="link-title">Google Scholar</span>
          <span class="link-description">Complete publication list</span>
        </div>
        <div class="link-arrow">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M7 17L17 7M17 7H7M17 7V17"/>
          </svg>
        </div>
      </a>
      
      <a href="https://orcid.org/0000-0002-7393-6200" target="_blank" rel="noopener" class="external-link">
        <div class="link-icon">
          <svg viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 0C5.372 0 0 5.372 0 12s5.372 12 12 12 12-5.372 12-12S18.628 0 12 0zM7.369 4.378c.525 0 .947.431.947.947s-.422.947-.947.947a.95.95 0 01-.947-.947c0-.525.422-.947.947-.947zm-.722 3.038h1.444v10.041H6.647V7.416zm3.562 0h3.9c3.712 0 5.344 2.653 5.344 5.025 0 2.578-2.016 5.025-5.325 5.025h-3.919V7.416zm1.444 1.303v7.444h2.297c3.272 0 4.022-2.484 4.022-3.722 0-2.016-1.284-3.722-4.097-3.722h-2.222z"/>
          </svg>
        </div>
        <div class="link-content">
          <span class="link-title">ORCID Profile</span>
          <span class="link-description">Professional identifier</span>
        </div>
        <div class="link-arrow">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M7 17L17 7M17 7H7M17 7V17"/>
          </svg>
        </div>
      </a>
    </div>
  </div>
</section>

<style>
  .modern-publications-section {
    padding: 8rem 0;
    background: linear-gradient(
      135deg,
      var(--background) 0%,
      var(--background-alt) 50%,
      var(--background) 100%
    );
    position: relative;
    overflow: hidden;
  }
  
  .modern-publications-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(
      90deg,
      transparent 0%,
      rgba(var(--accent-red-rgb), 0.3) 25%,
      rgba(var(--accent-red-rgb), 0.6) 50%,
      rgba(var(--accent-red-rgb), 0.3) 75%,
      transparent 100%
    );
  }
  
  .section-header {
    text-align: center;
    margin-bottom: 6rem;
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
  }
  
  .section-title {
    font-size: clamp(2.5rem, 5vw, 3.5rem);
    font-weight: 700;
    background: linear-gradient(
      135deg,
      var(--primary) 0%,
      var(--accent-red) 50%,
      var(--accent-yellow) 100%
    );
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 1.5rem;
    letter-spacing: -0.02em;
  }
  
  .section-subtitle {
    font-size: 1.25rem;
    color: var(--secondary);
    font-weight: 300;
    line-height: 1.6;
    opacity: 0.9;
  }
  
  .publications-timeline {
    display: flex;
    flex-direction: column;
    gap: 4rem;
  }
  
  .year-group {
    position: relative;
  }
  
  .year-header {
    display: flex;
    align-items: center;
    margin-bottom: 2rem;
    gap: 2rem;
  }
  
  .year-label {
    font-size: 2rem;
    font-weight: 800;
    color: var(--accent-red);
    font-family: var(--font-display);
    position: relative;
    z-index: 2;
    background: var(--background);
    padding: 0 1rem;
  }
  
  .year-line {
    flex: 1;
    height: 2px;
    background: linear-gradient(
      90deg,
      rgba(var(--accent-red-rgb), 0.6) 0%,
      rgba(var(--accent-red-rgb), 0.2) 100%
    );
    border-radius: 1px;
  }
  
  .publications-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
    gap: 1.5rem;
  }
  
  .publication-card {
    background: var(--background-card);
    border: 1px solid var(--border);
    border-radius: 16px;
    padding: 2rem;
    position: relative;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    overflow: hidden;
    backdrop-filter: blur(10px);
  }
  
  .publication-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: linear-gradient(
      90deg,
      var(--accent-red) 0%,
      var(--accent-yellow) 100%
    );
    transform: scaleX(0);
    transform-origin: left;
    transition: transform 0.3s ease;
  }
  
  .publication-card:hover::before {
    transform: scaleX(1);
  }
  
  .publication-card:hover {
    transform: translateY(-8px);
    border-color: rgba(var(--accent-red-rgb), 0.3);
    box-shadow: 
      0 20px 40px rgba(0, 0, 0, 0.3),
      0 0 0 1px rgba(var(--accent-red-rgb), 0.1);
  }
  
  .publication-card.featured {
    background: linear-gradient(
      135deg,
      rgba(var(--accent-red-rgb), 0.05) 0%,
      var(--background-card) 50%,
      rgba(var(--accent-yellow), 0.05) 100%
    );
    border-color: rgba(var(--accent-red-rgb), 0.2);
  }
  
  .publication-card.featured::before {
    height: 4px;
    background: linear-gradient(
      90deg,
      var(--accent-red) 0%,
      var(--accent-yellow) 50%,
      var(--accent-red) 100%
    );
  }
  
  .card-content {
    position: relative;
    z-index: 2;
  }
  
  .publication-meta {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 1rem;
    flex-wrap: wrap;
  }
  
  .journal-badge {
    background: rgba(var(--accent-red-rgb), 0.1);
    color: var(--accent-red);
    padding: 0.375rem 0.75rem;
    border-radius: 20px;
    font-size: 0.875rem;
    font-weight: 500;
    border: 1px solid rgba(var(--accent-red-rgb), 0.2);
  }
  
  .featured-badge {
    background: linear-gradient(
      135deg,
      var(--accent-yellow) 0%,
      #FFA500 100%
    );
    color: var(--background);
    padding: 0.375rem 0.75rem;
    border-radius: 20px;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
  
  .publication-title {
    font-size: 1.25rem;
    font-weight: 600;
    line-height: 1.4;
    color: var(--primary);
    margin-bottom: 1.5rem;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .publication-actions {
    display: flex;
    justify-content: flex-end;
  }
  
  .read-paper-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    background: rgba(var(--accent-red-rgb), 0.1);
    border: 1px solid rgba(var(--accent-red-rgb), 0.3);
    border-radius: 50px;
    color: var(--accent-red);
    font-weight: 500;
    text-decoration: none;
    transition: all 0.3s ease;
    font-size: 0.9rem;
  }
  
  .read-paper-btn:hover {
    background: var(--accent-red);
    color: var(--background);
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(var(--accent-red-rgb), 0.3);
  }
  
  .read-paper-btn svg {
    width: 16px;
    height: 16px;
    transition: transform 0.3s ease;
  }
  
  .read-paper-btn:hover svg {
    transform: translate(2px, -2px);
  }
  
  .card-glow {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(
      600px circle at var(--mouse-x, 50%) var(--mouse-y, 50%),
      rgba(var(--accent-red-rgb), 0.08) 0%,
      transparent 40%
    );
    opacity: 0;
    transition: opacity 0.3s ease;
    pointer-events: none;
    border-radius: 16px;
  }
  
  .publication-card:hover .card-glow {
    opacity: 1;
  }
  
  .external-links {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 1.5rem;
    margin-top: 4rem;
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
  }
  
  .external-link {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1.5rem;
    background: var(--background-card);
    border: 1px solid var(--border);
    border-radius: 12px;
    text-decoration: none;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }
  
  .external-link::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
      135deg,
      rgba(var(--accent-red-rgb), 0.05) 0%,
      transparent 50%
    );
    opacity: 0;
    transition: opacity 0.3s ease;
  }
  
  .external-link:hover::before {
    opacity: 1;
  }
  
  .external-link:hover {
    transform: translateY(-4px);
    border-color: rgba(var(--accent-red-rgb), 0.3);
    box-shadow: 0 12px 30px rgba(0, 0, 0, 0.2);
  }
  
  .link-icon {
    width: 48px;
    height: 48px;
    background: rgba(var(--accent-red-rgb), 0.1);
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--accent-red);
    flex-shrink: 0;
  }
  
  .link-icon svg {
    width: 24px;
    height: 24px;
  }
  
  .link-content {
    flex: 1;
  }
  
  .link-title {
    display: block;
    font-weight: 600;
    color: var(--primary);
    margin-bottom: 0.25rem;
  }
  
  .link-description {
    font-size: 0.875rem;
    color: var(--secondary);
  }
  
  .link-arrow {
    width: 20px;
    height: 20px;
    color: var(--tertiary);
    transition: all 0.3s ease;
  }
  
  .external-link:hover .link-arrow {
    color: var(--accent-red);
    transform: translate(2px, -2px);
  }
  
  /* Mobile responsiveness */
  @media (max-width: 768px) {
    .modern-publications-section {
      padding: 4rem 0;
    }
    
    .section-header {
      margin-bottom: 3rem;
    }
    
    .publications-timeline {
      gap: 2.5rem;
    }
    
    .year-header {
      flex-direction: column;
      align-items: flex-start;
      gap: 1rem;
    }
    
    .year-line {
      width: 100%;
    }
    
    .publications-grid {
      grid-template-columns: 1fr;
      gap: 1rem;
    }
    
    .publication-card {
      padding: 1.5rem;
    }
    
    .external-links {
      grid-template-columns: 1fr;
      margin-top: 2rem;
    }
  }
  
  @media (max-width: 480px) {
    .publications-grid {
      grid-template-columns: 1fr;
    }
    
    .publication-card {
      padding: 1.25rem;
    }
    
    .publication-title {
      font-size: 1.125rem;
    }
  }
</style>

<script>
  // Add mouse tracking for card glow effect
  document.addEventListener('DOMContentLoaded', () => {
    const cards = document.querySelectorAll('.publication-card');
    
    cards.forEach(card => {
      card.addEventListener('mousemove', (e) => {
        const rect = card.getBoundingClientRect();
        const x = e.clientX - rect.left;
        const y = e.clientY - rect.top;
        
        card.style.setProperty('--mouse-x', `${x}px`);
        card.style.setProperty('--mouse-y', `${y}px`);
      });
    });
  });
</script>