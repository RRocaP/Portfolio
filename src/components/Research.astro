---
import AntimicrobialTimeline from './AntimicrobialTimeline.astro';

export interface Props {
  lang: 'en' | 'es' | 'ca';
  strings: any;
}

const { lang, strings } = Astro.props;
---

<section id="research" class="col-span-12 py-24">
  <div class="max-w-4xl mx-auto">
    <h2 class="font-sans text-display-md text-center mb-16 text-balance">
      {strings.research.title}
    </h2>
    
    <div class="auto-grid mb-20">
      <article class="bg-surface-1 p-8 rounded-sm border border-border hover:border-accent-yellow/30 transition-colors">
        <div class="text-4xl mb-6">ðŸ§¬</div>
        <h3 class="font-sans text-heading-lg mb-4 text-accent-yellow">
          {strings.research.areas.antimicrobial.title}
        </h3>
        <p class="text-text-muted mb-6 prose-narrow">
          {strings.research.areas.antimicrobial.description}
        </p>
        <ul class="space-y-2">
          {strings.research.areas.antimicrobial.highlights.map((highlight: string) => (
            <li class="flex items-center text-sm text-text-muted">
              <span class="w-1 h-1 bg-accent-yellow rounded-full mr-3"></span>
              {highlight}
            </li>
          ))}
        </ul>
      </article>
      
      <article class="bg-surface-1 p-8 rounded-sm border border-border hover:border-accent-yellow/30 transition-colors">
        <div class="text-4xl mb-6">ðŸ”¬</div>
        <h3 class="font-sans text-heading-lg mb-4 text-accent-yellow">
          {strings.research.areas.protein.title}
        </h3>
        <p class="text-text-muted mb-6 prose-narrow">
          {strings.research.areas.protein.description}
        </p>
        <ul class="space-y-2">
          {strings.research.areas.protein.highlights.map((highlight: string) => (
            <li class="flex items-center text-sm text-text-muted">
              <span class="w-1 h-1 bg-accent-yellow rounded-full mr-3"></span>
              {highlight}
            </li>
          ))}
        </ul>
      </article>
      
      <article class="bg-surface-1 p-8 rounded-sm border border-border hover:border-accent-yellow/30 transition-colors">
        <div class="text-4xl mb-6">ðŸ’Š</div>
        <h3 class="font-sans text-heading-lg mb-4 text-accent-yellow">
          {strings.research.areas.gene.title}
        </h3>
        <p class="text-text-muted mb-6 prose-narrow">
          {strings.research.areas.gene.description}
        </p>
        <ul class="space-y-2">
          {strings.research.areas.gene.highlights.map((highlight: string) => (
            <li class="flex items-center text-sm text-text-muted">
              <span class="w-1 h-1 bg-accent-yellow rounded-full mr-3"></span>
              {highlight}
            </li>
          ))}
        </ul>
      </article>
    </div>
    
    <!-- Antimicrobial Resistance Timeline -->
    <div class="mt-20">
      <AntimicrobialTimeline />
    </div>
  </div>
</section>