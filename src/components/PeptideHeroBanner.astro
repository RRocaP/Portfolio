---
// Clean scientific protein structure visualization
---

<div class="peptide-hero-banner">
  <svg 
    viewBox="0 0 1920 400" 
    class="peptide-illustration"
    xmlns="http://www.w3.org/2000/svg"
    aria-hidden="true"
  >
    <defs>
      <!-- Gradient for ribbon depth -->
      <linearGradient id="helixGradient" x1="0%" y1="0%" x2="0%" y2="100%">
        <stop offset="0%" style="stop-color:#EF4444;stop-opacity:0.3" />
        <stop offset="50%" style="stop-color:#DC2626;stop-opacity:0.5" />
        <stop offset="100%" style="stop-color:#B91C1C;stop-opacity:0.3" />
      </linearGradient>
      
      <linearGradient id="sheetGradient" x1="0%" y1="0%" x2="100%" y2="0%">
        <stop offset="0%" style="stop-color:#94A3B8;stop-opacity:0.3" />
        <stop offset="50%" style="stop-color:#64748B;stop-opacity:0.5" />
        <stop offset="100%" style="stop-color:#475569;stop-opacity:0.3" />
      </linearGradient>
      
      <!-- Subtle glow -->
      <filter id="glow">
        <feGaussianBlur stdDeviation="2" result="coloredBlur"/>
        <feMerge>
          <feMergeNode in="coloredBlur"/>
          <feMergeNode in="SourceGraphic"/>
        </feMerge>
      </filter>
    </defs>
    
    <!-- Alpha helix ribbon (left to center) -->
    <g id="alphaHelix" opacity="0.6">
      <path d="
        M 100,200
        C 150,150 200,250 250,200
        S 350,150 400,200
        S 500,250 550,200
        S 650,150 700,200
        S 800,250 850,200
        S 950,150 1000,200
      " 
      stroke="url(#helixGradient)" 
      stroke-width="40" 
      fill="none" 
      stroke-linecap="round"
      filter="url(#glow)"
      />
      
      <!-- Helix backbone line -->
      <path d="
        M 100,200
        C 150,150 200,250 250,200
        S 350,150 400,200
        S 500,250 550,200
        S 650,150 700,200
        S 800,250 850,200
        S 950,150 1000,200
      " 
      stroke="#FFFFFF" 
      stroke-width="2" 
      fill="none" 
      opacity="0.4"
      stroke-dasharray="5,5"
      />
    </g>
    
    <!-- Transition curve -->
    <g opacity="0.5">
      <path d="
        M 1000,200
        Q 1100,200 1150,200
      "
      stroke="#94A3B8"
      stroke-width="30"
      fill="none"
      stroke-linecap="round"
      opacity="0.4"
      />
    </g>
    
    <!-- Beta sheet ribbons (right side) -->
    <g id="betaSheet" opacity="0.6">
      <!-- First strand -->
      <rect x="1200" y="120" width="500" height="25" fill="url(#sheetGradient)" rx="3"/>
      <rect x="1200" y="120" width="500" height="1" fill="#FFFFFF" opacity="0.3"/>
      
      <!-- Second strand -->
      <rect x="1200" y="180" width="500" height="25" fill="url(#sheetGradient)" rx="3"/>
      <rect x="1200" y="180" width="500" height="1" fill="#FFFFFF" opacity="0.3"/>
      
      <!-- Third strand -->
      <rect x="1200" y="240" width="500" height="25" fill="url(#sheetGradient)" rx="3"/>
      <rect x="1200" y="240" width="500" height="1" fill="#FFFFFF" opacity="0.3"/>
      
      <!-- Hydrogen bonds -->
      <g opacity="0.3">
        <line x1="1250" y1="145" x2="1250" y2="180" stroke="#FFFFFF" stroke-width="1" stroke-dasharray="2,2"/>
        <line x1="1300" y1="145" x2="1300" y2="180" stroke="#FFFFFF" stroke-width="1" stroke-dasharray="2,2"/>
        <line x1="1350" y1="145" x2="1350" y2="180" stroke="#FFFFFF" stroke-width="1" stroke-dasharray="2,2"/>
        <line x1="1400" y1="145" x2="1400" y2="180" stroke="#FFFFFF" stroke-width="1" stroke-dasharray="2,2"/>
        <line x1="1450" y1="145" x2="1450" y2="180" stroke="#FFFFFF" stroke-width="1" stroke-dasharray="2,2"/>
        <line x1="1500" y1="145" x2="1500" y2="180" stroke="#FFFFFF" stroke-width="1" stroke-dasharray="2,2"/>
        <line x1="1550" y1="145" x2="1550" y2="180" stroke="#FFFFFF" stroke-width="1" stroke-dasharray="2,2"/>
        <line x1="1600" y1="145" x2="1600" y2="180" stroke="#FFFFFF" stroke-width="1" stroke-dasharray="2,2"/>
        <line x1="1650" y1="145" x2="1650" y2="180" stroke="#FFFFFF" stroke-width="1" stroke-dasharray="2,2"/>
        
        <line x1="1250" y1="205" x2="1250" y2="240" stroke="#FFFFFF" stroke-width="1" stroke-dasharray="2,2"/>
        <line x1="1300" y1="205" x2="1300" y2="240" stroke="#FFFFFF" stroke-width="1" stroke-dasharray="2,2"/>
        <line x1="1350" y1="205" x2="1350" y2="240" stroke="#FFFFFF" stroke-width="1" stroke-dasharray="2,2"/>
        <line x1="1400" y1="205" x2="1400" y2="240" stroke="#FFFFFF" stroke-width="1" stroke-dasharray="2,2"/>
        <line x1="1450" y1="205" x2="1450" y2="240" stroke="#FFFFFF" stroke-width="1" stroke-dasharray="2,2"/>
        <line x1="1500" y1="205" x2="1500" y2="240" stroke="#FFFFFF" stroke-width="1" stroke-dasharray="2,2"/>
        <line x1="1550" y1="205" x2="1550" y2="240" stroke="#FFFFFF" stroke-width="1" stroke-dasharray="2,2"/>
        <line x1="1600" y1="205" x2="1600" y2="240" stroke="#FFFFFF" stroke-width="1" stroke-dasharray="2,2"/>
        <line x1="1650" y1="205" x2="1650" y2="240" stroke="#FFFFFF" stroke-width="1" stroke-dasharray="2,2"/>
      </g>
      
      <!-- Arrow indicators showing antiparallel -->
      <g opacity="0.5">
        <path d="M 1180,132 L 1200,132 L 1195,127 M 1200,132 L 1195,137" stroke="#FFFFFF" stroke-width="1.5" fill="none"/>
        <path d="M 1720,192 L 1700,192 L 1705,187 M 1700,192 L 1705,197" stroke="#FFFFFF" stroke-width="1.5" fill="none"/>
        <path d="M 1180,252 L 1200,252 L 1195,247 M 1200,252 L 1195,257" stroke="#FFFFFF" stroke-width="1.5" fill="none"/>
      </g>
    </g>
    
    <!-- Floating particles for depth -->
    <g opacity="0.2">
      <circle cx="300" cy="100" r="2" fill="#EF4444">
        <animate attributeName="cy" values="100;120;100" dur="4s" repeatCount="indefinite"/>
      </circle>
      <circle cx="500" cy="300" r="2" fill="#EF4444">
        <animate attributeName="cy" values="300;280;300" dur="5s" repeatCount="indefinite"/>
      </circle>
      <circle cx="800" cy="150" r="2" fill="#EF4444">
        <animate attributeName="cy" values="150;170;150" dur="3s" repeatCount="indefinite"/>
      </circle>
      <circle cx="1400" cy="100" r="2" fill="#94A3B8">
        <animate attributeName="cy" values="100;120;100" dur="4s" repeatCount="indefinite"/>
      </circle>
      <circle cx="1600" cy="300" r="2" fill="#94A3B8">
        <animate attributeName="cy" values="300;280;300" dur="5s" repeatCount="indefinite"/>
      </circle>
    </g>
  </svg>
</div>

<style>
  .peptide-hero-banner {
    width: 100%;
    height: 100%;
    position: relative;
  }
  
  .peptide-illustration {
    width: 100%;
    height: auto;
    display: block;
  }
  
  @keyframes float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-10px); }
  }
  
  @media (prefers-reduced-motion: reduce) {
    .peptide-illustration circle {
      animation: none;
    }
  }
</style>