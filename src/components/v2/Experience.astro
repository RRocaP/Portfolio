---
const experiences = [
  {
    title: "PhD Researcher",
    company: "Institute for Bioengineering of Catalonia (IBEC)",
    period: "2021 - Present",
    description: "Developing protein-based antimicrobial nanoparticles and CRISPR gene therapy systems. Leading multiple research projects on antimicrobial resistance.",
    tags: ["Protein Engineering", "CRISPR", "Antimicrobials", "Gene Therapy"]
  },
  {
    title: "Research Assistant",
    company: "Autonomous University of Barcelona",
    period: "2019 - 2021",
    description: "Engineered recombinant proteins for targeted cancer therapy. Developed and characterized functional inclusion bodies for drug delivery.",
    tags: ["Cancer Research", "Drug Delivery", "Protein Production"]
  },
  {
    title: "Bioengineering Intern",
    company: "Barcelona Biomedical Research Park",
    period: "2018 - 2019",
    description: "Worked on synthetic biology projects for metabolic engineering. Designed and tested genetic circuits for biosensor applications.",
    tags: ["Synthetic Biology", "Metabolic Engineering", "Biosensors"]
  }
];
---

<section id="experience" class="experience section">
  <div class="container">
    <h2>Professional <span class="text-gradient">Experience</span></h2>
    
    <div class="timeline">
      {experiences.map((exp, index) => (
        <div class="timeline-item" data-index={index}>
          <div class="timeline-marker"></div>
          <div class="timeline-content">
            <div class="timeline-header">
              <h3>{exp.title}</h3>
              <span class="period">{exp.period}</span>
            </div>
            <h4 class="company">{exp.company}</h4>
            <p class="description">{exp.description}</p>
            <div class="tags">
              {exp.tags.map(tag => (
                <span class="tag">{tag}</span>
              ))}
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .experience {
    background: var(--color-bg);
  }
  
  .experience h2 {
    text-align: center;
    margin-bottom: var(--spacing-3xl);
  }
  
  .timeline {
    position: relative;
    max-width: 900px;
    margin: 0 auto;
  }
  
  .timeline::before {
    content: '';
    position: absolute;
    left: 30px;
    top: 0;
    bottom: 0;
    width: 2px;
    background: var(--color-border);
  }
  
  .timeline-item {
    position: relative;
    padding-left: 80px;
    margin-bottom: var(--spacing-2xl);
    opacity: 0;
    transform: translateX(-20px);
    animation: slideInLeft 0.6s ease forwards;
    animation-delay: calc(var(--index) * 0.2s);
  }
  
  .timeline-item[data-index="0"] { --index: 0; }
  .timeline-item[data-index="1"] { --index: 1; }
  .timeline-item[data-index="2"] { --index: 2; }
  
  @keyframes slideInLeft {
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }
  
  .timeline-marker {
    position: absolute;
    left: 20px;
    top: 8px;
    width: 20px;
    height: 20px;
    background: var(--color-bg);
    border: 3px solid var(--color-accent);
    border-radius: 50%;
    z-index: 1;
  }
  
  .timeline-content {
    background: var(--color-bg-secondary);
    padding: var(--spacing-lg);
    border-radius: 12px;
    border: 1px solid var(--color-border);
    transition: all var(--transition-base);
  }
  
  .timeline-content:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    border-color: var(--color-accent);
  }
  
  .timeline-header {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    margin-bottom: var(--spacing-sm);
    flex-wrap: wrap;
    gap: var(--spacing-sm);
  }
  
  .timeline-content h3 {
    font-size: 1.25rem;
    color: var(--color-text);
    margin: 0;
  }
  
  .period {
    font-size: 0.875rem;
    color: var(--color-accent);
    font-weight: 600;
  }
  
  .company {
    font-size: 1rem;
    color: var(--color-text-secondary);
    font-weight: 500;
    margin-bottom: var(--spacing-sm);
  }
  
  .description {
    color: var(--color-text-secondary);
    line-height: 1.6;
    margin-bottom: var(--spacing-md);
  }
  
  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-xs);
  }
  
  .tag {
    padding: 0.25rem 0.75rem;
    background: rgba(59, 130, 246, 0.1);
    color: var(--color-accent);
    border-radius: 100px;
    font-size: 0.75rem;
    font-weight: 500;
  }
  
  @media (max-width: 768px) {
    .timeline::before {
      left: 20px;
    }
    
    .timeline-item {
      padding-left: 60px;
    }
    
    .timeline-marker {
      left: 10px;
      width: 16px;
      height: 16px;
    }
    
    .timeline-header {
      flex-direction: column;
      align-items: flex-start;
    }
  }
</style>