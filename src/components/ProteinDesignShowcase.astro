---
interface Props {
  lang: 'en' | 'es' | 'ca';
}

const { lang } = Astro.props;

const content = {
  en: {
    title: "Protein Design in Action",
    subtitle: "From Sequence to Structure to Function",
    designTypes: {
      antimicrobial: {
        title: "Antimicrobial Proteins",
        description: "Multi-domain recombinant proteins targeting resistant bacteria",
        approach: "Computational domain shuffling + wet-lab validation",
        example: "HDP-LZ fusion proteins with enhanced activity"
      },
      inclusionBodies: {
        title: "Functional Inclusion Bodies", 
        description: "Engineered protein aggregates as smart biomaterials",
        approach: "Controlled aggregation + functional preservation",
        example: "Bioactive nanoparticles for therapeutic delivery"
      },
      vectorDesign: {
        title: "AAV Vector Engineering",
        description: "Capsid evolution for improved tissue targeting",
        approach: "Directed evolution + high-throughput screening",
        example: "AAV-LK03 variants with enhanced liver distribution"
      }
    }
  },
  es: {
    title: "Diseño de Proteínas en Acción",
    subtitle: "De Secuencia a Estructura a Función", 
    designTypes: {
      antimicrobial: {
        title: "Proteínas Antimicrobianas",
        description: "Proteínas recombinantes multidominio contra bacterias resistentes",
        approach: "Reorganización computacional de dominios + validación experimental",
        example: "Proteínas de fusión HDP-LZ con actividad mejorada"
      },
      inclusionBodies: {
        title: "Cuerpos de Inclusión Funcionales",
        description: "Agregados proteicos diseñados como biomateriales inteligentes", 
        approach: "Agregación controlada + preservación funcional",
        example: "Nanopartículas bioactivas para administración terapéutica"
      },
      vectorDesign: {
        title: "Ingeniería de Vectores AAV",
        description: "Evolución de cápsidas para mejor targeting tisular",
        approach: "Evolución dirigida + screening de alto rendimiento",
        example: "Variantes AAV-LK03 con distribución hepática mejorada"
      }
    }
  },
  ca: {
    title: "Disseny de Proteïnes en Acció",
    subtitle: "De Seqüència a Estructura a Funció",
    designTypes: {
      antimicrobial: {
        title: "Proteïnes Antimicrobianes", 
        description: "Proteïnes recombinants multidomini contra bacteris resistents",
        approach: "Reorganització computacional de dominis + validació experimental",
        example: "Proteïnes de fusió HDP-LZ amb activitat millorada"
      },
      inclusionBodies: {
        title: "Cossos d'Inclusió Funcionals",
        description: "Agregats proteics dissenyats com biomaterials intel·ligents",
        approach: "Agregació controlada + preservació funcional", 
        example: "Nanopartícules bioactives per a administració terapèutica"
      },
      vectorDesign: {
        title: "Enginyeria de Vectors AAV",
        description: "Evolució de càpsides per a millor targeting tissular",
        approach: "Evolució dirigida + screening d'alt rendiment",
        example: "Variants AAV-LK03 amb distribució hepàtica millorada"
      }
    }
  }
};

const t = content[lang];
---

<section class="protein-showcase">
  <div class="container">
    <header class="showcase-header">
      <h2 class="showcase-title animate-fade-in-up">{t.title}</h2>
      <p class="showcase-subtitle animate-fade-in-up">{t.subtitle}</p>
    </header>

    <div class="design-grid">
      {Object.entries(t.designTypes).map(([key, design], index) => (
        <div class={`design-card animate-fade-in-up card-${key}`} style={`--delay: ${index * 0.1}s`}>
          <div class="design-visual" data-type={key}>
            <div class="protein-structure">
              <!-- Simplified protein visualization -->
              <svg viewBox="0 0 200 120" class="structure-svg">
                {key === 'antimicrobial' && (
                  <g>
                    <path d="M30,60 Q60,30 100,60 Q140,90 170,60" stroke="var(--accent-red)" stroke-width="4" fill="none" class="helix"/>
                    <circle cx="50" cy="50" r="8" fill="var(--accent-yellow)" opacity="0.8" class="active-site"/>
                    <circle cx="120" cy="70" r="6" fill="var(--accent-yellow)" opacity="0.8" class="active-site"/>
                  </g>
                )}
                {key === 'inclusionBodies' && (
                  <g>
                    <circle cx="60" cy="45" r="15" fill="var(--accent-red)" opacity="0.6" class="aggregate"/>
                    <circle cx="90" cy="60" r="18" fill="var(--accent-red)" opacity="0.7" class="aggregate"/>
                    <circle cx="130" cy="50" r="12" fill="var(--accent-red)" opacity="0.5" class="aggregate"/>
                    <text x="100" y="90" text-anchor="middle" fill="var(--tertiary)" font-size="10">Controlled Aggregation</text>
                  </g>
                )}
                {key === 'vectorDesign' && (
                  <g>
                    <polygon points="100,20 130,40 130,80 100,100 70,80 70,40" fill="none" stroke="var(--accent-yellow)" stroke-width="3" class="capsid"/>
                    <circle cx="100" cy="60" r="25" fill="none" stroke="var(--accent-red)" stroke-width="2" stroke-dasharray="5,5" opacity="0.6"/>
                    <text x="100" y="110" text-anchor="middle" fill="var(--tertiary)" font-size="9">Engineered Capsid</text>
                  </g>
                )}
              </svg>
            </div>
          </div>
          
          <div class="design-content">
            <h3 class="design-title">{design.title}</h3>
            <p class="design-description">{design.description}</p>
            
            <div class="design-details">
              <div class="approach">
                <span class="detail-label">Approach:</span>
                <span class="detail-value">{design.approach}</span>
              </div>
              
              <div class="example">
                <span class="detail-label">Example:</span>
                <span class="detail-value">{design.example}</span>
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>

    <!-- Interactive Design Process -->
    <div class="design-process animate-fade-in-up">
      <h3>Design Process</h3>
      <div class="process-steps">
        <div class="process-step" data-step="1">
          <div class="step-number">1</div>
          <div class="step-content">
            <h4>Sequence Analysis</h4>
            <p>Computational domain identification and functional annotation</p>
          </div>
        </div>
        
        <div class="process-step" data-step="2">
          <div class="step-number">2</div>
          <div class="step-content">
            <h4>Structure Prediction</h4>
            <p>AI-driven folding prediction and stability assessment</p>
          </div>
        </div>
        
        <div class="process-step" data-step="3">
          <div class="step-number">3</div>
          <div class="step-content">
            <h4>Wet-lab Validation</h4>
            <p>Expression, purification, and functional characterization</p>
          </div>
        </div>
        
        <div class="process-step" data-step="4">
          <div class="step-number">4</div>
          <div class="step-content">
            <h4>Iterative Optimization</h4>
            <p>Data-driven refinement and performance enhancement</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .protein-showcase {
    padding: 4rem 0;
    background: linear-gradient(135deg, var(--background) 0%, var(--background-alt) 100%);
    position: relative;
    overflow: hidden;
  }

  .protein-showcase::before {
    content: '';
    position: absolute;
    top: -50%;
    right: -30%;
    width: 80%;
    height: 150%;
    background: conic-gradient(from 180deg at 50% 50%, rgba(220, 38, 38, 0.05) 0deg, transparent 60deg, rgba(255, 217, 61, 0.03) 120deg, transparent 180deg);
    transform: rotate(-15deg);
    pointer-events: none;
  }

  .showcase-header {
    text-align: center;
    margin-bottom: 3rem;
    position: relative;
    z-index: 1;
  }

  .showcase-title {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 1rem;
    color: var(--primary);
  }

  .showcase-subtitle {
    font-size: 1.1rem;
    color: var(--secondary);
    opacity: 0.9;
  }

  .design-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 2rem;
    margin-bottom: 4rem;
    position: relative;
    z-index: 1;
  }

  .design-card {
    background: var(--background-card);
    border: 1px solid var(--border);
    border-radius: 16px;
    overflow: hidden;
    transition: all 0.3s ease;
    animation-delay: var(--delay);
  }

  .design-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 12px 40px rgba(220, 38, 38, 0.15);
    border-color: var(--accent-red);
  }

  .design-visual {
    height: 120px;
    padding: 1rem;
    background: linear-gradient(135deg, rgba(220, 38, 38, 0.05) 0%, rgba(255, 217, 61, 0.05) 100%);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .structure-svg {
    width: 100%;
    height: 100%;
    max-width: 200px;
  }

  .helix {
    stroke-dasharray: 300;
    stroke-dashoffset: 300;
    animation: draw-helix 2s ease-out forwards;
  }

  .active-site {
    opacity: 0;
    animation: fade-in-pulse 0.8s ease-out 1.5s forwards;
  }

  .aggregate {
    transform: scale(0);
    animation: scale-in 0.6s ease-out forwards;
  }

  .aggregate:nth-child(1) { animation-delay: 0.2s; }
  .aggregate:nth-child(2) { animation-delay: 0.4s; }
  .aggregate:nth-child(3) { animation-delay: 0.6s; }

  .capsid {
    stroke-dasharray: 200;
    stroke-dashoffset: 200;
    animation: draw-capsid 1.5s ease-out forwards;
  }

  .design-content {
    padding: 1.5rem;
  }

  .design-title {
    font-size: 1.3rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
    color: var(--primary);
  }

  .design-description {
    color: var(--secondary);
    margin-bottom: 1rem;
    line-height: 1.6;
  }

  .design-details {
    space-y: 0.75rem;
  }

  .approach, .example {
    margin-bottom: 0.75rem;
  }

  .detail-label {
    font-weight: 500;
    color: var(--accent-red);
    font-size: 0.9rem;
    display: block;
    margin-bottom: 0.25rem;
  }

  .detail-value {
    color: var(--tertiary);
    font-size: 0.9rem;
    line-height: 1.4;
  }

  /* Design Process Section */
  .design-process {
    background: var(--background-elevated);
    border-radius: 16px;
    padding: 2rem;
    border: 1px solid var(--border);
    position: relative;
    z-index: 1;
  }

  .design-process h3 {
    text-align: center;
    font-size: 1.5rem;
    margin-bottom: 2rem;
    color: var(--primary);
  }

  .process-steps {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1.5rem;
  }

  .process-step {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
  }

  .step-number {
    width: 40px;
    height: 40px;
    background: linear-gradient(135deg, var(--accent-red), var(--accent-yellow));
    color: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 600;
    flex-shrink: 0;
  }

  .step-content h4 {
    font-size: 1rem;
    margin-bottom: 0.5rem;
    color: var(--primary);
  }

  .step-content p {
    color: var(--tertiary);
    font-size: 0.9rem;
    line-height: 1.4;
    margin: 0;
  }

  /* Animations */
  @keyframes draw-helix {
    to { stroke-dashoffset: 0; }
  }

  @keyframes draw-capsid {
    to { stroke-dashoffset: 0; }
  }

  @keyframes fade-in-pulse {
    to {
      opacity: 1;
      animation: pulse 2s infinite;
    }
  }

  @keyframes pulse {
    0%, 100% { opacity: 0.8; }
    50% { opacity: 1; }
  }

  @keyframes scale-in {
    to { transform: scale(1); }
  }

  .animate-fade-in-up {
    animation: fade-in-up 0.8s ease-out forwards;
    opacity: 0;
  }

  @keyframes fade-in-up {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Responsive */
  @media (max-width: 768px) {
    .design-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }
    
    .process-steps {
      grid-template-columns: 1fr;
      gap: 1rem;
    }
    
    .showcase-title {
      font-size: 2rem;
    }
  }

  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .design-card,
    .helix,
    .active-site,
    .aggregate,
    .capsid {
      animation: none;
    }
    
    .helix {
      stroke-dasharray: none;
      stroke-dashoffset: 0;
    }
    
    .active-site {
      opacity: 0.8;
    }
    
    .aggregate {
      transform: scale(1);
    }
    
    .capsid {
      stroke-dasharray: none;
      stroke-dashoffset: 0;
    }
  }
</style>