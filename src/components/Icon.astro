---
export interface Props {
  name: 'github' | 'linkedin' | 'scholar' | 'orcid' | 'email' | 'location' | 'star' | 'external' | 'menu' | 'close' | 'arrow-right' | 'check' | 'x' | 'apple-music' | 'globe';
  size?: 'xs' | 'sm' | 'md' | 'lg' | 'xl' | '2xl';
  class?: string;
  ariaLabel?: string;
}

const { name, size = 'md', class: className = '', ariaLabel } = Astro.props;

// Size mappings
const sizeClasses = {
  xs: 'w-3 h-3',   // 12px
  sm: 'w-4 h-4',   // 16px
  md: 'w-5 h-5',   // 20px
  lg: 'w-6 h-6',   // 24px
  xl: 'w-8 h-8',   // 32px
  '2xl': 'w-10 h-10' // 40px
};

