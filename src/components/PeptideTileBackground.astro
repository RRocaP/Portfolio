    background-repeat: repeat;
    background-size: 520px 520px;
    opacity: 0.1;
    animation: tileShift 60s linear infinite;
  }
  
  @keyframes tileShift {
    from {
      transform: translate(0, 0);
    }
    to {
      transform: translate(520px, 520px);
    }
  }
  
  @media (prefers-reduced-motion: reduce) {
    .tile-pattern {
      animation: none;
    }
  }
</style>