---
interface Props {
  lang: 'en' | 'es' | 'ca';
}

const { lang } = Astro.props;

const dict = {
  en: {
    name: 'Ramon Roca Pinilla',
    title: 'Biomedical Engineer',
    subtitle: 'Molecular Biologist',
    description: 'Developing next-generation antimicrobial peptides through computational protein design and experimental validation at the Children\'s Medical Research Institute, Sydney.',
    ctaPrimary: 'View Research',
    ctaSecondary: 'Publications'
  },
  es: {
    name: 'Ramon Roca Pinilla',
    title: 'Ingeniero Biomédico',
    subtitle: 'Biólogo Molecular',
    description: 'Desarrollando péptidos antimicrobianos de nueva generación mediante diseño computacional de proteínas y validación experimental en el Children\'s Medical Research Institute, Sydney.',
    ctaPrimary: 'Ver Investigación',
    ctaSecondary: 'Publicaciones'
  },
  ca: {
    name: 'Ramon Roca Pinilla',
    title: 'Enginyer Biomèdic',
    subtitle: 'Biòleg Molecular',
    description: 'Desenvolupant pèptids antimicrobians de nova generació mitjançant disseny computacional de proteïnes i validació experimental al Children\'s Medical Research Institute, Sydney.',
    ctaPrimary: 'Veure Recerca',
    ctaSecondary: 'Publicacions'
  }
}[lang];
---

<section id="home" class="hero-clean">
  <div class="hero-content">
    <h1 class="hero-name">{dict.name}</h1>
    
    <div class="hero-titles">
      <span>{dict.title}</span>
      <span class="separator">·</span>
      <span>{dict.subtitle}</span>
    </div>
    
    <p class="hero-description">
      {dict.description}
    </p>
    
    <div class="hero-actions">
      <a href="#research" class="btn-primary">{dict.ctaPrimary}</a>
      <a href="#publications" class="btn-secondary">{dict.ctaSecondary}</a>
    </div>
  </div>
</section>

<style>
  .hero-clean {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #fafafa;
    padding: 2rem;
  }
  
  .hero-content {
    max-width: 900px;
    width: 100%;
    text-align: center;
    animation: fadeIn 0.8s ease-out;
  }
  
  .hero-name {
    font-size: clamp(2.5rem, 6vw, 4.5rem);
    font-weight: 300;
    color: #111;
    margin: 0 0 1.5rem;
    letter-spacing: -0.02em;
    line-height: 1.1;
  }
  
  .hero-titles {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    font-size: 1.25rem;
    color: #666;
    margin-bottom: 2rem;
    flex-wrap: wrap;
  }
  
  .separator {
    color: #ccc;
  }
  
  .hero-description {
    font-size: 1.125rem;
    line-height: 1.7;
    color: #555;
    max-width: 720px;
    margin: 0 auto 3rem;
  }
  
  .hero-actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }
  
  .btn-primary {
    padding: 0.875rem 2.5rem;
    background: #111;
    color: white;
    text-decoration: none;
    font-weight: 500;
    transition: all 0.2s ease;
    border: 2px solid #111;
  }
  
  .btn-primary:hover {
    background: #333;
    border-color: #333;
    transform: translateY(-2px);
  }
  
  .btn-secondary {
    padding: 0.875rem 2.5rem;
    background: transparent;
    color: #111;
    text-decoration: none;
    font-weight: 500;
    border: 2px solid #111;
    transition: all 0.2s ease;
  }
  
  .btn-secondary:hover {
    background: #111;
    color: white;
  }
  
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  @media (max-width: 640px) {
    .hero-titles {
      font-size: 1.1rem;
    }
    
    .separator {
      display: none;
    }
    
    .hero-actions {
      flex-direction: column;
      align-items: center;
    }
    
    .btn-primary,
    .btn-secondary {
      width: 100%;
      max-width: 300px;
    }
  }
</style>