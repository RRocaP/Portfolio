---
export interface Props {
  lang: 'en' | 'es' | 'ca';
  strings: any;
}

const { lang, strings } = Astro.props;

const timelineData = [
  {
    year: "2020-Present",
    institution: strings.timeline.institutions.uab,
    degree: "PhD in Biotechnology",
    description: "Autonomous University of Barcelona - Developing next-generation antimicrobial therapies",
    location: "Barcelona, Spain"
  },
  {
    year: "2019-2020", 
    institution: strings.timeline.institutions.ku_leuven,
    degree: "Research Collaboration",
    description: "Protein engineering and computational modeling",
    location: "Leuven, Belgium"
  }
];
---

<section id="timeline" class="col-span-12 py-24 bg-surface-1">
  <div class="max-w-4xl mx-auto">
    <h2 class="font-heading text-display-md text-center mb-16 text-balance">
      {strings.timeline.title}
    </h2>
    
    <div class="relative">
      <div class="absolute left-4 top-0 bottom-0 w-px bg-border"></div>
      
      <div class="space-y-12">
        {timelineData.map((item) => (
          <div class="relative flex items-start">
            <div class="flex-shrink-0 w-8 h-8 bg-accent-yellow rounded-full border-4 border-primary-bg flex items-center justify-center relative z-10">
              <div class="w-2 h-2 bg-on-accent-text rounded-full"></div>
            </div>
            
            <div class="ml-8 flex-1">
              <div class="bg-surface-1 border border-border rounded-sm p-6 hover:border-accent-yellow/30 transition-colors">
                <div class="flex flex-col md:flex-row md:items-center md:justify-between mb-4">
                  <h3 class="font-heading text-heading-lg text-accent-yellow mb-2 md:mb-0">
                    {item.degree}
                  </h3>
                  <span class="text-sm text-text-muted bg-surface-1 px-3 py-1 rounded border border-border">
                    {item.year}
                  </span>
                </div>
                
                <h4 class="text-body-lg font-medium text-body-text mb-2">
                  {item.institution}
                </h4>
                
                <p class="text-text-muted mb-2 prose">
                  {item.description}
                </p>
                
                <p class="text-sm text-text-muted">
                  üìç {item.location}
                </p>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>