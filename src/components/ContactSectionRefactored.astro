---
import { Email, Contact, LinkedIn, GitHub, GoogleScholar, ORCID } from './icons';

interface Props {
  lang: 'en' | 'es' | 'ca';
}

const { lang } = Astro.props;

const dict = {
  en: {
    title: "Let's Connect",
    subtitle: "I welcome collaborations on antimicrobial protein design and computational approaches to therapeutic development.",
    email: "Email",
    location: "Location",
    locationText: "Children's Medical Research Institute\nSydney, Australia",
    connect: "Connect"
  },
  es: {
    title: "Conectemos",
    subtitle: "Doy la bienvenida a colaboraciones en diseño de proteínas antimicrobianas y enfoques computacionales para el desarrollo terapéutico.",
    email: "Correo",
    location: "Ubicación",
    locationText: "Children's Medical Research Institute\nSydney, Australia",
    connect: "Conecta"
  },
  ca: {
    title: "Connectem",
    subtitle: "Dono la benvinguda a col·laboracions en disseny de proteïnes antimicrobianes i enfocaments computacionals per al desenvolupament terapèutic.",
    email: "Correu",
    location: "Ubicació",
    locationText: "Children's Medical Research Institute\nSydney, Austràlia",
    connect: "Connecta"
  }
}[lang];
---

<section id="contact" class="section bg-background py-24">
  <div class="container">
    <!-- Header -->
    <header class="text-center space-y-6 mb-16">
      <h2 class="text-scale-3xl font-bold text-white">{dict.title}</h2>
      <p class="text-scale-lg text-gray-300 max-w-3xl mx-auto leading-relaxed">{dict.subtitle}</p>
    </header>
    
    <!-- Contact Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      <!-- Email Card -->
      <div class="card-subtle p-8 text-center space-y-6 hover:bg-white/10 transition-colors duration-300">
        <div class="w-16 h-16 bg-red-600/20 rounded-2xl flex items-center justify-center mx-auto">
          <Email size={32} className="text-red-400" title="Email" />
        </div>
        <div class="space-y-4">
          <h3 class="text-scale-sm font-semibold text-gray-400 uppercase tracking-wider">{dict.email}</h3>
          <a 
            href="mailto:ramon.rocap@gmail.com" 
            class="link-external text-scale-lg font-medium text-white hover:text-red-400 focus-ring"
          >
            ramon.rocap@gmail.com
          </a>
        </div>
      </div>
      
      <!-- Location Card -->
      <div class="card-subtle p-8 text-center space-y-6">
        <div class="w-16 h-16 bg-blue-600/20 rounded-2xl flex items-center justify-center mx-auto">
          <Contact size={32} className="text-blue-400" title="Location" />
        </div>
        <div class="space-y-4">
          <h3 class="text-scale-sm font-semibold text-gray-400 uppercase tracking-wider">{dict.location}</h3>
          <p class="text-scale-base text-gray-300 leading-relaxed whitespace-pre-line">{dict.locationText}</p>
        </div>
      </div>
      
      <!-- Connect Card -->
      <div class="card-subtle p-8 text-center space-y-6 md:col-span-2 lg:col-span-1">
        <div class="w-16 h-16 bg-green-600/20 rounded-2xl flex items-center justify-center mx-auto">
          <Contact size={32} className="text-green-400" title="Connect" />
        </div>
        <div class="space-y-6">
          <h3 class="text-scale-sm font-semibold text-gray-400 uppercase tracking-wider">{dict.connect}</h3>
          
          <!-- Social Links -->
          <div class="grid grid-cols-2 gap-4">
            <a 
              href="https://www.linkedin.com/in/ramonrocapinilla/" 
              target="_blank" 
              rel="noopener" 
              class="flex items-center justify-center gap-3 p-4 bg-blue-700/20 hover:bg-blue-700/30 text-blue-300 hover:text-white rounded-xl transition-all duration-300 hover:-translate-y-1 focus-ring group"
            >
              <LinkedIn size={20} className="icon-sm" title="LinkedIn" />
              <span class="text-scale-sm font-medium">LinkedIn</span>
            </a>
            
            <a 
              href="https://github.com/RRocaP" 
              target="_blank" 
              rel="noopener" 
              class="flex items-center justify-center gap-3 p-4 bg-gray-700/20 hover:bg-gray-700/30 text-gray-300 hover:text-white rounded-xl transition-all duration-300 hover:-translate-y-1 focus-ring group"
            >
              <GitHub size={20} className="icon-sm" title="GitHub" />
              <span class="text-scale-sm font-medium">GitHub</span>
            </a>
            
            <a 
              href="https://scholar.google.com/citations?hl=fr&user=jYIZGT0AAAAJ" 
              target="_blank" 
              rel="noopener" 
              class="flex items-center justify-center gap-3 p-4 bg-blue-600/20 hover:bg-blue-600/30 text-blue-300 hover:text-white rounded-xl transition-all duration-300 hover:-translate-y-1 focus-ring group"
            >
              <GoogleScholar size={20} className="icon-sm" title="Google Scholar" />
              <span class="text-scale-sm font-medium">Scholar</span>
            </a>
            
            <a 
              href="https://orcid.org/0000-0002-7393-6200" 
              target="_blank" 
              rel="noopener" 
              class="flex items-center justify-center gap-3 p-4 bg-green-600/20 hover:bg-green-600/30 text-green-300 hover:text-white rounded-xl transition-all duration-300 hover:-translate-y-1 focus-ring group"
            >
              <ORCID size={20} className="icon-sm" title="ORCID" />
              <span class="text-scale-sm font-medium">ORCID</span>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  /* Remove any custom styles that conflict with design tokens */
  .card-subtle:focus-within {
    outline: 2px solid var(--accent-red);
    outline-offset: 2px;
  }
  
  /* High contrast mode support */
  @media (prefers-contrast: high) {
    .card-subtle {
      background-color: #000;
      border-color: #fff;
    }
  }
  
  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    * {
      transition: none !important;
      transform: none !important;
    }
  }
</style>