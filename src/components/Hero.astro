---
import type { Lang } from '../types';

export interface Props {
  lang: Lang;
  strings: any;
}

const { lang, strings } = Astro.props;
---

<section class="col-span-12 min-h-screen flex items-center justify-center text-center py-20">
  <div class="max-w-4xl px-4">
    <h1 class="font-sans text-display-lg lg:text-display-xl text-balance mb-6 text-body-text">
      {strings.hero.name}
    </h1>
    
    <div class="w-24 h-1 bg-accent-yellow mx-auto mb-8 rounded-full"></div>
    
    <h2 class="text-heading-xl lg:text-display-sm text-text-muted mb-6 text-balance font-sans">
      {strings.hero.title}
    </h2>
    
    <p class="text-body-lg lg:text-body-xl text-text-muted mb-12 max-w-prose mx-auto leading-relaxed text-justify">
      {strings.hero.tagline}
    </p>
    
    <div class="flex flex-col sm:flex-row gap-4 justify-center mb-12">
      <a 
        href="#research" 
        class="btn-primary"
        aria-label="Explore research section"
      >
        {strings.hero.cta_research}
      </a>
      <a 
        href="#contact" 
        class="btn-secondary"
        aria-label="Go to contact section"
      >
        {strings.hero.cta_contact}
      </a>
    </div>
    
    <!-- Research Impact Statistics -->
    <div class="grid grid-cols-1 sm:grid-cols-3 gap-6 mt-16 pt-8 border-t border-border">
      <div class="text-center">
        <div class="text-display-sm font-bold text-accent-yellow mb-2">16+</div>
        <div class="text-body-md text-text-muted">Publications</div>
      </div>
      <div class="text-center">
        <div class="text-display-sm font-bold text-accent-yellow mb-2">250+</div>
        <div class="text-body-md text-text-muted">Citations</div>
      </div>
      <div class="text-center">
        <div class="text-display-sm font-bold text-accent-yellow mb-2">3</div>
        <div class="text-body-md text-text-muted">Patents</div>
      </div>
    </div>
  </div>
</section>

<style>
  /* Reduced motion support */
  @media (prefers-reduced-motion: no-preference) {
    h1 {
      animation: fade-in-up 0.8s ease-out;
    }
    
    h2 {
      animation: fade-in-up 0.8s ease-out 0.2s both;
    }
    
    p {
      animation: fade-in-up 0.8s ease-out 0.4s both;
    }
    
    .flex {
      animation: fade-in-up 0.8s ease-out 0.6s both;
    }
  }
</style>