{
  "name": "portfolio",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "npm run generate:sitemap && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "deploy": "gh-pages -d dist",
    "check:types": "astro check",
    "lint": "eslint src --ext .js,.ts,.astro,.tsx",
    "lint:fix": "eslint src --ext .js,.ts,.astro,.tsx --fix",
    "format": "prettier --write src/**/*.{js,ts,astro,tsx,json,md}",
    "generate:sitemap": "node scripts/generate-sitemap.js",
    "test": "echo \"Tests to be implemented\"",
    "prepare": "husky install",
    "preflight": "npm run check:types && npm run lint && npm run build",
    "preflight:verbose": "echo '🔍 Running type checks...' && npm run check:types && echo '🔎 Running linter...' && npm run lint && echo '🗺️  Generating sitemap...' && npm run generate:sitemap && echo '🏗️  Building project...' && npm run build && echo '✅ All preflight checks passed!'",
    "preflight:fix": "npm run check:types && npm run lint:fix && npm run build"
  },
  "dependencies": {
    "@astrojs/react": "^4.3.0",
    "astro": "^5.12.3",
    "d3": "^7.9.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.4",
    "@typescript-eslint/eslint-plugin": "^8.14.0",
    "@typescript-eslint/parser": "^8.14.0",
    "eslint": "^9.14.0",
    "eslint-plugin-astro": "^1.3.1",
    "gh-pages": "^6.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "prettier": "^3.3.3",
    "prettier-plugin-astro": "^0.14.1",
    "typescript": "^5.6.3"
  },
  "lint-staged": {
    "src/**/*.{js,ts,astro,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "src/**/*.{json,md}": [
      "prettier --write"
    ]
  }
}
